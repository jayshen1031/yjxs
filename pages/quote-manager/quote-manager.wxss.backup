  padding: 30rpx;
  border-bottom: 2rpx solid #f1f5f9;
}

.setting-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 2rpx solid #f8fafc;
}

.setting-item:last-child {
  border-bottom: none;
}

.setting-label {
  font-size: 28rpx;
  color: #374151;
}

.setting-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #374151;
  margin-bottom: 20rpx;
}

.category-checkboxes {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.checkbox-item {
  display: flex;
  align-items: center;
  gap: 10rpx;
  padding: 16rpx 20rpx;
  background: #f8fafc;
  border-radius: 12rpx;
