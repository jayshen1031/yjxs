/* 主容器 */
.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #f8fafc 0%, #e2e8f0 100%);
  padding: 20rpx;
  padding-bottom: 100rpx;
}

/* 头部统计区 */
.header-section {
  margin-bottom: 30rpx;
}

.stats-card {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
  margin-bottom: 20rpx;
}

.stats-row {
  display: flex;
  justify-content: space-between;
}

.stat-item {
  text-align: center;
  flex: 1;
}

.stat-number {
  font-size: 36rpx;
  font-weight: bold;
  color: #6366f1;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #64748b;
}

.quick-actions {
  display: flex;
  gap: 20rpx;
}

.action-btn {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 10rpx;
  padding: 20rpx;
  border-radius: 15rpx;
  font-size: 28rpx;
  border: none;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.action-btn.primary {
  background: linear-gradient(45deg, #6366f1, #8b5cf6);
  color: white;
}

.action-btn.secondary {
  background: white;
  color: #6366f1;
  border: 2rpx solid #e2e8f0;
}

.action-btn .icon {
  font-size: 32rpx;
}

/* 当前箴言区 */
.current-quote-section {
  margin-bottom: 30rpx;
}

.section-title {
  display: flex;
  align-items: center;
  gap: 10rpx;
  font-size: 32rpx;
  font-weight: bold;
  color: #1f2937;
  margin-bottom: 20rpx;
}

.section-title .icon {
  font-size: 36rpx;
}

.current-quote-card {
  background: linear-gradient(135deg, #6366f1, #8b5cf6);
  color: white;
  padding: 40rpx;
  border-radius: 20rpx;
  box-shadow: 0 8rpx 30rpx rgba(99, 102, 241, 0.3);
}

.quote-content {
  font-size: 32rpx;
  line-height: 1.6;
  margin-bottom: 20rpx;
  text-align: center;
}

.quote-meta {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.category-tag {
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  color: white;
  background: rgba(255, 255, 255, 0.2);
}

.usage-count {
  font-size: 24rpx;
  opacity: 0.8;
}

.favorite-btn {
  padding: 10rpx;
}

.heart {
  font-size: 36rpx;
  opacity: 0.5;
  transition: all 0.3s ease;
}

.heart.favorite {
  opacity: 1;
  transform: scale(1.2);
}

/* 筛选区 */
.filter-section {
  margin-bottom: 30rpx;
}

.search-box {
  position: relative;
  margin-bottom: 20rpx;
}

.search-input {
  width: 100%;
  padding: 20rpx 60rpx 20rpx 20rpx;
  background: white;
  border-radius: 15rpx;
  font-size: 28rpx;
  border: 2rpx solid #e2e8f0;
  box-sizing: border-box;
}

.search-icon {
  position: absolute;
  right: 20rpx;
  top: 50%;
  transform: translateY(-50%);
  font-size: 32rpx;
  color: #9ca3af;
}

.category-filter {
  display: flex;
  white-space: nowrap;
  gap: 20rpx;
}

.filter-item {
  padding: 16rpx 24rpx;
  background: white;
  border-radius: 20rpx;
  font-size: 26rpx;
  color: #64748b;
  border: 2rpx solid #e2e8f0;
  white-space: nowrap;
}

.filter-item.active {
  background: #6366f1;
  color: white;
  border-color: #6366f1;
}

.filter-item-wrapper {
  display: flex;
  align-items: center;
  gap: 8rpx;
  white-space: nowrap;
}

.filter-action {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #f59e0b, #d97706);
  color: white;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(245, 158, 11, 0.3);
  transition: all 0.3s ease;
}

.filter-action:active {
  transform: scale(0.95);
  box-shadow: 0 1rpx 4rpx rgba(245, 158, 11, 0.4);
}

/* 箴言列表区 */
.quotes-section {
  flex: 1;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.sort-options .sort-btn {
  display: flex;
  align-items: center;
  gap: 10rpx;
  padding: 16rpx 20rpx;
  background: white;
  border-radius: 15rpx;
  font-size: 26rpx;
  color: #64748b;
  border: 2rpx solid #e2e8f0;
}

.arrow {
  font-size: 20rpx;
}

.quotes-list {
  max-height: 800rpx;
}

.quote-item {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 15rpx rgba(0, 0, 0, 0.08);
  border-left: 6rpx solid #e2e8f0;
  transition: all 0.3s ease;
}

.quote-item.favorite {
  border-left-color: #ef4444;
  box-shadow: 0 4rpx 20rpx rgba(239, 68, 68, 0.2);
}

.quote-text {
  font-size: 30rpx;
  line-height: 1.6;
  color: #1f2937;
  margin-bottom: 20rpx;
}

.quote-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 10rpx;
  margin-bottom: 20rpx;
}

.tag {
  padding: 6rpx 12rpx;
  background: #f1f5f9;
  color: #64748b;
  border-radius: 12rpx;
  font-size: 22rpx;
}

.quote-meta-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.quote-info {
  display: flex;
  align-items: center;
  gap: 20rpx;
  flex: 1;
}

.category-tag {
  padding: 6rpx 12rpx;
  border-radius: 12rpx;
  font-size: 22rpx;
  color: white;
}

/* 分类颜色 - 已在全局app.wxss中定义 */

.source-info, .usage-info {
  font-size: 22rpx;
  color: #9ca3af;
}

.quote-actions {
  display: flex;
  gap: 20rpx;
}

.action-icon {
  padding: 10rpx;
  font-size: 32rpx;
  cursor: pointer;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 100rpx 40rpx;
  color: #9ca3af;
}

.empty-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
  display: block;
}

.empty-text {
  font-size: 28rpx;
  margin-bottom: 30rpx;
  display: block;
}

.empty-action {
  background: #6366f1;
  color: white;
  border: none;
  padding: 20rpx 40rpx;
  border-radius: 15rpx;
  font-size: 28rpx;
}

/* 弹窗样式 - 美化升级 ⭐⭐⭐ */
.modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.65);
  backdrop-filter: blur(12rpx);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
  opacity: 0;
  visibility: hidden;
  transition: all 0.35s cubic-bezier(0.34, 1.56, 0.64, 1);
}

.modal.show {
  opacity: 1;
  visibility: visible;
}

.modal.show .modal-content {
  transform: scale(1) translateY(0);
  opacity: 1;
}

.modal-content {
  background: linear-gradient(145deg, #ffffff 0%, #fafbfc 50%, #f8f9fa 100%);
  margin: 40rpx;
  border-radius: 36rpx;
  max-height: 85vh;
  overflow-y: auto;
  width: calc(100% - 80rpx);
  max-width: 660rpx;
  box-shadow:
    0 32rpx 80rpx rgba(99, 102, 241, 0.25),
    0 16rpx 40rpx rgba(0, 0, 0, 0.15),
    0 0 0 1rpx rgba(255, 255, 255, 0.8) inset;
  transform: scale(0.85) translateY(60rpx);
  opacity: 0;
  transition: all 0.4s cubic-bezier(0.34, 1.56, 0.64, 1);
  position: relative;
}

.modal-content::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 200rpx;
  background: linear-gradient(180deg, rgba(99, 102, 241, 0.05), transparent);
  border-radius: 36rpx 36rpx 0 0;
  pointer-events: none;
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 48rpx 40rpx 36rpx;
  border-bottom: none;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 50%, #8b5cf6 100%);
  border-radius: 36rpx 36rpx 0 0;
  position: relative;
  overflow: hidden;
}

.modal-header::before {
  content: '';
  position: absolute;
  top: -50%;
  right: -40%;
  width: 250%;
  height: 250%;
  background: radial-gradient(
    circle at center,
    rgba(255, 255, 255, 0.15) 0%,
    rgba(255, 255, 255, 0.08) 30%,
    transparent 70%
  );
  animation: shimmer 4s ease-in-out infinite;
}

.modal-header::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 2rpx;
  background: linear-gradient(
    90deg,
    transparent,
    rgba(255, 255, 255, 0.3) 20%,
    rgba(255, 255, 255, 0.3) 80%,
    transparent
  );
}

@keyframes shimmer {
  0%, 100% {
    transform: rotate(0deg) scale(1);
    opacity: 1;
  }
  50% {
    transform: rotate(180deg) scale(1.1);
    opacity: 0.8;
  }
}

.modal-title {
  font-size: 38rpx;
  font-weight: 700;
  color: white;
  position: relative;
  z-index: 1;
  display: flex;
  align-items: center;
  gap: 16rpx;
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.2);
  letter-spacing: 1rpx;
}

.modal-title::before {
  content: '✨';
  font-size: 44rpx;
  animation: sparkle 2s ease-in-out infinite;
}

@keyframes sparkle {
  0%, 100% {
    transform: rotate(0deg) scale(1);
  }
  25% {
    transform: rotate(-15deg) scale(1.1);
  }
  75% {
    transform: rotate(15deg) scale(1.1);
  }
}

.close-btn {
  font-size: 44rpx;
  color: white;
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.18);
  backdrop-filter: blur(8rpx);
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s cubic-bezier(0.34, 1.56, 0.64, 1);
  position: relative;
  z-index: 1;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.15);
}

.close-btn:active {
  transform: scale(0.85) rotate(90deg);
  background: rgba(255, 255, 255, 0.3);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.2);
}

/* 表单样式 - 优化升级 ⭐⭐⭐ */
.form-group {
  padding: 32rpx 44rpx;
  border-bottom: none;
  position: relative;
  animation: fadeInUp 0.4s ease-out backwards;
}

.form-group:nth-child(1) { animation-delay: 0.05s; }
.form-group:nth-child(2) { animation-delay: 0.1s; }
.form-group:nth-child(3) { animation-delay: 0.15s; }
.form-group:nth-child(4) { animation-delay: 0.2s; }

@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.form-group::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: calc(100% - 80rpx);
  height: 1rpx;
  background: linear-gradient(
    90deg,
    transparent 0%,
    rgba(99, 102, 241, 0.1) 20%,
    rgba(99, 102, 241, 0.2) 50%,
    rgba(99, 102, 241, 0.1) 80%,
    transparent 100%
  );
}

.form-group:last-of-type::after {
  display: none;
}

.form-label {
  display: flex;
  align-items: center;
  gap: 12rpx;
  font-size: 30rpx;
  color: #1f2937;
  margin-bottom: 24rpx;
  font-weight: 600;
}

.form-label::before {
  content: '◆';
  color: #8b5cf6;
  font-size: 28rpx;
  animation: pulse 2s ease-in-out infinite;
}

@keyframes pulse {
  0%, 100% {
    opacity: 1;
    transform: scale(1);
  }
  50% {
    opacity: 0.6;
    transform: scale(0.9);
  }
}

.form-input, .form-textarea {
  width: 100%;
  padding: 26rpx 24rpx;
  border: 2rpx solid #e2e8f0;
  border-radius: 18rpx;
  font-size: 28rpx;
  line-height: 1.6;
  min-height: 80rpx;
  background: white;
  box-sizing: border-box;
  transition: all 0.35s cubic-bezier(0.4, 0, 0.2, 1);
  box-shadow:
    0 2rpx 8rpx rgba(0, 0, 0, 0.04),
    0 0 0 0 rgba(99, 102, 241, 0);
  position: relative;
}

/* placeholder样式优化 - 使用placeholder-class */
.input-placeholder {
  color: #9ca3af !important;
  font-size: 26rpx !important;
  line-height: 1.5 !important;
}

.form-input:focus, .form-textarea:focus {
  border-color: #8b5cf6;
  background: #fefefe;
  box-shadow:
    0 8rpx 24rpx rgba(99, 102, 241, 0.12),
    0 0 0 4rpx rgba(139, 92, 246, 0.1);
  transform: translateY(-4rpx);
  outline: none;
}

.form-textarea {
  min-height: 200rpx;
  max-height: 400rpx;
  resize: none;
  line-height: 1.6;
  padding: 24rpx 20rpx;
}

.char-count {
  text-align: right;
  font-size: 24rpx;
  color: #9ca3af;
  margin-top: 12rpx;
  font-weight: 500;
  transition: color 0.3s ease;
}

.form-input:focus + .char-count,
.form-textarea:focus + .char-count {
  color: #8b5cf6;
}

.picker-input {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 20rpx;
  min-height: 88rpx;
  border: 2rpx solid #e2e8f0;
  border-radius: 18rpx;
  background: white;
  font-size: 28rpx;
  line-height: 1.5;
  box-shadow:
    0 2rpx 8rpx rgba(0, 0, 0, 0.04),
    0 0 0 0 rgba(99, 102, 241, 0);
  transition: all 0.35s cubic-bezier(0.4, 0, 0.2, 1);
  color: #374151;
  box-sizing: border-box;
}

.picker-input text {
  flex: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.picker-input:active {
  border-color: #8b5cf6;
  background: #fefefe;
  box-shadow:
    0 8rpx 24rpx rgba(99, 102, 241, 0.12),
    0 0 0 4rpx rgba(139, 92, 246, 0.1);
  transform: translateY(-4rpx);
}

.form-actions {
  display: flex;
  gap: 28rpx;
  padding: 44rpx;
  background: linear-gradient(180deg, transparent 0%, rgba(248, 250, 252, 0.8) 100%);
  border-radius: 0 0 36rpx 36rpx;
}

.btn-cancel, .btn-confirm {
  flex: 1;
  padding: 32rpx 24rpx;
  border-radius: 20rpx;
  font-size: 32rpx;
  border: none;
  font-weight: 600;
  transition: all 0.35s cubic-bezier(0.34, 1.56, 0.64, 1);
  position: relative;
  overflow: hidden;
  letter-spacing: 1rpx;
}

.btn-cancel {
  background: white;
  color: #6b7280;
  border: 2rpx solid #e5e7eb;
  box-shadow:
    0 4rpx 12rpx rgba(0, 0, 0, 0.06),
    inset 0 1rpx 0 rgba(255, 255, 255, 0.5);
}

.btn-cancel::after {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  width: 0;
  height: 0;
  border-radius: 50%;
  background: rgba(107, 114, 128, 0.1);
  transform: translate(-50%, -50%);
  transition: width 0.4s ease, height 0.4s ease;
}

.btn-cancel:active::after {
  width: 200%;
  height: 200%;
}

.btn-cancel:active {
  background: #f9fafb;
  transform: scale(0.96);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
}

.btn-confirm {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 50%, #8b5cf6 100%);
  color: white;
  box-shadow:
    0 12rpx 32rpx rgba(99, 102, 241, 0.4),
    0 4rpx 12rpx rgba(139, 92, 246, 0.3),
    inset 0 1rpx 0 rgba(255, 255, 255, 0.3);
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.15);
}

.btn-confirm::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(
    90deg,
    transparent 0%,
    rgba(255, 255, 255, 0.4) 50%,
    transparent 100%
  );
  transition: left 0.7s cubic-bezier(0.4, 0, 0.2, 1);
}

.btn-confirm::after {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  width: 0;
  height: 0;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.3);
  transform: translate(-50%, -50%);
  transition: width 0.5s ease, height 0.5s ease;
}

.btn-confirm:active::after {
  width: 200%;
  height: 200%;
}

.btn-confirm:active {
  transform: scale(0.96);
  box-shadow:
    0 6rpx 20rpx rgba(99, 102, 241, 0.45),
    0 2rpx 8rpx rgba(139, 92, 246, 0.35);
}

.btn-confirm:active::before {
  left: 100%;
}

.btn-confirm[disabled] {
  background: linear-gradient(135deg, #d1d5db 0%, #9ca3af 100%);
  color: rgba(255, 255, 255, 0.7);
  opacity: 0.6;
  box-shadow: none;
  text-shadow: none;
  cursor: not-allowed;
}

.btn-confirm[disabled]::before,
.btn-confirm[disabled]::after {
  display: none;
}

.btn-confirm.full-width {
  width: 100%;
}

