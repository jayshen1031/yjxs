/* 主容器 */
.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #f8fafc 0%, #e2e8f0 100%);
  padding: 20rpx;
  padding-bottom: 100rpx;
}

/* 头部统计区 */
.header-section {
  margin-bottom: 30rpx;
}

.stats-card {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
  margin-bottom: 20rpx;
}

.stats-row {
  display: flex;
  justify-content: space-between;
}

.stat-item {
  text-align: center;
  flex: 1;
}

.stat-number {
  font-size: 36rpx;
  font-weight: bold;
  color: #6366f1;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #64748b;
}

.quick-actions {
  display: flex;
  gap: 20rpx;
}

.action-btn {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 10rpx;
  padding: 20rpx;
  border-radius: 15rpx;
  font-size: 28rpx;
  border: none;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.action-btn.primary {
  background: linear-gradient(45deg, #6366f1, #8b5cf6);
  color: white;
}

.action-btn.secondary {
  background: white;
  color: #6366f1;
  border: 2rpx solid #e2e8f0;
}

.action-btn .icon {
  font-size: 32rpx;
}

/* 当前箴言区 */
.current-quote-section {
  margin-bottom: 30rpx;
}

.section-title {
  display: flex;
  align-items: center;
  gap: 10rpx;
  font-size: 32rpx;
  font-weight: bold;
  color: #1f2937;
  margin-bottom: 20rpx;
}

.section-title .icon {
  font-size: 36rpx;
}

.current-quote-card {
  background: linear-gradient(135deg, #6366f1, #8b5cf6);
  color: white;
  padding: 40rpx;
  border-radius: 20rpx;
  box-shadow: 0 8rpx 30rpx rgba(99, 102, 241, 0.3);
}

.quote-content {
  font-size: 32rpx;
  line-height: 1.6;
  margin-bottom: 20rpx;
  text-align: center;
}

.quote-meta {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.category-tag {
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  color: white;
  background: rgba(255, 255, 255, 0.2);
}

.usage-count {
  font-size: 24rpx;
  opacity: 0.8;
}

.favorite-btn {
  padding: 10rpx;
}

.heart {
  font-size: 36rpx;
  opacity: 0.5;
  transition: all 0.3s ease;
}

.heart.favorite {
  opacity: 1;
  transform: scale(1.2);
}

/* 筛选区 */
.filter-section {
  margin-bottom: 30rpx;
}

.search-box {
  position: relative;
  margin-bottom: 20rpx;
}

.search-input {
  width: 100%;
  padding: 20rpx 60rpx 20rpx 20rpx;
  background: white;
  border-radius: 15rpx;
  font-size: 28rpx;
  border: 2rpx solid #e2e8f0;
  box-sizing: border-box;
}

.search-icon {
  position: absolute;
  right: 20rpx;
  top: 50%;
  transform: translateY(-50%);
  font-size: 32rpx;
  color: #9ca3af;
}

.category-filter {
  display: flex;
  white-space: nowrap;
  gap: 20rpx;
}

.filter-item {
  padding: 16rpx 24rpx;
  background: white;
  border-radius: 20rpx;
  font-size: 26rpx;
  color: #64748b;
  border: 2rpx solid #e2e8f0;
  white-space: nowrap;
}

.filter-item.active {
  background: #6366f1;
  color: white;
  border-color: #6366f1;
}

.filter-item-wrapper {
  display: flex;
  align-items: center;
  gap: 8rpx;
  white-space: nowrap;
}

.filter-action {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #f59e0b, #d97706);
  color: white;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(245, 158, 11, 0.3);
  transition: all 0.3s ease;
}

.filter-action:active {
  transform: scale(0.95);
  box-shadow: 0 1rpx 4rpx rgba(245, 158, 11, 0.4);
}

/* 箴言列表区 */
.quotes-section {
  flex: 1;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.sort-options .sort-btn {
  display: flex;
  align-items: center;
  gap: 10rpx;
  padding: 16rpx 20rpx;
  background: white;
  border-radius: 15rpx;
  font-size: 26rpx;
  color: #64748b;
  border: 2rpx solid #e2e8f0;
}

.arrow {
  font-size: 20rpx;
}

.quotes-list {
  max-height: 800rpx;
}

.quote-item {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 15rpx rgba(0, 0, 0, 0.08);
  border-left: 6rpx solid #e2e8f0;
  transition: all 0.3s ease;
}

.quote-item.favorite {
  border-left-color: #ef4444;
  box-shadow: 0 4rpx 20rpx rgba(239, 68, 68, 0.2);
}

.quote-text {
  font-size: 30rpx;
  line-height: 1.6;
  color: #1f2937;
  margin-bottom: 20rpx;
}

.quote-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 10rpx;
  margin-bottom: 20rpx;
}

.tag {
  padding: 6rpx 12rpx;
  background: #f1f5f9;
  color: #64748b;
  border-radius: 12rpx;
  font-size: 22rpx;
}

.quote-meta-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.quote-info {
  display: flex;
  align-items: center;
  gap: 20rpx;
  flex: 1;
}

.category-tag {
  padding: 6rpx 12rpx;
  border-radius: 12rpx;
  font-size: 22rpx;
  color: white;
}

/* 分类颜色 - 已在全局app.wxss中定义 */

.source-info, .usage-info {
  font-size: 22rpx;
  color: #9ca3af;
}

.quote-actions {
  display: flex;
  gap: 20rpx;
}

.action-icon {
  padding: 10rpx;
  font-size: 32rpx;
  cursor: pointer;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 100rpx 40rpx;
  color: #9ca3af;
}

.empty-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
  display: block;
}

.empty-text {
  font-size: 28rpx;
  margin-bottom: 30rpx;
  display: block;
}

.empty-action {
  background: #6366f1;
  color: white;
  border: none;
  padding: 20rpx 40rpx;
  border-radius: 15rpx;
  font-size: 28rpx;
}

/* 弹窗样式 */
.modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
  opacity: 0;
  visibility: hidden;
  transition: all 0.3s ease;
}

.modal.show {
  opacity: 1;
  visibility: visible;
}

.modal-content {
  background: white;
  margin: 40rpx;
  border-radius: 20rpx;
  max-height: 80vh;
  overflow-y: auto;
  width: calc(100% - 80rpx);
  max-width: 600rpx;
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 2rpx solid #f1f5f9;
}

.modal-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #1f2937;
}

.close-btn {
  font-size: 40rpx;
  color: #9ca3af;
  cursor: pointer;
}

/* 表单样式 */
.form-group {
  padding: 20rpx 30rpx;
  border-bottom: 2rpx solid #f8fafc;
}

.form-label {
  display: block;
  font-size: 28rpx;
  color: #374151;
  margin-bottom: 16rpx;
  font-weight: 500;
}

.form-input, .form-textarea {
  width: 100%;
  padding: 20rpx;
  border: 2rpx solid #e5e7eb;
  border-radius: 12rpx;
  font-size: 28rpx;
  background: #f9fafb;
  box-sizing: border-box;
}

.form-textarea {
  min-height: 120rpx;
  resize: none;
}

.char-count {
  text-align: right;
  font-size: 24rpx;
  color: #9ca3af;
  margin-top: 8rpx;
}

.picker-input {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  border: 2rpx solid #e5e7eb;
  border-radius: 12rpx;
  background: #f9fafb;
  font-size: 28rpx;
}

.form-actions {
  display: flex;
  gap: 20rpx;
  padding: 30rpx;
}

.btn-cancel, .btn-confirm {
  flex: 1;
  padding: 24rpx;
  border-radius: 12rpx;
  font-size: 28rpx;
  border: none;
}

.btn-cancel {
  background: #f3f4f6;
  color: #6b7280;
}

.btn-confirm {
  background: #6366f1;
  color: white;
}

.btn-confirm[disabled] {
  background: #d1d5db;
  color: #9ca3af;
}

.btn-confirm.full-width {
  width: 100%;
}

/* 设置样式 */
.settings-group {
  padding: 30rpx;
  border-bottom: 2rpx solid #f1f5f9;
}

.setting-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 2rpx solid #f8fafc;
}

.setting-item:last-child {
  border-bottom: none;
}

.setting-label {
  font-size: 28rpx;
  color: #374151;
}

.setting-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #374151;
  margin-bottom: 20rpx;
}

.category-checkboxes {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.checkbox-item {
  display: flex;
  align-items: center;
  gap: 10rpx;
  padding: 16rpx 20rpx;
  background: #f8fafc;
  border-radius: 12rpx;
  border: 2rpx solid #e2e8f0;
}

.checkbox {
  font-size: 28rpx;
  color: #6366f1;
}

.checkbox.checked {
  color: #6366f1;
}

.checkbox-label {
  font-size: 26rpx;
  color: #374151;
}