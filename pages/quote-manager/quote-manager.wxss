/* 容器 */
.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #f5f7fa 0%, #e8ecf1 100%);
  padding: 20rpx;
  padding-bottom: 100rpx;
}

/* 统计卡片区域 */
.stats-section {
  display: flex;
  gap: 16rpx;
  margin-bottom: 24rpx;
}

.stat-card {
  flex: 1;
  background: white;
  border-radius: 16rpx;
  padding: 20rpx 16rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 6rpx;
}

.stat-icon {
  font-size: 40rpx;
}

.stat-info {
  text-align: center;
}

.stat-number {
  font-size: 36rpx;
  font-weight: 700;
  color: #1f2937;
}

.stat-label {
  font-size: 22rpx;
  color: #6b7280;
}

/* 当前箴言卡片 */
.current-quote-card {
  background: linear-gradient(135deg, #6366f1 0%, #8b5cf6 100%);
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 8rpx 24rpx rgba(99, 102, 241, 0.3);
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.card-title {
  font-size: 28rpx;
  font-weight: 600;
  color: white;
}

.card-actions {
  display: flex;
  gap: 16rpx;
}

.action-icon {
  font-size: 32rpx;
  cursor: pointer;
  transition: transform 0.2s;
}

.action-icon:active {
  transform: scale(0.9);
}

.quote-content-large {
  font-size: 32rpx;
  line-height: 1.6;
  color: white;
  margin-bottom: 20rpx;
  min-height: 60rpx;
}

.quote-footer {
  display: flex;
  gap: 16rpx;
  align-items: center;
  flex-wrap: wrap;
  font-size: 24rpx;
}

.category-badge {
  padding: 6rpx 16rpx;
  border-radius: 12rpx;
  font-size: 22rpx;
  font-weight: 500;
  background: rgba(255, 255, 255, 0.2);
  color: white;
}

.quote-source,
.quote-usage {
  color: rgba(255, 255, 255, 0.8);
}

/* Tab栏 */
.tab-bar {
  display: flex;
  background: white;
  border-radius: 16rpx;
  padding: 8rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}

.tab-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
  padding: 16rpx;
  border-radius: 12rpx;
  transition: all 0.3s;
}

.tab-item.active {
  background: linear-gradient(135deg, #6366f1 0%, #8b5cf6 100%);
}

.tab-icon {
  font-size: 32rpx;
  transition: transform 0.3s;
}

.tab-item.active .tab-icon {
  transform: scale(1.1);
}

.tab-label {
  font-size: 24rpx;
  color: #6b7280;
  font-weight: 500;
}

.tab-item.active .tab-label {
  color: white;
}

/* 筛选栏 */
.filter-bar {
  display: flex;
  gap: 16rpx;
  margin-bottom: 20rpx;
}

.search-box {
  flex: 1;
  position: relative;
  display: flex;
  align-items: center;
  background: white;
  border-radius: 24rpx;
  padding: 0 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.search-icon {
  font-size: 28rpx;
  color: #9ca3af;
  margin-right: 12rpx;
}

.search-input {
  flex: 1;
  height: 72rpx;
  font-size: 26rpx;
}

.filter-btn {
  position: relative;
  background: white;
  border-radius: 24rpx;
  padding: 0 28rpx;
  height: 72rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 26rpx;
  font-weight: 500;
  color: #374151;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.filter-count {
  position: absolute;
  top: -8rpx;
  right: -8rpx;
  background: #ef4444;
  color: white;
  font-size: 20rpx;
  width: 32rpx;
  height: 32rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.add-btn {
  background: linear-gradient(135deg, #6366f1 0%, #8b5cf6 100%);
  color: white;
  border-radius: 24rpx;
  width: 72rpx;
  height: 72rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
  box-shadow: 0 4rpx 12rpx rgba(99, 102, 241, 0.3);
}

/* 分类滚动条 */
.category-scroll {
  white-space: nowrap;
  margin-bottom: 20rpx;
}

.category-chip {
  display: inline-block;
  padding: 12rpx 24rpx;
  margin-right: 16rpx;
  background: white;
  border-radius: 20rpx;
  font-size: 24rpx;
  color: #374151;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  transition: all 0.3s;
}

.category-chip.active {
  background: linear-gradient(135deg, #6366f1 0%, #8b5cf6 100%);
  color: white;
  box-shadow: 0 4rpx 12rpx rgba(99, 102, 241, 0.3);
}

.chip-count {
  margin-left: 8rpx;
  opacity: 0.7;
}

/* 箴言列表滚动区域 */
.quotes-scroll {
  height: calc(100vh - 600rpx);
}

/* 箴言卡片 */
.quote-card {
  background: white;
  border-radius: 20rpx;
  padding: 28rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
  transition: transform 0.2s, box-shadow 0.2s;
}

.quote-card:active {
  transform: translateY(-2rpx);
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
}

.source-badge {
  padding: 6rpx 16rpx;
  border-radius: 12rpx;
  font-size: 20rpx;
  font-weight: 500;
}

.source-badge.notion {
  background: linear-gradient(135deg, #06b6d4 0%, #0891b2 100%);
  color: white;
}

.source-badge.local {
  background: linear-gradient(135deg, #f59e0b 0%, #d97706 100%);
  color: white;
}

.quote-text {
  font-size: 30rpx;
  line-height: 1.6;
  color: #1f2937;
  margin: 16rpx 0;
}

.quote-meta {
  display: flex;
  gap: 12rpx;
  align-items: center;
  flex-wrap: wrap;
  margin-bottom: 12rpx;
}

.tags-wrapper {
  display: flex;
  gap: 8rpx;
  flex-wrap: wrap;
}

.tag {
  padding: 4rpx 12rpx;
  background: #f3f4f6;
  border-radius: 8rpx;
  font-size: 22rpx;
  color: #6b7280;
}

.card-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-top: 12rpx;
  border-top: 1rpx solid #f3f4f6;
  font-size: 22rpx;
  color: #9ca3af;
}

.time-text,
.usage-text,
.source-text {
  font-size: 22rpx;
  color: #9ca3af;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80rpx 40rpx;
  text-align: center;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 24rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 28rpx;
  color: #6b7280;
  margin-bottom: 12rpx;
}

.empty-hint {
  font-size: 24rpx;
  color: #9ca3af;
  margin-bottom: 24rpx;
}

.empty-btn {
  background: linear-gradient(135deg, #6366f1 0%, #8b5cf6 100%);
  color: white;
  border-radius: 24rpx;
  padding: 16rpx 40rpx;
  font-size: 26rpx;
  border: none;
}

/* 模态框 */
.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: none;
  z-index: 1000;
}

.modal-mask.show {
  display: flex;
  align-items: center;
  justify-content: center;
  animation: fadeIn 0.3s;
}

.modal-dialog {
  width: 90%;
  max-width: 600rpx;
  max-height: 80vh;
  background: white;
  border-radius: 24rpx;
  overflow: hidden;
  animation: slideUp 0.3s;
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx;
  border-bottom: 1rpx solid #f3f4f6;
}

.modal-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1f2937;
}

.close-icon {
  font-size: 40rpx;
  color: #9ca3af;
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  cursor: pointer;
}

.modal-body {
  padding: 32rpx;
  max-height: 60vh;
  overflow-y: auto;
}

.modal-footer {
  display: flex;
  gap: 16rpx;
  padding: 24rpx 32rpx;
  border-top: 1rpx solid #f3f4f6;
}

/* 表单 */
.form-item {
  margin-bottom: 28rpx;
}

.form-label {
  font-size: 26rpx;
  font-weight: 500;
  color: #374151;
  margin-bottom: 12rpx;
  display: block;
}

.required {
  color: #ef4444;
}

.form-hint {
  color: #9ca3af;
  font-weight: normal;
  font-size: 22rpx;
}

.form-textarea {
  width: 100%;
  min-height: 200rpx;
  padding: 16rpx;
  background: #f9fafb;
  border: 1rpx solid #e5e7eb;
  border-radius: 12rpx;
  font-size: 28rpx;
  line-height: 1.6;
  color: #1f2937;
}

.form-input {
  width: 100%;
  height: 72rpx;
  padding: 0 16rpx;
  background: #f9fafb;
  border: 1rpx solid #e5e7eb;
  border-radius: 12rpx;
  font-size: 26rpx;
}

.form-picker {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 72rpx;
  padding: 0 16rpx;
  background: #f9fafb;
  border: 1rpx solid #e5e7eb;
  border-radius: 12rpx;
  font-size: 26rpx;
}

.picker-arrow {
  color: #9ca3af;
}

.char-hint {
  text-align: right;
  font-size: 22rpx;
  color: #9ca3af;
  margin-top: 8rpx;
}

.tags-preview {
  display: flex;
  gap: 8rpx;
  flex-wrap: wrap;
  margin-top: 12rpx;
}

.tag-preview {
  padding: 6rpx 12rpx;
  background: #e0e7ff;
  border-radius: 8rpx;
  font-size: 22rpx;
  color: #6366f1;
}

/* 筛选相关 */
.filter-section {
  margin-bottom: 32rpx;
}

.filter-title {
  font-size: 26rpx;
  font-weight: 600;
  color: #374151;
  margin-bottom: 16rpx;
}

.filter-chips {
  display: flex;
  gap: 12rpx;
  flex-wrap: wrap;
}

.filter-chip {
  padding: 12rpx 24rpx;
  background: #f3f4f6;
  border-radius: 20rpx;
  font-size: 24rpx;
  color: #374151;
  transition: all 0.3s;
}

.filter-chip.active {
  background: linear-gradient(135deg, #6366f1 0%, #8b5cf6 100%);
  color: white;
}

/* 按钮 */
.btn {
  flex: 1;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 16rpx;
  font-size: 28rpx;
  font-weight: 500;
  border: none;
}

.btn-cancel {
  background: #f3f4f6;
  color: #6b7280;
}

.btn-primary {
  background: linear-gradient(135deg, #6366f1 0%, #8b5cf6 100%);
  color: white;
}

.btn-primary[disabled] {
  opacity: 0.5;
}

.btn-text {
  background: transparent;
  color: #6b7280;
}

/* 动画 */
@keyframes fadeIn {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}

@keyframes slideUp {
  from {
    transform: translateY(100rpx);
    opacity: 0;
  }
  to {
    transform: translateY(0);
    opacity: 1;
  }
}

/* 分类颜色 */
.category-inspire { background: linear-gradient(135deg, #ef4444 0%, #dc2626 100%); }
.category-life { background: linear-gradient(135deg, #f59e0b 0%, #d97706 100%); }
.category-growth { background: linear-gradient(135deg, #10b981 0%, #059669 100%); }
.category-philosophy { background: linear-gradient(135deg, #8b5cf6 0%, #7c3aed 100%); }
.category-record { background: linear-gradient(135deg, #6366f1 0%, #4f46e5 100%); }
.category-time { background: linear-gradient(135deg, #06b6d4 0%, #0891b2 100%); }
.category-persist { background: linear-gradient(135deg, #ec4899 0%, #db2777 100%); }
.category-insight { background: linear-gradient(135deg, #f97316 0%, #ea580c 100%); }
.category-habit { background: linear-gradient(135deg, #14b8a6 0%, #0d9488 100%); }
.category-dream { background: linear-gradient(135deg, #a855f7 0%, #9333ea 100%); }
.category-custom { background: linear-gradient(135deg, #6b7280 0%, #4b5563 100%); }
