/* 时间线页面样式 */
.container {
  padding-bottom: 120rpx;
}

/* 时间线标题 */
.timeline-header {
  padding: 30rpx;
  text-align: center;
  background: linear-gradient(135deg, #6366f1 0%, #8b5cf6 100%);
  color: white;
  margin-bottom: 20rpx;
}

.timeline-title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
}

.timeline-desc {
  font-size: 24rpx;
  opacity: 0.8;
}

/* 筛选搜索区域 */
.filter-section {
  background: #ffffff;
  padding: 20rpx;
  margin-bottom: 20rpx;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.search-box {
  position: relative;
  margin-bottom: 20rpx;
}

.search-input {
  width: 100%;
  height: 72rpx;
  padding: 0 50rpx 0 20rpx;
  background: #f3f4f6;
  border-radius: 36rpx;
  font-size: 28rpx;
  color: #1f2937;
}

.search-icon {
  position: absolute;
  right: 20rpx;
  top: 50%;
  transform: translateY(-50%);
  font-size: 28rpx;
  color: #9ca3af;
}

/* 筛选标签 */
.filter-tabs {
  display: flex;
  gap: 12rpx;
}

.filter-tab {
  padding: 12rpx 24rpx;
  background: #f3f4f6;
  color: #6b7280;
  border-radius: 20rpx;
  font-size: 26rpx;
  transition: all 0.2s ease;
  flex: 1;
  text-align: center;
}

.filter-tab.active {
  background: linear-gradient(135deg, #6366f1 0%, #8b5cf6 100%);
  color: #ffffff;
}

.filter-tab:active {
  transform: scale(0.95);
}

/* 时间线列表 */
.timeline-list {
  position: relative;
}

.timeline-item {
  display: flex;
  margin-bottom: 32rpx;
  animation: fadeInUp 0.3s ease;
}

@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* 时间线节点 */
.timeline-node {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-right: 24rpx;
  position: relative;
}

.timeline-dot {
  width: 24rpx;
  height: 24rpx;
  border-radius: 50%;
  background: #6366f1;
  z-index: 2;
  box-shadow: 0 0 0 4rpx #ffffff, 0 0 0 6rpx #e0e7ff;
}

.timeline-dot.voice {
  background: #ef4444;
  box-shadow: 0 0 0 4rpx #ffffff, 0 0 0 6rpx #fecaca;
}

.timeline-dot.planning {
  background: #f59e0b;
  box-shadow: 0 0 0 4rpx #ffffff, 0 0 0 6rpx #fef3c7;
}

.timeline-line {
  width: 4rpx;
  flex: 1;
  background: #e5e7eb;
  margin-top: 8rpx;
  min-height: 40rpx;
}

/* 时间线内容 */
.timeline-content {
  flex: 1;
}

.memo-card {
  background: #ffffff;
  border-radius: 16rpx;
  padding: 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  transition: all 0.2s ease;
  position: relative;
}

.memo-card:active {
  transform: translateY(-2rpx);
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.15);
}

/* 时间信息 */
.memo-time {
  display: flex;
  align-items: baseline;
  gap: 12rpx;
  margin-bottom: 16rpx;
}

.time-main {
  font-size: 32rpx;
  font-weight: 600;
  color: #1f2937;
}

.time-date {
  font-size: 24rpx;
  color: #6b7280;
}

/* 内容预览 */
.memo-preview {
  margin-bottom: 16rpx;
}

.memo-text {
  font-size: 28rpx;
  line-height: 1.6;
  color: #374151;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

/* 元信息 */
.memo-meta {
  margin-bottom: 16rpx;
}

.memo-labels {
  display: flex;
  gap: 8rpx;
  flex-wrap: wrap;
  margin-bottom: 8rpx;
}

.memo-tags {
  display: flex;
  gap: 8rpx;
  flex-wrap: wrap;
}

.tag {
  padding: 4rpx 8rpx;
  background: #e0e7ff;
  color: #3730a3;
  font-size: 20rpx;
  border-radius: 8rpx;
  white-space: nowrap;
}

.tag.user-tag {
  background: #e0e7ff;
  color: #3730a3;
}

.tag.text {
  background: #d1fae5;
  color: #065f46;
}

.tag.voice {
  background: #fecaca;
  color: #991b1b;
}

.tag.planning {
  background: #fef3c7;
  color: #92400e;
}

/* 时间段标签颜色 */
.tag.period-morning {
  background: #f97316;
  color: #ffffff;
}

.tag.period-forenoon {
  background: #eab308;
  color: #ffffff;
}

.tag.period-noon {
  background: #f59e0b;
  color: #ffffff;
}

.tag.period-afternoon {
  background: #3b82f6;
  color: #ffffff;
}

.tag.period-evening {
  background: #8b5cf6;
  color: #ffffff;
}

.tag.period-planning {
  background: #10b981;
  color: #ffffff;
}

.tag.period-rest {
  background: #6b7280;
  color: #ffffff;
}

/* 内容分类标签颜色 */
.tag.category-life {
  background: #10b981;
  color: #ffffff;
}

.tag.category-work {
  background: #3b82f6;
  color: #ffffff;
}

.tag.category-study {
  background: #8b5cf6;
  color: #ffffff;
}

.tag.category-growth {
  background: #f97316;
  color: #ffffff;
}

.tag.category-finance {
  background: #eab308;
  color: #ffffff;
}

.tag.category-health {
  background: #ef4444;
  color: #ffffff;
}

.tag.category-social {
  background: #ec4899;
  color: #ffffff;
}

.tag.category-goal {
  background: #a855f7;
  color: #ffffff;
}

.tag.category-idea {
  background: #6b7280;
  color: #ffffff;
}

.tag.category-mood {
  background: #06b6d4;
  color: #ffffff;
}

.planning-card {
  border-left: 4rpx solid #f59e0b;
  background: linear-gradient(135deg, #ffffff 0%, #fef3c7 100%);
}

/* 操作按钮 */
.memo-actions {
  display: flex;
  gap: 12rpx;
  justify-content: flex-end;
}

.action-btn {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  background: #f3f4f6;
  color: #6b7280;
  font-size: 24rpx;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.2s ease;
}

.action-btn:active {
  transform: scale(0.9);
}

.action-btn.delete {
  background: #fecaca;
  color: #991b1b;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 120rpx 40rpx;
  text-align: center;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 32rpx;
  opacity: 0.6;
}

.empty-text {
  font-size: 28rpx;
  color: #9ca3af;
  margin-bottom: 40rpx;
  line-height: 1.5;
}

/* 查看更多按钮 */
.more-actions {
  padding: 30rpx;
  text-align: center;
}

.view-more-btn {
  width: 100%;
  background: linear-gradient(135deg, #f3f4f6, #e5e7eb);
  color: #4b5563;
  border: 2rpx solid #d1d5db;
  border-radius: 12rpx;
  font-size: 28rpx;
  padding: 16rpx 32rpx;
}

.view-more-btn:active {
  background: #e5e7eb;
  transform: scale(0.98);
}

/* 统计信息 */
.stats-footer {
  text-align: center;
  padding: 20rpx;
  margin-top: 40rpx;
}

.stats-text {
  font-size: 24rpx;
  color: #6b7280;
}

.stats-text {
  font-size: 24rpx;
  color: #9ca3af;
}

/* 浮动操作按钮 */
.fab {
  position: fixed;
  bottom: 120rpx;
  right: 40rpx;
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #6366f1 0%, #8b5cf6 100%);
  color: #ffffff;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 24rpx rgba(99, 102, 241, 0.4);
  z-index: 1000;
  font-size: 36rpx;
  font-weight: 300;
}

.fab:active {
  transform: scale(0.95);
}

/* 响应式调整 */
@media (max-width: 320px) {
  .filter-tabs {
    flex-wrap: wrap;
  }
  
  .filter-tab {
    flex-basis: calc(50% - 6rpx);
  }
  
  .memo-meta {
    flex-direction: column;
    align-items: flex-start;
    gap: 12rpx;
  }
  
  .timeline-node {
    margin-right: 16rpx;
  }
  
  .memo-card {
    padding: 20rpx;
  }
}