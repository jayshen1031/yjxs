/* 修复关联页面样式 */
.container {
  padding: 20rpx;
  padding-bottom: 60rpx;
}

/* 页面标题 */
.page-header {
  padding: 30rpx;
  text-align: center;
  background: linear-gradient(135deg, #f59e0b 0%, #d97706 100%);
  color: white;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
}

.page-title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
}

.page-desc {
  font-size: 24rpx;
  opacity: 0.9;
}

/* 配置卡片 */
.config-card {
  background: #ffffff;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.config-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #1f2937;
  margin-bottom: 16rpx;
}

.config-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 12rpx 0;
  border-bottom: 1rpx solid #f3f4f6;
}

.config-item:last-child {
  border-bottom: none;
}

.config-label {
  font-size: 26rpx;
  color: #6b7280;
}

.config-value {
  font-size: 26rpx;
  color: #1f2937;
  font-weight: 500;
}

/* 操作按钮 */
.actions {
  margin-bottom: 20rpx;
}

.btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  border-radius: 16rpx;
  font-size: 32rpx;
  font-weight: 600;
  border: none;
}

.btn-primary {
  background: linear-gradient(135deg, #6366f1 0%, #8b5cf6 100%);
  color: #ffffff;
  box-shadow: 0 4rpx 12rpx rgba(99, 102, 241, 0.3);
}

.btn-primary[disabled] {
  background: #e5e7eb;
  color: #9ca3af;
  box-shadow: none;
}

.btn-secondary {
  background: #f3f4f6;
  color: #6b7280;
  margin-top: 20rpx;
}

/* 进度卡片 */
.progress-card {
  background: #ffffff;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.progress-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #1f2937;
  margin-bottom: 16rpx;
}

.log-container {
  max-height: 600rpx;
  overflow-y: auto;
  background: #f9fafb;
  border-radius: 12rpx;
  padding: 16rpx;
}

.log-item {
  font-size: 24rpx;
  line-height: 1.6;
  color: #374151;
  font-family: 'Courier New', monospace;
  white-space: pre-wrap;
  word-break: break-all;
  margin-bottom: 8rpx;
}

/* 结果卡片 */
.result-card {
  background: #ffffff;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.result-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1f2937;
  margin-bottom: 24rpx;
  text-align: center;
}

.result-stats {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 16rpx;
  margin-bottom: 20rpx;
}

.stat-item {
  text-align: center;
  padding: 20rpx;
  border-radius: 12rpx;
  border: 2rpx solid;
}

.stat-item.success {
  background: #d1fae5;
  border-color: #10b981;
}

.stat-item.skipped {
  background: #fef3c7;
  border-color: #f59e0b;
}

.stat-item.error {
  background: #fee2e2;
  border-color: #ef4444;
}

.stat-item.total {
  background: #e0e7ff;
  border-color: #6366f1;
}

.stat-number {
  display: block;
  font-size: 40rpx;
  font-weight: 600;
  margin-bottom: 8rpx;
}

.stat-item.success .stat-number {
  color: #10b981;
}

.stat-item.skipped .stat-number {
  color: #f59e0b;
}

.stat-item.error .stat-number {
  color: #ef4444;
}

.stat-item.total .stat-number {
  color: #6366f1;
}

.stat-label {
  display: block;
  font-size: 22rpx;
  color: #6b7280;
}

.error-message {
  padding: 20rpx;
  background: #fee2e2;
  border-radius: 12rpx;
  border-left: 4rpx solid #ef4444;
  color: #991b1b;
  font-size: 26rpx;
  line-height: 1.6;
  margin-bottom: 20rpx;
}

/* 说明卡片 */
.info-card {
  background: linear-gradient(135deg, #f0f9ff 0%, #e0f2fe 100%);
  border-radius: 16rpx;
  padding: 24rpx;
  border-left: 4rpx solid #0ea5e9;
}

.info-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #0c4a6e;
  margin-bottom: 12rpx;
}

.info-content {
  font-size: 24rpx;
  line-height: 1.8;
  color: #1e293b;
  white-space: pre-wrap;
}
