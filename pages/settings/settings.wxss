/* 设置页面样式 */
.container {
  padding-bottom: 40rpx;
}

/* Notion集成样式 */
.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.notion-status-indicator {
  display: flex;
  align-items: center;
}

.status-text {
  font-size: 22rpx;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-weight: 500;
}

.status-text.connected {
  background: #d1fae5;
  color: #065f46;
}

.status-text.disconnected {
  background: #fef3c7;
  color: #92400e;
}

.notion-info {
  margin-bottom: 30rpx;
}

.info-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx 0;
  border-bottom: 1rpx solid #f3f4f6;
}

.info-row:last-child {
  border-bottom: none;
}

.info-label {
  font-size: 26rpx;
  color: #6b7280;
}

.info-value {
  font-size: 26rpx;
  color: #374151;
  font-weight: 500;
}

.info-value.enabled {
  color: #10b981;
}

.info-value.disabled {
  color: #ef4444;
}

.notion-actions {
  display: flex;
  gap: 20rpx;
  flex-wrap: wrap;
}

.notion-actions .btn {
  flex: 1;
  min-width: 200rpx;
}

/* 配置模式选择 */
.config-mode-selector {
  margin: 20rpx 0 30rpx;
  padding: 20rpx;
  background: #f9fafb;
  border-radius: 12rpx;
}

.mode-title {
  font-size: 26rpx;
  color: #374151;
  font-weight: 500;
  margin-bottom: 16rpx;
}

.radio-group {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.radio-item {
  display: flex;
  align-items: center;
  gap: 12rpx;
  padding: 16rpx;
  background: white;
  border-radius: 8rpx;
  border: 2rpx solid #e5e7eb;
  transition: all 0.3s;
}

.radio-item text {
  font-size: 26rpx;
  color: #374151;
}

/* 自动创建模式区域 */
.auto-create-section {
  margin: 20rpx 0;
}

.input-group {
  margin-bottom: 24rpx;
}

.input-label {
  font-size: 26rpx;
  color: #374151;
  font-weight: 500;
  margin-bottom: 12rpx;
}

.notion-input {
  width: 100%;
  height: 80rpx;
  padding: 0 24rpx;
  background: #f9fafb;
  border: 2rpx solid #e5e7eb;
  border-radius: 12rpx;
  font-size: 26rpx;
  color: #111827;
}

.notion-input:focus {
  border-color: #6366f1;
  background: white;
}

.input-hint {
  font-size: 22rpx;
  color: #9ca3af;
  margin-top: 8rpx;
  line-height: 1.5;
}

.btn-create {
  width: 100%;
  margin-top: 20rpx;
}

/* 手动配置模式区域 */
.manual-config-section {
  margin: 20rpx 0;
}

/* 用户操作按钮 */
.user-actions {
  display: flex;
  gap: 20rpx;
}

.user-actions .btn {
  flex: 1;
}

.btn-logout {
  background: #ef4444;
  color: white;
  border: none;
  border-radius: 12rpx;
  height: 72rpx;
  font-size: 26rpx;
  font-weight: 500;
}

.btn-logout:active {
  background: #dc2626;
}

/* 用户信息卡片 */
.user-card {
  margin-bottom: 20rpx;
}

.user-info {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.avatar-section {
  position: relative;
  margin-right: 24rpx;
}

.user-avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background: #f3f4f6;
  display: flex;
  align-items: center;
  justify-content: center;
  overflow: hidden;
}

.user-avatar image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.user-avatar.default-avatar {
  background: linear-gradient(135deg, #6366f1 0%, #8b5cf6 100%);
  color: #ffffff;
  font-size: 36rpx;
}

.avatar-edit-btn {
  position: absolute;
  bottom: -8rpx;
  right: -8rpx;
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  background: #6366f1;
  color: #ffffff;
  font-size: 20rpx;
  border: 4rpx solid #ffffff;
  display: flex;
  align-items: center;
  justify-content: center;
}

.user-details {
  flex: 1;
}

.user-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #1f2937;
  margin-bottom: 8rpx;
}

.user-email {
  font-size: 24rpx;
  color: #6b7280;
  margin-bottom: 12rpx;
}

.user-stats {
  display: flex;
  gap: 20rpx;
}

.stat-item {
  font-size: 22rpx;
  color: #374151;
  background: #f3f4f6;
  padding: 6rpx 12rpx;
  border-radius: 12rpx;
}

/* 用户列表 */
.user-list {
  margin: 20rpx 0;
}

.user-item {
  display: flex;
  align-items: center;
  padding: 20rpx;
  background: #f8fafc;
  border-radius: 12rpx;
  margin-bottom: 12rpx;
  border: 2rpx solid transparent;
  transition: all 0.2s ease;
}

.user-item.active {
  background: #e0e7ff;
  border-color: #6366f1;
}

.user-item:active {
  transform: scale(0.98);
}

.user-item-avatar {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  margin-right: 16rpx;
  background: #d1d5db;
  display: flex;
  align-items: center;
  justify-content: center;
  overflow: hidden;
}

.user-item-avatar image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.user-item-avatar.default-avatar {
  background: linear-gradient(135deg, #6366f1 0%, #8b5cf6 100%);
  color: #ffffff;
  font-size: 24rpx;
}

.user-item-info {
  flex: 1;
}

.user-item-name {
  font-size: 28rpx;
  font-weight: 500;
  color: #1f2937;
  margin-bottom: 4rpx;
}

.user-item-email {
  font-size: 22rpx;
  color: #6b7280;
  margin-bottom: 4rpx;
}

.user-item-stats {
  font-size: 22rpx;
  color: #6b7280;
}

.current-indicator {
  width: 32rpx;
  height: 32rpx;
  border-radius: 50%;
  background: #6366f1;
  color: #ffffff;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 18rpx;
}

/* 设置项 */
.section-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 24rpx;
}

.setting-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx 0;
  border-bottom: 2rpx solid #f3f4f6;
}

.setting-item:last-child {
  border-bottom: none;
}

.setting-info {
  flex: 1;
}

.setting-name {
  font-size: 28rpx;
  font-weight: 500;
  color: #1f2937;
  margin-bottom: 4rpx;
}

.setting-desc {
  font-size: 24rpx;
  color: #6b7280;
}

/* Notion配置 */
.notion-config {
  margin-top: 20rpx;
}

.input-group {
  position: relative;
  margin-bottom: 20rpx;
}

.input-label {
  font-size: 26rpx;
  font-weight: 500;
  color: #374151;
  margin-bottom: 8rpx;
}

.notion-input {
  width: 100%;
  height: 72rpx;
  padding: 0 50rpx 0 20rpx;
  border: 2rpx solid #e5e7eb;
  border-radius: 8rpx;
  font-size: 26rpx;
  background: #ffffff;
}

.notion-input:focus {
  border-color: #6366f1;
}

.toggle-password-btn {
  position: absolute;
  right: 16rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  background: #f3f4f6;
  font-size: 20rpx;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
}

.notion-status {
  background: #f8fafc;
  border-radius: 8rpx;
  padding: 20rpx;
  margin: 20rpx 0;
}

.status-item {
  display: flex;
  justify-content: space-between;
  margin-bottom: 12rpx;
}

.status-item:last-child {
  margin-bottom: 0;
}

.status-label {
  font-size: 24rpx;
  color: #6b7280;
}

.status-value {
  font-size: 24rpx;
  font-weight: 500;
}

.status-value.connected {
  color: #059669;
}

.status-value.disconnected {
  color: #dc2626;
}

.notion-actions {
  display: flex;
  gap: 16rpx;
  margin-top: 20rpx;
}

.notion-actions .btn {
  flex: 1;
}

.notion-disabled {
  text-align: center;
  padding: 40rpx 20rpx;
}

.disabled-info {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 16rpx;
}

.disabled-icon {
  font-size: 48rpx;
  opacity: 0.6;
}

.disabled-text {
  font-size: 26rpx;
  color: #6b7280;
  line-height: 1.5;
}

/* 数据管理 */
.data-actions {
  display: flex;
  gap: 16rpx;
  margin-bottom: 32rpx;
}

.data-actions .btn {
  flex: 1;
}

.danger-zone {
  border-top: 2rpx solid #fecaca;
  padding-top: 24rpx;
}

.danger-title {
  font-size: 26rpx;
  font-weight: 600;
  color: #dc2626;
  margin-bottom: 16rpx;
}

.btn-danger {
  background: linear-gradient(135deg, #dc2626 0%, #b91c1c 100%);
  color: #ffffff;
  margin-bottom: 12rpx;
}

.btn-danger:active {
  opacity: 0.8;
}

/* 关于信息 */
.about-info {
  margin-top: 20rpx;
}

.about-item {
  display: flex;
  justify-content: space-between;
  padding: 16rpx 0;
  border-bottom: 2rpx solid #f3f4f6;
}

.about-item:last-child {
  border-bottom: none;
}

.about-label {
  font-size: 26rpx;
  color: #6b7280;
}

.about-value {
  font-size: 26rpx;
  color: #1f2937;
  font-weight: 500;
}

/* 箴言力量库样式 */
.quote-summary {
  margin-bottom: 30rpx;
}

.quote-stats {
  display: flex;
  justify-content: space-between;
  background: linear-gradient(135deg, #f8fafc 0%, #e2e8f0 100%);
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.quote-stats .stat-item {
  text-align: center;
  flex: 1;
}

.quote-stats .stat-number {
  font-size: 32rpx;
  font-weight: bold;
  color: #6366f1;
  margin-bottom: 8rpx;
  display: block;
}

.quote-stats .stat-label {
  font-size: 24rpx;
  color: #64748b;
  display: block;
}

.current-quote-preview {
  background: linear-gradient(135deg, #6366f1 0%, #8b5cf6 100%);
  color: white;
  padding: 30rpx;
  border-radius: 16rpx;
  text-align: center;
  box-shadow: 0 8rpx 30rpx rgba(99, 102, 241, 0.3);
}

.current-quote-preview .quote-text {
  font-size: 28rpx;
  line-height: 1.6;
  margin-bottom: 16rpx;
  font-style: italic;
}

.current-quote-preview .quote-category {
  font-size: 22rpx;
  opacity: 0.9;
  padding: 8rpx 16rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 20rpx;
  display: inline-block;
}

.quote-actions {
  display: flex;
  gap: 16rpx;
}

.quote-actions .btn {
  flex: 1;
}

/* 响应式调整 */
@media (max-width: 320px) {
  .user-info {
    flex-direction: column;
    text-align: center;
  }
  
  .avatar-section {
    margin-right: 0;
    margin-bottom: 16rpx;
  }
  
  .user-stats {
    justify-content: center;
  }
  
  .notion-actions {
    flex-direction: column;
  }
  
  .data-actions {
    flex-direction: column;
  }
  
  .quote-stats {
    flex-wrap: wrap;
    gap: 20rpx;
  }
  
  .quote-stats .stat-item {
    flex: 0 0 calc(50% - 10rpx);
  }
  
  .quote-actions {
    flex-direction: column;
  }
}