/* 主容器 */
.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #f8fafc 0%, #e2e8f0 100%);
  padding: 20rpx;
  padding-bottom: 100rpx;
}

/* 统计区域 */
.stats-section {
  margin-bottom: 30rpx;
}

.stats-card {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
  margin-bottom: 20rpx;
}

.stats-row {
  display: flex;
  justify-content: space-between;
}

.stat-item {
  text-align: center;
  flex: 1;
}

.stat-number {
  font-size: 36rpx;
  font-weight: bold;
  color: #6366f1;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #64748b;
}

/* 快速操作 */
.quick-actions {
  display: flex;
  gap: 20rpx;
}

.action-btn {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 10rpx;
  padding: 20rpx;
  border-radius: 15rpx;
  font-size: 28rpx;
  border: none;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.action-btn.primary {
  background: linear-gradient(45deg, #6366f1, #8b5cf6);
  color: white;
}

.action-btn.secondary {
  background: white;
  color: #6366f1;
  border: 2rpx solid #e2e8f0;
}

.action-btn .icon {
  font-size: 32rpx;
}

/* 筛选区域 */
.filter-section {
  margin-bottom: 30rpx;
}

.search-box {
  position: relative;
  margin-bottom: 20rpx;
}

.search-input {
  width: 100%;
  padding: 20rpx 60rpx 20rpx 20rpx;
  background: white;
  border-radius: 15rpx;
  font-size: 28rpx;
  border: 2rpx solid #e2e8f0;
  box-sizing: border-box;
}

.search-icon {
  position: absolute;
  right: 20rpx;
  top: 50%;
  transform: translateY(-50%);
  font-size: 32rpx;
  color: #9ca3af;
}

.type-filter, .status-filter {
  display: flex;
  white-space: nowrap;
  gap: 20rpx;
  margin-bottom: 20rpx;
}

.filter-item, .status-chip {
  padding: 16rpx 24rpx;
  background: white;
  border-radius: 20rpx;
  font-size: 26rpx;
  color: #64748b;
  border: 2rpx solid #e2e8f0;
  white-space: nowrap;
}

.filter-item.active, .status-chip.active {
  background: #6366f1;
  color: white;
  border-color: #6366f1;
}

/* 目标列表区域 */
.goals-section {
  flex: 1;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.section-title {
  display: flex;
  align-items: center;
  gap: 10rpx;
  font-size: 32rpx;
  font-weight: bold;
  color: #1f2937;
}

.section-title .icon {
  font-size: 36rpx;
}

.sort-options .sort-btn {
  display: flex;
  align-items: center;
  gap: 10rpx;
  padding: 16rpx 20rpx;
  background: white;
  border-radius: 15rpx;
  font-size: 26rpx;
  color: #64748b;
  border: 2rpx solid #e2e8f0;
}

.arrow {
  font-size: 20rpx;
}

.goals-list {
  max-height: 1000rpx;
}

/* 目标卡片 */
.goal-item {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 15rpx rgba(0, 0, 0, 0.08);
  border-left: 6rpx solid #e2e8f0;
  transition: all 0.3s ease;
}

.goal-item.goal-short {
  border-left-color: #10b981;
}

.goal-item.goal-medium {
  border-left-color: #f59e0b;
}

.goal-item.goal-long {
  border-left-color: #ef4444;
}

.goal-item.priority-high {
  box-shadow: 0 4rpx 20rpx rgba(239, 68, 68, 0.2);
}

.goal-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 20rpx;
}

.goal-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #1f2937;
  flex: 1;
  margin-right: 20rpx;
}

.goal-actions {
  display: flex;
  gap: 20rpx;
}

.action-icon {
  padding: 10rpx;
  font-size: 32rpx;
  cursor: pointer;
  border-radius: 50%;
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #f8fafc;
  transition: all 0.3s ease;
}

.action-icon:active {
  transform: scale(0.95);
  background: #e2e8f0;
}

.goal-content {
  margin-bottom: 20rpx;
}

.goal-description {
  font-size: 28rpx;
  color: #64748b;
  line-height: 1.6;
  margin-bottom: 20rpx;
}

/* 进度条 */
.progress-section {
  margin-bottom: 20rpx;
}

.progress-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 10rpx;
}

.progress-label {
  font-size: 26rpx;
  color: #374151;
  font-weight: 500;
}

.progress-value {
  font-size: 26rpx;
  color: #6366f1;
  font-weight: bold;
}

.progress-bar {
  height: 8rpx;
  background: #e5e7eb;
  border-radius: 4rpx;
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #6366f1, #8b5cf6);
  border-radius: 4rpx;
  transition: width 0.3s ease;
}

/* 目标标签 */
.goal-meta {
  margin-bottom: 20rpx;
}

.goal-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 10rpx;
  margin-bottom: 15rpx;
}

.type-tag {
  padding: 6rpx 12rpx;
  border-radius: 12rpx;
  font-size: 22rpx;
  color: white;
  font-weight: 500;
}

.type-tag.type-short {
  background: #10b981;
}

.type-tag.type-medium {
  background: #f59e0b;
}

.type-tag.type-long {
  background: #ef4444;
}

.priority-tag {
  padding: 6rpx 12rpx;
  border-radius: 12rpx;
  font-size: 22rpx;
  color: white;
  font-weight: 500;
}

.priority-tag.priority-high {
  background: #dc2626;
}

.priority-tag.priority-medium {
  background: #d97706;
}

.priority-tag.priority-low {
  background: #059669;
}

.category-tag {
  padding: 6rpx 12rpx;
  background: #f1f5f9;
  color: #64748b;
  border-radius: 12rpx;
  font-size: 22rpx;
}

.deadline-tag {
  padding: 6rpx 12rpx;
  background: #fef3c7;
  color: #d97706;
  border-radius: 12rpx;
  font-size: 22rpx;
}

.goal-info {
  display: flex;
  gap: 20rpx;
}

.milestone-count, .memo-count, .time-investment {
  font-size: 22rpx;
  color: #9ca3af;
}

.time-investment {
  color: #059669;
  font-weight: 500;
}

/* 里程碑区域 */
.milestones-section {
  margin-top: 20rpx;
  border-top: 2rpx solid #f1f5f9;
  padding-top: 20rpx;
}

.milestones-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 15rpx;
  cursor: pointer;
}

.milestones-title {
  font-size: 28rpx;
  color: #374151;
  font-weight: 500;
}

.toggle-icon {
  font-size: 24rpx;
  color: #9ca3af;
}

.milestones-list {
  padding-left: 20rpx;
}

.milestone-item {
  padding: 15rpx 0;
  border-bottom: 1rpx solid #f8fafc;
}

.milestone-item:last-child {
  border-bottom: none;
}

.milestone-item.completed {
  opacity: 0.6;
}

.milestone-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 8rpx;
}

.milestone-title {
  font-size: 26rpx;
  color: #374151;
  flex: 1;
}

.milestone-status {
  cursor: pointer;
}

.status-icon {
  font-size: 28rpx;
}

.milestone-date {
  font-size: 22rpx;
  color: #9ca3af;
}

/* 操作按钮行 */
.goal-actions-row {
  display: flex;
  gap: 15rpx;
  margin-top: 20rpx;
  padding-top: 20rpx;
  border-top: 2rpx solid #f8fafc;
}

.btn-action {
  flex: 1;
  padding: 16rpx 20rpx;
  background: #f8fafc;
  color: #64748b;
  border: none;
  border-radius: 12rpx;
  font-size: 24rpx;
  text-align: center;
}

.btn-action:active {
  background: #e2e8f0;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 100rpx 40rpx;
  color: #9ca3af;
}

.empty-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
  display: block;
}

.empty-text {
  font-size: 28rpx;
  margin-bottom: 30rpx;
  display: block;
}

.empty-action {
  background: #6366f1;
  color: white;
  border: none;
  padding: 20rpx 40rpx;
  border-radius: 15rpx;
  font-size: 28rpx;
}

/* 弹窗样式 */
.modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
  opacity: 0;
  visibility: hidden;
  transition: all 0.3s ease;
}

.modal.show {
  opacity: 1;
  visibility: visible;
}

.modal-content {
  background: white;
  margin: 40rpx;
  border-radius: 20rpx;
  max-height: 80vh;
  overflow-y: auto;
  width: calc(100% - 80rpx);
  max-width: 600rpx;
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 2rpx solid #f1f5f9;
}

.modal-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #1f2937;
}

.close-btn {
  font-size: 40rpx;
  color: #9ca3af;
  cursor: pointer;
}

/* 表单样式 */
.form-group {
  padding: 20rpx 30rpx;
  border-bottom: 2rpx solid #f8fafc;
}

.form-label {
  display: block;
  font-size: 28rpx;
  color: #374151;
  margin-bottom: 16rpx;
  font-weight: 500;
}

.form-input, .form-textarea {
  width: 100%;
  padding: 20rpx;
  border: 2rpx solid #e5e7eb;
  border-radius: 12rpx;
  font-size: 28rpx;
  background: #f9fafb;
  box-sizing: border-box;
}

.form-textarea {
  min-height: 120rpx;
  resize: none;
}

.picker-input {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  border: 2rpx solid #e5e7eb;
  border-radius: 12rpx;
  background: #f9fafb;
  font-size: 28rpx;
}

.form-actions {
  display: flex;
  gap: 20rpx;
  padding: 30rpx;
}

.btn-cancel, .btn-confirm {
  flex: 1;
  padding: 24rpx;
  border-radius: 12rpx;
  font-size: 28rpx;
  border: none;
}

.btn-cancel {
  background: #f3f4f6;
  color: #6b7280;
}

.btn-confirm {
  background: #6366f1;
  color: white;
}

.btn-confirm[disabled] {
  background: #d1d5db;
  color: #9ca3af;
}