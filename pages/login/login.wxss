/* pages/login/login.wxss */
.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 40rpx 30rpx;
  box-sizing: border-box;
}

/* 头部Logo区域 */
.header {
  text-align: center;
  margin-bottom: 60rpx;
}

.logo {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 20rpx;
}

.logo-icon {
  font-size: 60rpx;
  margin-right: 20rpx;
}

.logo-text {
  font-size: 48rpx;
  font-weight: bold;
  color: white;
}

.subtitle {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
}

/* 登录卡片 */
.login-card {
  background: white;
  border-radius: 24rpx;
  padding: 40rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.1);
}

.card-header {
  text-align: center;
  margin-bottom: 40rpx;
}

.welcome-text {
  font-size: 36rpx;
  font-weight: bold;
  color: #1f2937;
  display: block;
  margin-bottom: 10rpx;
}

.welcome-desc {
  font-size: 24rpx;
  color: #6b7280;
}

.section-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #374151;
  display: block;
  margin-bottom: 20rpx;
}

/* 用户列表 */
.user-list {
  margin-bottom: 40rpx;
}

.user-item {
  display: flex;
  align-items: center;
  padding: 24rpx;
  background: #f9fafb;
  border-radius: 16rpx;
  margin-bottom: 16rpx;
  border: 2rpx solid transparent;
  transition: all 0.3s;
}

.user-item:active {
  transform: scale(0.98);
  border-color: #6366f1;
  background: #eef2ff;
}

.user-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #6366f1, #8b5cf6);
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 24rpx;
  color: white;
  font-size: 32rpx;
  font-weight: bold;
}

.user-info {
  flex: 1;
}

.user-name {
  font-size: 28rpx;
  font-weight: 600;
  color: #1f2937;
  display: block;
  margin-bottom: 8rpx;
}

.user-email {
  font-size: 22rpx;
  color: #6b7280;
  display: block;
  margin-bottom: 6rpx;
}

.last-login {
  font-size: 20rpx;
  color: #9ca3af;
}

.user-status {
  text-align: right;
}

.notion-status {
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 20rpx;
}

.notion-status.connected {
  background: #d1fae5;
  color: #065f46;
}

.notion-status.disconnected {
  background: #fef3c7;
  color: #92400e;
}

/* 创建用户区域 */
.create-user-section {
  border-top: 1rpx solid #e5e7eb;
  padding-top: 30rpx;
  border-left: 6rpx solid #6366f1;
  padding-left: 30rpx;
  margin-left: -30rpx;
}

/* 折叠区域头部 */
.section-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 10rpx 0;
  cursor: pointer;
  transition: all 0.3s;
}

.section-header:active {
  transform: scale(0.98);
  opacity: 0.7;
}

.toggle-icon {
  font-size: 24rpx;
  color: #6b7280;
  transition: transform 0.3s ease;
  font-weight: bold;
}

.input-group {
  margin-bottom: 30rpx;
  overflow: hidden;
  transition: all 0.3s ease;
}

.input-item {
  margin-bottom: 20rpx;
}

.input-label {
  font-size: 24rpx;
  color: #374151;
  font-weight: 500;
  display: block;
  margin-bottom: 10rpx;
}

.input-hint {
  font-size: 20rpx;
  color: #6b7280;
  margin-top: 8rpx;
  line-height: 1.4;
}

.input-hint.error {
  color: #ef4444;
}

/* 密码输入框 */
.password-input {
  position: relative;
  display: flex;
  align-items: center;
}

.password-field {
  flex: 1;
  padding-right: 80rpx;
}

.password-toggle {
  position: absolute;
  right: 20rpx;
  top: 50%;
  transform: translateY(-50%);
  padding: 10rpx;
  font-size: 32rpx;
  color: #6b7280;
  cursor: pointer;
}

.password-toggle:active {
  opacity: 0.7;
}

/* 记住密码 */
.remember-password {
  margin-top: 20rpx;
  display: flex;
  align-items: center;
}

.checkbox-label {
  display: flex;
  align-items: center;
  font-size: 28rpx;
  color: #374151;
}

.checkbox-label checkbox {
  margin-right: 12rpx;
  transform: scale(0.9);
}

.checkbox-label text {
  user-select: none;
}

.input-field {
  width: 100%;
  height: 80rpx;
  border: 2rpx solid #e5e7eb;
  border-radius: 12rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  background: white;
  box-sizing: border-box;
}

.input-field:focus {
  border-color: #6366f1;
  outline: none;
}

.create-btn {
  width: 100%;
  height: 88rpx;
  background: linear-gradient(135deg, #6366f1, #8b5cf6);
  color: white;
  border: none;
  border-radius: 12rpx;
  font-size: 28rpx;
  font-weight: 600;
  transition: all 0.3s ease;
}

.create-btn:disabled {
  background: #d1d5db;
  color: #9ca3af;
}

/* 已有账号登录 */
.existing-user-login {
  background: white;
  border-radius: 24rpx;
  padding: 40rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.1);
  border-left: 6rpx solid #10b981;
}

.login-btn {
  width: 100%;
  height: 88rpx;
  background: linear-gradient(135deg, #10b981, #059669);
  color: white;
  border: none;
  border-radius: 12rpx;
  font-size: 28rpx;
  font-weight: 600;
  transition: all 0.3s ease;
}

.login-btn:disabled {
  background: #d1d5db;
  color: #9ca3af;
}

.debug-btn {
  width: 100%;
  height: 60rpx;
  background: #f59e0b;
  color: white;
  border: none;
  border-radius: 8rpx;
  font-size: 24rpx;
  font-weight: 500;
  margin-top: 20rpx;
  transition: all 0.3s ease;
}

/* 底部说明 */
.footer {
  text-align: center;
}

.footer-text {
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.7);
  display: block;
  margin-bottom: 8rpx;
}

/* 加载遮罩 */
.loading-mask {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 9999;
}

.loading-content {
  background: white;
  padding: 40rpx 60rpx;
  border-radius: 16rpx;
  text-align: center;
  color: #374151;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #e5e7eb;
  border-top: 4rpx solid #6366f1;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin: 0 auto 20rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}