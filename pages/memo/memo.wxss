  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.picker-display .picker-text {
  color: #9ca3af;
}

.picker-arrow {
  font-size: 20rpx;
  color: #9ca3af;
  margin-left: 8rpx;
}

