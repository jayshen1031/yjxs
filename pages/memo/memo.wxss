/* 记录页面样式 */
.container {
  padding-bottom: 120rpx;
}

/* 目标关联样式 */
.goal-association-tip {
  display: flex;
  align-items: center;
  gap: 10rpx;
  margin-bottom: 20rpx;
  padding: 16rpx 20rpx;
  background: linear-gradient(135deg, #f0f9ff 0%, #e0f2fe 100%);
  border-radius: 12rpx;
  border-left: 4rpx solid #0284c7;
}

.goal-association-tip .tip-icon {
  font-size: 24rpx;
}

.goal-association-tip .tip-text {
  font-size: 24rpx;
  color: #0369a1;
}

.goal-selector {
  display: flex;
  flex-direction: column;
  gap: 15rpx;
  margin-bottom: 20rpx;
}

.goal-selector .goal-item {
  padding: 20rpx;
  background: #f8fafc;
  border-radius: 12rpx;
  border: 2rpx solid #e2e8f0;
  transition: all 0.3s ease;
}

.goal-selector .goal-item.selected {
  background: linear-gradient(135deg, #f0f9ff 0%, #e0f2fe 100%);
  border-color: #6366f1;
  box-shadow: 0 4rpx 12rpx rgba(99, 102, 241, 0.2);
}

.goal-selector .goal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
}

.goal-selector .goal-title {
  font-size: 28rpx;
  color: #1f2937;
  font-weight: 500;
  flex: 1;
}

.goal-selector .goal-type {
  padding: 4rpx 8rpx;
  border-radius: 8rpx;
  font-size: 20rpx;
  color: white;
  font-weight: 500;
}

.goal-selector .goal-type.type-short {
  background: #10b981;
}

.goal-selector .goal-type.type-medium {
  background: #f59e0b;
}

.goal-selector .goal-type.type-long {
  background: #ef4444;
}

.goal-selector .goal-meta {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
}

.goal-selector .goal-category {
  font-size: 24rpx;
  color: #64748b;
}

.goal-selector .goal-progress {
  font-size: 24rpx;
  color: #6366f1;
  font-weight: 500;
}

.goal-selector .goal-progress-bar {
  height: 6rpx;
  background: #e5e7eb;
  border-radius: 3rpx;
  overflow: hidden;
}

.goal-selector .progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #6366f1, #8b5cf6);
  border-radius: 3rpx;
  transition: width 0.3s ease;
}

.clear-selection {
  text-align: center;
  margin-top: 15rpx;
}

.btn-text {
  background: transparent;
  color: #6b7280;
  border: none;
  font-size: 26rpx;
  padding: 10rpx 20rpx;
}

/* 目标投入评估样式 */
.goal-investment-section {
  margin-top: 20rpx;
  padding: 20rpx;
  background: linear-gradient(135deg, #fef3c7 0%, #fde68a 100%);
  border-radius: 12rpx;
  border-left: 4rpx solid #f59e0b;
}

.investment-header {
  display: flex;
  align-items: center;
  gap: 10rpx;
  margin-bottom: 20rpx;
}

.investment-title {
  font-size: 28rpx;
  color: #92400e;
  font-weight: 500;
}

.investment-group {
  margin-bottom: 20rpx;
}

.investment-label {
  display: block;
  font-size: 26rpx;
  color: #78350f;
  margin-bottom: 12rpx;
  font-weight: 500;
}

.time-input-row {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.time-display {
  font-size: 28rpx;
  color: #92400e;
  font-weight: bold;
  min-width: 100rpx;
}

.value-selector {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

.value-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 16rpx 12rpx;
  background: rgba(255, 255, 255, 0.7);
  border-radius: 12rpx;
  border: 2rpx solid transparent;
  transition: all 0.3s ease;
  min-width: 120rpx;
}

.value-item.selected {
  background: white;
  border-color: #f59e0b;
  box-shadow: 0 2rpx 8rpx rgba(245, 158, 11, 0.3);
}

.value-emoji {
  font-size: 32rpx;
  margin-bottom: 8rpx;
}

.value-text {
  font-size: 22rpx;
  color: #78350f;
  text-align: center;
}

.investment-textarea {
  width: 100%;
  min-height: 80rpx;
  padding: 16rpx;
  background: rgba(255, 255, 255, 0.8);
  border: 2rpx solid #f3e8ff;
  border-radius: 12rpx;
  font-size: 26rpx;
  color: #78350f;
  box-sizing: border-box;
}

.char-count {
  text-align: right;
  font-size: 22rpx;
  color: #a16207;
  margin-top: 8rpx;
}

/* 模式选择器 */
.mode-selector {
  display: flex;
  background: #ffffff;
  border-radius: 16rpx;
  margin-bottom: 16rpx;
  padding: 8rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

/* 类型选择器 */
.type-selector {
  display: flex;
  background: #ffffff;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  padding: 8rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.selector-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx;
  border-radius: 12rpx;
  transition: all 0.2s ease;
}

.selector-item.active {
  background: linear-gradient(135deg, #6366f1 0%, #8b5cf6 100%);
  color: #ffffff;
}

.selector-item .icon {
  font-size: 32rpx;
  margin-bottom: 8rpx;
}

.selector-item .label {
  font-size: 26rpx;
  font-weight: 500;
}

/* 文字输入区域 */
.input-section {
  animation: fadeIn 0.3s ease;
}

.memo-textarea {
  width: 100%;
  min-height: 300rpx;
  padding: 20rpx;
  border: 2rpx solid #e5e7eb;
  border-radius: 12rpx;
  font-size: 28rpx;
  line-height: 1.6;
  background: #ffffff;
  color: #1f2937;
  resize: none;
}

.memo-textarea:focus {
  border-color: #6366f1;
  outline: none;
}

.memo-textarea.planning {
  border-color: #f59e0b;
  background: linear-gradient(135deg, #fef3c7 0%, #fde68a 100%);
}

.planning-tip {
  display: flex;
  align-items: center;
  gap: 12rpx;
  padding: 16rpx 20rpx;
  background: linear-gradient(135deg, #fef3c7 0%, #fed7aa 100%);
  border-radius: 12rpx;
  margin-bottom: 16rpx;
  border-left: 4rpx solid #f59e0b;
}

.tip-icon {
  font-size: 24rpx;
}

.tip-text {
  font-size: 24rpx;
  color: #92400e;
  line-height: 1.5;
}

.char-count {
  text-align: right;
  font-size: 24rpx;
  color: #9ca3af;
  margin-top: 12rpx;
}

/* 模板列表 */
.template-list {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
  margin-top: 16rpx;
}

.template-item {
  padding: 12rpx 20rpx;
  background: #f3f4f6;
  color: #4b5563;
  border-radius: 20rpx;
  font-size: 26rpx;
  transition: all 0.2s ease;
}

.template-item:active {
  background: #e5e7eb;
  transform: scale(0.95);
}

/* 语音录制区域 */
.voice-section {
  animation: fadeIn 0.3s ease;
}

.voice-recorder {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx 20rpx;
}

.btn-voice {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #ef4444 0%, #f97316 100%);
  color: #ffffff;
  font-size: 48rpx;
  margin-bottom: 24rpx;
  border: none;
  box-shadow: 0 8rpx 24rpx rgba(239, 68, 68, 0.3);
  transition: all 0.2s ease;
}

.btn-voice:active {
  transform: scale(0.95);
}

.btn-voice.recording {
  background: linear-gradient(135deg, #dc2626 0%, #ea580c 100%);
  animation: recordingPulse 1s infinite;
  box-shadow: 0 8rpx 32rpx rgba(220, 38, 38, 0.5);
}

@keyframes recordingPulse {
  0% {
    transform: scale(1);
    box-shadow: 0 8rpx 32rpx rgba(220, 38, 38, 0.5);
  }
  50% {
    transform: scale(1.05);
    box-shadow: 0 12rpx 40rpx rgba(220, 38, 38, 0.7);
  }
  100% {
    transform: scale(1);
    box-shadow: 0 8rpx 32rpx rgba(220, 38, 38, 0.5);
  }
}

.voice-status {
  font-size: 28rpx;
  color: #6b7280;
  text-align: center;
}

/* 语音识别结果 */
.voice-result {
  margin-top: 32rpx;
}

.voice-textarea {
  width: 100%;
  min-height: 200rpx;
  padding: 20rpx;
  border: 2rpx solid #e5e7eb;
  border-radius: 12rpx;
  font-size: 28rpx;
  line-height: 1.6;
  background: #f9fafb;
  color: #1f2937;
  margin-top: 16rpx;
}

/* 录音控制按钮 */
.voice-controls {
  display: flex;
  gap: 20rpx;
  margin-top: 24rpx;
  justify-content: center;
}

.voice-controls .btn {
  flex: 1;
  max-width: 200rpx;
}

/* 标签选择器 */
.tag-selector {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
  margin-top: 16rpx;
}

.tag-item {
  padding: 12rpx 20rpx;
  background: #f3f4f6;
  color: #4b5563;
  border-radius: 20rpx;
  font-size: 26rpx;
  transition: all 0.2s ease;
  border: 2rpx solid transparent;
  cursor: pointer;
  user-select: none;
  -webkit-tap-highlight-color: transparent;
  position: relative;
  z-index: 1;
}

.tag-item.selected {
  background: linear-gradient(135deg, #6366f1, #8b5cf6);
  color: white;
  border-color: #6366f1;
  transform: translateY(-2rpx) scale(1.05);
  box-shadow: 0 4rpx 12rpx rgba(99, 102, 241, 0.3);
  position: relative;
  z-index: 10;
}

.tag-item.selected::before {
  content: '';
  position: absolute;
  top: -2rpx;
  left: -2rpx;
  right: -2rpx;
  bottom: -2rpx;
  background: linear-gradient(135deg, #6366f1, #8b5cf6);
  border-radius: 22rpx;
  z-index: -1;
  opacity: 0.3;
}

.tag-item:active {
  transform: scale(0.95);
}

/* 自定义标签输入 */
.custom-tag-input {
  display: flex;
  gap: 16rpx;
  margin-top: 20rpx;
  align-items: center;
}

.custom-tag-input .input {
  flex: 1;
  height: 72rpx;
}

.custom-tag-input .btn {
  min-width: 120rpx;
  height: 72rpx;
  padding: 0 24rpx;
}

/* 保存按钮区域 */
.save-section {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #ffffff;
  padding: 20rpx;
  box-shadow: 0 -4rpx 12rpx rgba(0, 0, 0, 0.1);
  z-index: 1000;
}

.save-btn {
  width: 100%;
  height: 88rpx;
  font-size: 32rpx;
  font-weight: 600;
}

.save-btn:disabled {
  background: #d1d5db !important;
  color: #9ca3af !important;
  opacity: 0.6;
}

/* 响应式调整 */
@media (max-width: 320px) {
  .btn-voice {
    width: 140rpx;
    height: 140rpx;
    font-size: 40rpx;
  }
  
  .voice-controls {
    flex-direction: column;
  }
  
  .voice-controls .btn {
    max-width: none;
  }
}

/* 时间选择器样式 */
.time-tip {
  display: flex;
  align-items: center;
  gap: 10rpx;
  margin-bottom: 20rpx;
  padding: 12rpx 16rpx;
  background: #f0f9ff;
  border-radius: 12rpx;
  border-left: 4rpx solid #0ea5e9;
}

.time-tip .tip-icon {
  font-size: 24rpx;
}

.time-tip .tip-text {
  font-size: 24rpx;
  color: #0369a1;
}

/* 日期选择 */
.date-selector {
  margin-bottom: 24rpx;
}

.date-options {
  display: flex;
  gap: 12rpx;
  margin-bottom: 16rpx;
}

.date-chip {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 16rpx 12rpx;
  background: #f8fafc;
  border-radius: 12rpx;
  border: 2rpx solid #e5e7eb;
  transition: all 0.3s ease;
}

.date-chip.active {
  background: linear-gradient(135deg, #6366f1 0%, #8b5cf6 100%);
  color: white;
  border-color: #6366f1;
  transform: translateY(-2rpx);
  box-shadow: 0 4rpx 12rpx rgba(99, 102, 241, 0.3);
}

.date-chip .chip-icon {
  font-size: 28rpx;
  margin-bottom: 8rpx;
}

.date-chip .chip-text {
  font-size: 24rpx;
  font-weight: 500;
}

.custom-date-picker {
  margin-top: 16rpx;
}

.date-picker-display {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 16rpx 20rpx;
  background: white;
  border-radius: 12rpx;
  border: 2rpx solid #e5e7eb;
}

.date-picker-display .picker-icon {
  font-size: 24rpx;
}

.date-picker-display .picker-text {
  flex: 1;
  text-align: center;
  font-size: 28rpx;
  color: #1f2937;
}

.date-picker-display .picker-arrow {
  font-size: 20rpx;
  color: #9ca3af;
}

/* 时间选择器 */
.time-selector {
  margin-bottom: 20rpx;
}

.time-input-group {
  margin-bottom: 20rpx;
}

.time-label {
  display: flex;
  align-items: center;
  gap: 8rpx;
  margin-bottom: 12rpx;
}

.time-label .label-icon {
  font-size: 20rpx;
}

.time-label .label-text {
  font-size: 26rpx;
  font-weight: 500;
  color: #374151;
}

.time-picker-display {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 16rpx 20rpx;
  background: white;
  border-radius: 12rpx;
  border: 2rpx solid #e5e7eb;
  transition: all 0.3s ease;
}

.time-picker-display:active {
  border-color: #6366f1;
  box-shadow: 0 0 0 4rpx rgba(99, 102, 241, 0.1);
}

.time-picker-display .time-text {
  flex: 1;
  font-size: 28rpx;
  color: #1f2937;
  font-weight: 500;
}

.time-picker-display .picker-arrow {
  font-size: 20rpx;
  color: #9ca3af;
}

/* 选中时间显示 */
.selected-time-display {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 16rpx 20rpx;
  background: linear-gradient(135deg, #dbeafe 0%, #f0f9ff 100%);
  border-radius: 12rpx;
  border-left: 4rpx solid #3b82f6;
}

.selected-time-display .display-icon {
  font-size: 24rpx;
  margin-right: 10rpx;
}

.selected-time-display .display-text {
  font-size: 26rpx;
  font-weight: 500;
  color: #1d4ed8;
}

/* 编辑模式按钮样式 */
.save-section {
  display: flex;
  gap: 20rpx;
  padding: 20rpx;
}

.cancel-btn {
  flex: 1;
  height: 88rpx;
  font-size: 28rpx;
  font-weight: 500;
  background: #f3f4f6;
  color: #6b7280;
  border: 2rpx solid #e5e7eb;
}

.cancel-btn:active {
  background: #e5e7eb;
}

.save-btn.edit-mode {
  flex: 2;
}

/* 确保编辑模式下按钮正确布局 */
.save-section:has(.cancel-btn) {
  padding: 20rpx;
}

/* 时间投入提示样式 */
.investment-hint {
  font-size: 24rpx;
  color: #6b7280;
  margin-bottom: 15rpx;
  padding: 8rpx 12rpx;
  background: #f8fafc;
  border-radius: 8rpx;
  border-left: 3rpx solid #6366f1;
}

/* 价值分类样式 */
.value-tip {
  display: flex;
  align-items: center;
  gap: 10rpx;
  padding: 12rpx 16rpx;
  background: #f0f9ff;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  border-left: 4rpx solid #0ea5e9;
}

.value-tip .tip-icon {
  font-size: 28rpx;
}

.value-tip .tip-text {
  font-size: 24rpx;
  color: #0369a1;
  line-height: 1.4;
}

.value-categories {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

/* Tab导航栏 */
.activity-tabs {
  display: flex;
  background: #f9fafb;
  border-radius: 16rpx;
  padding: 8rpx;
  margin-bottom: 20rpx;
  gap: 8rpx;
}

.tab-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 16rpx 8rpx;
  border-radius: 12rpx;
  background: transparent;
  transition: all 0.3s ease;
  cursor: pointer;
}

.tab-item.active {
  background: white;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
}

.tab-icon {
  font-size: 32rpx;
  margin-bottom: 4rpx;
}

.tab-label {
  font-size: 24rpx;
  color: #6b7280;
  font-weight: 500;
}

.tab-item.active .tab-label {
  color: #1f2937;
  font-weight: 600;
}

.value-category {
  border-radius: 16rpx;
  padding: 20rpx;
  border: 2rpx solid transparent;
  transition: all 0.3s ease;
}

.value-category.valuable {
  background: linear-gradient(135deg, #fef3c7 0%, #fde68a 100%);
  border-color: #f59e0b;
}

.value-category.neutral {
  background: linear-gradient(135deg, #f3f4f6 0%, #e5e7eb 100%);
  border-color: #9ca3af;
}

.value-category.wasteful {
  background: linear-gradient(135deg, #fee2e2 0%, #fecaca 100%);
  border-color: #f87171;
}

.category-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 12rpx;
  margin-bottom: 12rpx;
}

.category-header .voice-input-btn {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.9);
  border: 2rpx solid rgba(0, 0, 0, 0.1);
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
  padding: 0;
  margin: 0;
}

.category-header .voice-input-btn:active {
  background: rgba(99, 102, 241, 0.1);
  border-color: #6366f1;
  transform: scale(0.95);
}

.category-header .voice-input-btn .btn-icon {
  font-size: 24rpx;
  color: #6366f1;
}

.category-header .voice-input-btn.recording {
  background: rgba(239, 68, 68, 0.2);
  border-color: #ef4444;
  animation: recordingPulse 1.5s infinite;
}

.category-header .voice-input-btn.recording .btn-icon {
  color: #ef4444;
}

@keyframes recordingPulse {
  0% {
    box-shadow: 0 0 0 0 rgba(239, 68, 68, 0.4);
  }
  50% {
    box-shadow: 0 0 0 8rpx rgba(239, 68, 68, 0.1);
  }
  100% {
    box-shadow: 0 0 0 0 rgba(239, 68, 68, 0);
  }
}

.category-icon {
  font-size: 32rpx;
}

.category-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #374151;
}

.category-textarea {
  width: 100%;
  min-height: 120rpx;
  padding: 16rpx;
  background: rgba(255, 255, 255, 0.8);
  border: 1rpx solid rgba(0, 0, 0, 0.1);
  border-radius: 12rpx;
  font-size: 26rpx;
  line-height: 1.5;
  color: #374151;
  box-sizing: border-box;
}

.category-textarea.valuable::placeholder {
  color: #92400e;
}

.category-textarea.neutral::placeholder {
  color: #6b7280;
}

.category-textarea.wasteful::placeholder {
  color: #dc2626;
}

/* 文本框底部区域 */
.textarea-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 8rpx;
}

.value-category .char-count {
  font-size: 22rpx;
  color: #6b7280;
}

/* 格式化按钮 */
.format-btn {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 8rpx 16rpx;
  background: linear-gradient(135deg, #8b5cf6 0%, #a855f7 100%);
  color: white;
  font-size: 24rpx;
  border-radius: 20rpx;
  border: none;
  box-shadow: 0 2rpx 6rpx rgba(139, 92, 246, 0.3);
  transition: all 0.2s ease;
}

.format-btn:active {
  transform: scale(0.95);
  box-shadow: 0 1rpx 3rpx rgba(139, 92, 246, 0.3);
}

.format-icon {
  font-size: 24rpx;
}

.format-text {
  font-size: 22rpx;
  font-weight: 500;
}

/* 录音状态提示 */
.recording-status {
  margin-bottom: 20rpx;
  padding: 20rpx;
  background: linear-gradient(135deg, #fee2e2 0%, #fecaca 100%);
