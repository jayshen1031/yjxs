  border-radius: 16rpx;
  font-size: 22rpx;
  color: #6b7280;
  transition: all 0.2s ease;
  cursor: pointer;
}

.tag-option:active {
  transform: scale(0.95);
}

.tag-option.selected {
  background: linear-gradient(135deg, #f59e0b 0%, #d97706 100%);
