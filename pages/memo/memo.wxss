/* 页面容器 */
.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 24rpx;
  padding-bottom: 40rpx;
}

/* 输入区域 */
.input-section {
  margin-bottom: 20rpx;
}

.fade-in {
  animation: fadeIn 0.3s ease-in;
}

@keyframes fadeIn {
  from { opacity: 0; transform: translateY(20rpx); }
  to { opacity: 1; transform: translateY(0); }
}

/* 卡片 */
.card {
  background: white;
  border-radius: 24rpx;
  overflow: hidden;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.15);
}

.card-content {
  padding: 40rpx 32rpx;
}

/* 标题 */
.title {
  font-size: 40rpx;
  font-weight: bold;
  color: #1f2937;
  margin-bottom: 16rpx;
  text-align: center;
}

.value-tip {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  padding: 16rpx;
  background: linear-gradient(135deg, #fef3c7 0%, #fde68a 100%);
  border-radius: 16rpx;
  margin-bottom: 32rpx;
}

.tip-icon {
  font-size: 32rpx;
}

.tip-text {
  font-size: 24rpx;
  color: #92400e;
}

/* === 已添加活动列表 === */

.activities-list {
  margin-bottom: 32rpx;
}

.activities-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 16rpx;
  padding-bottom: 16rpx;
  border-bottom: 2rpx solid #e5e7eb;
}

.header-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #374151;
}

.stats-summary {
  display: flex;
  gap: 16rpx;
  font-size: 22rpx;
}

.stat-item {
  padding: 6rpx 12rpx;
  border-radius: 10rpx;
  font-weight: 600;
}

.stat-item.valuable {
  background: #d1fae5;
  color: #065f46;
}

.stat-item.neutral {
  background: #e0e7ff;
  color: #3730a3;
}

.stat-item.wasteful {
  background: #fee2e2;
  color: #991b1b;
}

.activity-item {
  background: #f9fafb;
  border-radius: 16rpx;
  margin-bottom: 12rpx;
  overflow: hidden;
}

.activity-main {
  display: flex;
  align-items: flex-start;
  gap: 16rpx;
  padding: 20rpx;
}

.activity-type-icon {
  font-size: 36rpx;
  flex-shrink: 0;
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: white;
  border-radius: 50%;
}

.activity-info {
  flex: 1;
}

.activity-name {
  font-size: 28rpx;
  font-weight: 600;
  color: #1f2937;
  margin-bottom: 8rpx;
}

.activity-meta {
  display: flex;
  align-items: center;
  gap: 12rpx;
  flex-wrap: wrap;
}

.activity-duration {
  font-size: 24rpx;
  color: #6366f1;
  font-weight: 600;
  background: white;
  padding: 4rpx 12rpx;
  border-radius: 10rpx;
}

.activity-tags {
  display: flex;
  gap: 8rpx;
  flex-wrap: wrap;
}

.tag-item {
  font-size: 20rpx;
  padding: 4rpx 10rpx;
  background: #e0e7ff;
  color: #3730a3;
  border-radius: 8rpx;
}

.activity-associations {
  margin-top: 8rpx;
  display: flex;
  gap: 8rpx;
  flex-wrap: wrap;
}

.association-item {
  font-size: 22rpx;
  padding: 6rpx 12rpx;
  border-radius: 10rpx;
}

.association-item.goal {
  background: #fef3c7;
  color: #92400e;
}

.association-item.todo {
  background: #dbeafe;
  color: #1e40af;
}

.delete-btn {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  background: #fee2e2;
  display: flex;
  align-items: center;
  justify-content: center;
  border: none;
  padding: 0;
  flex-shrink: 0;
}

.delete-icon {
  font-size: 28rpx;
}

.total-summary {
  text-align: center;
  padding: 20rpx;
  background: linear-gradient(135deg, #6366f1 0%, #8b5cf6 100%);
  border-radius: 16rpx;
  color: white;
  font-size: 26rpx;
  font-weight: 600;
}

.total-label {
  margin-right: 8rpx;
}

/* === 添加新活动表单 === */

.add-activity-form {
  background: #f9fafb;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 32rpx;
}

.form-header {
  margin-bottom: 24rpx;
}

.form-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #374151;
}

.form-field {
  margin-bottom: 32rpx;
}

.field-label {
  font-size: 28rpx;
  color: #374151;
  margin-bottom: 16rpx;
  font-weight: 600;
}

.field-input {
  background: white;
  border: 2rpx solid #e5e7eb;
  border-radius: 12rpx;
  padding: 24rpx;
  font-size: 30rpx;
  color: #1f2937;
  width: 100%;
  box-sizing: border-box;
  min-height: 88rpx;
  line-height: 1.5;
}

.field-input.number-input {
  width: 240rpx;
  min-height: 88rpx;
}

.field-hint {
  font-size: 20rpx;
  color: #9ca3af;
  margin-top: 8rpx;
  display: block;
}

/* 价值类型选择器 */
.activity-type-selector {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 16rpx;
}

.type-option {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 12rpx;
  padding: 28rpx 20rpx;
  background: white;
  border: 3rpx solid #e5e7eb;
  border-radius: 16rpx;
  transition: all 0.3s;
}

.type-option.active {
  background: linear-gradient(135deg, #6366f1 0%, #8b5cf6 100%);
  border-color: #6366f1;
  box-shadow: 0 6rpx 16rpx rgba(99, 102, 241, 0.4);
  transform: translateY(-4rpx);
}

.type-icon {
  font-size: 40rpx;
}

.type-label {
  font-size: 26rpx;
  color: #6b7280;
  font-weight: 600;
}

.type-option.active .type-label {
  color: white;
  font-weight: 700;
}

/* 标签选择器 */
.tags-selector {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.tag-option {
  padding: 16rpx 24rpx;
  background: white;
  border: 2rpx solid #e5e7eb;
  border-radius: 24rpx;
  font-size: 26rpx;
  color: #6b7280;
  transition: all 0.3s;
  min-height: 64rpx;
  display: flex;
  align-items: center;
  box-sizing: border-box;
  cursor: pointer;
}

.tag-option:active {
  opacity: 0.7;
  transform: scale(0.95);
}

.tag-option.selected {
  background: #e0e7ff;
  color: #3730a3;
  border-color: #6366f1;
  font-weight: 600;
  transform: scale(1.05);
  box-shadow: 0 2rpx 8rpx rgba(99, 102, 241, 0.2);
}

.tag-option.selected:active {
  transform: scale(1.0);
}

/* 空标签提示 */
.empty-tags-hint {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 16rpx;
  background: #f9fafb;
  border-radius: 12rpx;
  border: 2rpx dashed #e5e7eb;
}

.hint-icon {
  font-size: 24rpx;
}

.hint-text {
  font-size: 24rpx;
  color: #9ca3af;
}

/* Picker显示 */
.picker-display {
  background: white;
  border: 2rpx solid #e5e7eb;
  border-radius: 12rpx;
  padding: 24rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  min-height: 88rpx;
  box-sizing: border-box;
}

.picker-display.disabled {
  background: #f9fafb;
  border-color: #e5e7eb;
}

.picker-text {
  font-size: 30rpx;
  color: #1f2937;
  flex: 1;
  line-height: 1.5;
}

.picker-text.hint {
  color: #9ca3af;
  font-size: 26rpx;
}

.picker-arrow {
  font-size: 24rpx;
  color: #9ca3af;
  margin-left: 12rpx;
}

/* 待办状态选择器 */
.status-selector {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 12rpx;
}

.status-option {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  padding: 16rpx;
  background: white;
  border: 2rpx solid #e5e7eb;
  border-radius: 12rpx;
  transition: all 0.3s;
}

.status-option.active {
  background: linear-gradient(135deg, #fef3c7 0%, #fde68a 100%);
  border-color: #f59e0b;
}

.status-icon {
  font-size: 28rpx;
}

.status-label {
  font-size: 24rpx;
  color: #6b7280;
  font-weight: 500;
}

.status-option.active .status-label {
  color: #92400e;
  font-weight: 600;
}

/* 添加活动按钮 */
.add-activity-btn {
  width: 100%;
  background: linear-gradient(135deg, #10b981 0%, #059669 100%);
  color: white;
  border: none;
  border-radius: 12rpx;
  padding: 24rpx;
  font-size: 28rpx;
  font-weight: 600;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  box-shadow: 0 4rpx 12rpx rgba(16, 185, 129, 0.3);
  transition: all 0.3s;
}

.add-activity-btn.disabled {
  background: #d1d5db;
  color: #9ca3af;
  box-shadow: none;
}

.btn-icon {
  font-size: 32rpx;
}

/* 保存按钮 */
.save-section {
  margin-top: 32rpx;
}

.btn {
  width: 100%;
  border: none;
  border-radius: 16rpx;
  padding: 28rpx;
  font-size: 32rpx;
  font-weight: 600;
  text-align: center;
  transition: all 0.3s;
}

.btn-primary {
  background: linear-gradient(135deg, #6366f1 0%, #8b5cf6 100%);
  color: white;
  box-shadow: 0 8rpx 24rpx rgba(99, 102, 241, 0.4);
}

.btn-primary:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 12rpx rgba(99, 102, 241, 0.3);
}

.btn-primary[disabled] {
  background: #d1d5db;
  color: #9ca3af;
  box-shadow: none;
}

/* === 时间选择区域 === */

.time-selection {
  margin-bottom: 32rpx;
  padding: 24rpx;
  background: #f9fafb;
  border-radius: 16rpx;
  border-left: 4rpx solid #6366f1;
}

/* 日期类型选择器 */
.date-type-selector {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 12rpx;
  margin-bottom: 20rpx;
}

.date-type-option {
  padding: 16rpx;
  background: white;
  border: 2rpx solid #e5e7eb;
  border-radius: 12rpx;
  text-align: center;
  transition: all 0.3s;
}

.date-type-option.active {
  background: linear-gradient(135deg, #6366f1 0%, #8b5cf6 100%);
  border-color: #6366f1;
  box-shadow: 0 4rpx 12rpx rgba(99, 102, 241, 0.3);
}

.date-type-label {
  font-size: 26rpx;
  color: #6b7280;
  font-weight: 600;
}

.date-type-option.active .date-type-label {
  color: white;
}

/* 自定义日期选择器 */
.custom-date-picker {
  margin-bottom: 20rpx;
}

/* 时间段选择器 */
.time-range-selector {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 20rpx;
}

.time-picker-group {
  flex: 1;
}

.time-label {
  display: block;
  font-size: 24rpx;
  color: #6b7280;
  margin-bottom: 8rpx;
  font-weight: 600;
}

.time-separator {
  font-size: 32rpx;
  color: #6366f1;
  margin-top: 28rpx;
  font-weight: bold;
}

.picker-display {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 20rpx;
  background: white;
  border: 2rpx solid #e5e7eb;
  border-radius: 12rpx;
  min-height: 72rpx;
  box-sizing: border-box;
}

.picker-icon {
  font-size: 28rpx;
  flex-shrink: 0;
}

.picker-text {
  flex: 1;
  font-size: 26rpx;
  color: #1f2937;
  line-height: 1.5;
}

.picker-arrow {
  font-size: 20rpx;
  color: #9ca3af;
  flex-shrink: 0;
}

/* 选中时间显示 */
.selected-time-display {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  padding: 16rpx;
  background: linear-gradient(135deg, #fef3c7 0%, #fde68a 100%);
  border-radius: 12rpx;
}

.time-display-icon {
  font-size: 28rpx;
}

.time-display-text {
  font-size: 28rpx;
  color: #92400e;
  font-weight: 600;
}
