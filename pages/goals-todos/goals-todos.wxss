/* 容器 */
.container {
  min-height: 100vh;
  background: #f8fafc;
  padding-bottom: 120rpx;
}

/* Tab头部 */
.tab-header {
  display: flex;
  background: white;
  border-bottom: 1rpx solid #e2e8f0;
  position: sticky;
  top: 0;
  z-index: 100;
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 32rpx 0;
  position: relative;
}

.tab-title {
  font-size: 30rpx;
  color: #64748b;
  font-weight: 500;
  transition: all 0.3s ease;
}

.tab-item.active .tab-title {
  color: #6366f1;
  font-weight: bold;
}

.tab-indicator {
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 80rpx;
  height: 6rpx;
  background: linear-gradient(135deg, #6366f1 0%, #8b5cf6 100%);
  border-radius: 3rpx;
  animation: slideIn 0.3s ease;
}

@keyframes slideIn {
  from {
    width: 0;
  }
  to {
    width: 80rpx;
  }
}

/* 统计部分 */
.stats-section {
  background: linear-gradient(135deg, #6366f1 0%, #8b5cf6 100%);
  padding: 32rpx 24rpx;
  margin: 24rpx;
  border-radius: 16rpx;
  color: white;
}

.stats-section.todos {
  background: linear-gradient(135deg, #f59e0b 0%, #d97706 100%);
}

.stats-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.stats-title {
  font-size: 36rpx;
  font-weight: bold;
}

.action-btn {
  padding: 12rpx 24rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 24rpx;
  font-size: 24rpx;
  color: white;
  backdrop-filter: blur(10rpx);
}

.stats-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 16rpx;
}

.stat-card {
  background: rgba(255, 255, 255, 0.15);
  padding: 24rpx 16rpx;
  border-radius: 12rpx;
  text-align: center;
  backdrop-filter: blur(10rpx);
}

.stat-value {
  display: block;
  font-size: 40rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
}

.stat-label {
  display: block;
  font-size: 22rpx;
  opacity: 0.9;
}

/* 筛选部分 */
.filter-section {
  background: white;
  margin: 0 24rpx 16rpx;
  padding: 24rpx;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.search-bar {
  margin-bottom: 20rpx;
}

.search-input {
  background: #f8fafc;
  padding: 20rpx 24rpx;
  border-radius: 12rpx;
  font-size: 28rpx;
  border: 2rpx solid #e2e8f0;
}

.filter-chips {
  white-space: nowrap;
}

.chip-group {
  display: inline-flex;
  gap: 12rpx;
  padding: 8rpx 0;
}

.chip {
  padding: 12rpx 24rpx;
  background: #f1f5f9;
  color: #64748b;
  border-radius: 24rpx;
  font-size: 24rpx;
  transition: all 0.3s ease;
}

.chip.active {
  background: linear-gradient(135deg, #6366f1 0%, #8b5cf6 100%);
  color: white;
  box-shadow: 0 4rpx 12rpx rgba(99, 102, 241, 0.3);
}

/* 列表 */
.goals-list,
.todos-list {
  max-height: calc(100vh - 550rpx);
  padding: 0 24rpx;
}

.empty-state {
  text-align: center;
  padding: 120rpx 48rpx;
  color: #94a3b8;
}

.empty-icon {
  display: block;
  font-size: 120rpx;
  margin-bottom: 24rpx;
}

.empty-text {
  display: block;
  font-size: 32rpx;
  font-weight: 500;
  margin-bottom: 12rpx;
}

.empty-hint {
  display: block;
  font-size: 24rpx;
}

/* 目标卡片 */
.goal-card {
  background: white;
  margin-bottom: 16rpx;
  border-radius: 16rpx;
  padding: 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.goal-header {
  margin-bottom: 16rpx;
}

.goal-title-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
}

.goal-title {
  flex: 1;
  font-size: 30rpx;
  font-weight: 600;
  color: #1e293b;
  margin-right: 12rpx;
}

.goal-category {
  flex-shrink: 0;
  padding: 6rpx 16rpx;
  background: #dbeafe;
  color: #2563eb;
  border-radius: 12rpx;
  font-size: 20rpx;
}

.goal-meta {
  display: flex;
  gap: 12rpx;
}

.goal-status {
  padding: 6rpx 16rpx;
  border-radius: 12rpx;
  font-size: 22rpx;
}

.goal-status.status-not-started {
  background: #f3f4f6;
  color: #6b7280;
}

.goal-status.status-in-progress {
  background: #dbeafe;
  color: #2563eb;
}

.goal-status.status-completed {
  background: #d1fae5;
  color: #059669;
}

.goal-status.status-paused {
  background: #fef3c7;
  color: #d97706;
}

.goal-priority {
  padding: 6rpx 16rpx;
  border-radius: 12rpx;
  font-size: 22rpx;
}

.goal-priority.priority-high {
  background: #fee2e2;
  color: #dc2626;
}

.goal-priority.priority-medium {
  background: #fef3c7;
  color: #d97706;
}

.goal-priority.priority-low {
  background: #f3f4f6;
  color: #9ca3af;
}

.goal-description {
  display: block;
  font-size: 24rpx;
  color: #64748b;
  line-height: 1.6;
  margin-bottom: 16rpx;
}

.progress-section {
  margin-bottom: 16rpx;
}

.progress-info {
  display: flex;
  justify-content: space-between;
  margin-bottom: 8rpx;
}

.progress-label {
  font-size: 24rpx;
  color: #64748b;
}

.progress-value {
  font-size: 24rpx;
  color: #6366f1;
  font-weight: 600;
}

.progress-bar {
  height: 12rpx;
  background: #e2e8f0;
  border-radius: 6rpx;
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #6366f1 0%, #8b5cf6 100%);
  border-radius: 6rpx;
  transition: width 0.3s ease;
}

.goal-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  flex-wrap: wrap;
  gap: 12rpx;
  margin-bottom: 16rpx;
}

.goal-info {
  display: flex;
  gap: 16rpx;
  flex-wrap: wrap;
}

.info-item {
  font-size: 22rpx;
  color: #64748b;
}

.goal-tags {
  display: flex;
  gap: 8rpx;
  flex-wrap: wrap;
}

.tag {
  padding: 6rpx 16rpx;
  background: #f8fafc;
  color: #64748b;
  border-radius: 12rpx;
  font-size: 20rpx;
  border: 1rpx solid #e2e8f0;
}

.goal-actions {
  display: flex;
  gap: 16rpx;
  padding-top: 16rpx;
  border-top: 1rpx solid #f1f5f9;
}

.action-btn-small {
  flex: 1;
  text-align: center;
  padding: 12rpx;
  background: #f8fafc;
  color: #6366f1;
  border-radius: 8rpx;
  font-size: 24rpx;
}

.action-btn-small.danger {
  color: #dc2626;
}

/* 待办卡片 */
.todo-card {
  background: white;
  margin-bottom: 16rpx;
  border-radius: 16rpx;
  padding: 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.todo-header {
  display: flex;
  align-items: flex-start;
  gap: 16rpx;
  margin-bottom: 16rpx;
}

.todo-check {
  flex-shrink: 0;
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.check-icon {
  font-size: 32rpx;
  color: #94a3b8;
}

.check-icon.checked {
  color: #10b981;
  font-size: 36rpx;
}

.todo-main {
  flex: 1;
}

.todo-title-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 8rpx;
}

.todo-title {
  flex: 1;
  font-size: 30rpx;
  font-weight: 500;
  color: #1e293b;
  word-break: break-all;
}

.todo-title.completed {
  text-decoration: line-through;
  color: #94a3b8;
}

.todo-type {
  flex-shrink: 0;
  padding: 6rpx 16rpx;
  border-radius: 12rpx;
  font-size: 20rpx;
  margin-left: 12rpx;
}

.todo-type.type-goal-oriented {
  background: #dbeafe;
  color: #2563eb;
}

.todo-type.type-ad-hoc {
  background: #f3f4f6;
  color: #6b7280;
}

.todo-type.type-habit {
  background: #d1fae5;
  color: #059669;
}

.todo-type.type-urgent {
  background: #fee2e2;
  color: #dc2626;
}

.todo-description {
  display: block;
  font-size: 24rpx;
  color: #64748b;
  line-height: 1.6;
  margin-bottom: 12rpx;
}

.todo-meta {
  display: flex;
  gap: 16rpx;
  flex-wrap: wrap;
  margin-bottom: 12rpx;
}

.priority {
  padding: 6rpx 16rpx;
  border-radius: 12rpx;
  font-size: 20rpx;
}

.priority.priority-urgent-important {
  background: #fee2e2;
  color: #dc2626;
}

.priority.priority-important-not-urgent {
  background: #fef3c7;
  color: #d97706;
}

.priority.priority-urgent-not-important {
  background: #fed7aa;
  color: #ea580c;
}

.priority.priority-not-urgent-not-important {
  background: #f3f4f6;
  color: #9ca3af;
}

.due-date {
  font-size: 22rpx;
  color: #64748b;
}

.due-date.overdue {
  color: #dc2626;
  font-weight: 500;
}

.related-goal {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 8rpx 16rpx;
  background: #f0f9ff;
  border-radius: 12rpx;
  margin-bottom: 12rpx;
}

.goal-icon {
  font-size: 24rpx;
}

.goal-name {
  font-size: 22rpx;
  color: #0284c7;
}

.todo-tags {
  display: flex;
  gap: 8rpx;
  flex-wrap: wrap;
}

.todo-actions {
  display: flex;
  gap: 16rpx;
  padding-top: 16rpx;
  border-top: 1rpx solid #f1f5f9;
}

/* 弹窗 - 优化版 */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
  backdrop-filter: blur(4rpx);
  z-index: 9999;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 48rpx;
  animation: fadeIn 0.3s ease;
}

@keyframes fadeIn {
  from { opacity: 0; }
  to { opacity: 1; }
}

.modal-content {
  background: white;
  border-radius: 32rpx;
  width: 100%;
  max-width: 640rpx;
  max-height: 85vh;
  display: flex;
  flex-direction: column;
  overflow: hidden;
  box-shadow: 0 24rpx 48rpx rgba(0, 0, 0, 0.15);
  animation: slideUp 0.3s ease;
}

@keyframes slideUp {
  from {
    transform: translateY(40rpx);
    opacity: 0;
  }
  to {
    transform: translateY(0);
    opacity: 1;
  }
}

.modal-content.small {
  max-width: 520rpx;
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 40rpx 32rpx 32rpx;
  background: linear-gradient(135deg, #6366f1 0%, #8b5cf6 100%);
}

.modal-title {
  font-size: 36rpx;
  font-weight: bold;
  color: white;
}

.close-btn {
  font-size: 44rpx;
  color: rgba(255, 255, 255, 0.8);
  line-height: 1;
  padding: 0 8rpx;
  transition: color 0.2s;
}

.close-btn:active {
  color: white;
}

.modal-body {
  flex: 1;
  overflow-y: auto;
  padding: 40rpx 32rpx;
}

.form-group {
  margin-bottom: 40rpx;
}

.form-group:last-child {
  margin-bottom: 0;
}

.form-label {
  display: block;
  font-size: 28rpx;
  color: #1e293b;
  margin-bottom: 16rpx;
  font-weight: 600;
}

.form-input,
.form-textarea {
  width: 100%;
  padding: 24rpx 20rpx;
  background: #f8fafc;
  border: 2rpx solid #e2e8f0;
  border-radius: 16rpx;
  font-size: 30rpx;
  color: #1e293b;
  box-sizing: border-box;
  transition: all 0.2s;
}

.form-input:focus,
.form-textarea:focus {
  background: white;
  border-color: #6366f1;
  outline: none;
}

.form-textarea {
  min-height: 200rpx;
  line-height: 1.6;
}

.form-picker {
  width: 100%;
  padding: 20rpx;
  background: #f8fafc;
  border: 2rpx solid #e2e8f0;
  border-radius: 12rpx;
}

.picker-value {
  font-size: 28rpx;
  color: #1e293b;
}

.progress-slider {
  width: 100%;
  margin-top: 16rpx;
}

.modal-footer {
  display: flex;
  gap: 16rpx;
  padding: 24rpx 32rpx;
  border-top: 1rpx solid #f1f5f9;
}

.modal-btn {
  flex: 1;
  padding: 24rpx;
  border-radius: 12rpx;
  font-size: 28rpx;
  font-weight: 500;
  border: none;
  line-height: 1;
}

.modal-btn.cancel {
  background: #f1f5f9;
  color: #64748b;
}

.modal-btn.confirm {
  background: linear-gradient(135deg, #6366f1 0%, #8b5cf6 100%);
  color: white;
}

.modal-btn:active {
  opacity: 0.8;
}
