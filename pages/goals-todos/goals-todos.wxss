/* 容器 */
.container {
  min-height: 100vh;
  background: #f8fafc;
  padding-bottom: 120rpx;
}

/* Tab头部 */
.tab-header {
  display: flex;
  background: white;
  border-bottom: 1rpx solid #e2e8f0;
  position: sticky;
  top: 0;
  z-index: 100;
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 32rpx 0;
  position: relative;
}

.tab-title {
  font-size: 30rpx;
  color: #64748b;
  font-weight: 500;
  transition: all 0.3s ease;
}

.tab-item.active .tab-title {
  color: #6366f1;
  font-weight: bold;
}

.tab-indicator {
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 80rpx;
  height: 6rpx;
  background: linear-gradient(135deg, #6366f1 0%, #8b5cf6 100%);
  border-radius: 3rpx;
  animation: slideIn 0.3s ease;
}

@keyframes slideIn {
  from {
    width: 0;
  }
  to {
    width: 80rpx;
  }
}

/* 统计部分 */
.stats-section {
  background: linear-gradient(135deg, #6366f1 0%, #8b5cf6 100%);
  padding: 32rpx 24rpx;
  margin: 24rpx;
  border-radius: 16rpx;
  color: white;
}

.stats-section.todos {
  background: linear-gradient(135deg, #f59e0b 0%, #d97706 100%);
}

.stats-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.stats-title {
  font-size: 36rpx;
  font-weight: bold;
}

.action-btn {
  padding: 12rpx 24rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 24rpx;
  font-size: 24rpx;
  color: white;
  backdrop-filter: blur(10rpx);
}

.stats-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 16rpx;
}

.stat-card {
  background: rgba(255, 255, 255, 0.15);
  padding: 24rpx 16rpx;
  border-radius: 12rpx;
  text-align: center;
  backdrop-filter: blur(10rpx);
}

.stat-value {
  display: block;
  font-size: 40rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
}

.stat-label {
  display: block;
  font-size: 22rpx;
  opacity: 0.9;
}

/* 筛选部分 */
.filter-section {
  background: white;
  margin: 0 24rpx 16rpx;
  padding: 24rpx;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.search-bar {
  margin-bottom: 20rpx;
}

.search-input {
  background: #f8fafc;
  padding: 20rpx 24rpx;
  border-radius: 12rpx;
  font-size: 28rpx;
  border: 2rpx solid #e2e8f0;
}

.filter-chips {
  white-space: nowrap;
}

.chip-group {
  display: inline-flex;
  gap: 12rpx;
  padding: 8rpx 0;
  align-items: center;
}

.label-text {
  font-size: 24rpx;
  color: #64748b;
  font-weight: 500;
  margin-right: 8rpx;
  white-space: nowrap;
}

.chip {
  padding: 12rpx 24rpx;
  background: #f1f5f9;
  color: #64748b;
  border-radius: 24rpx;
  font-size: 24rpx;
  transition: all 0.3s ease;
}

.chip.active {
  background: linear-gradient(135deg, #6366f1 0%, #8b5cf6 100%);
  color: white;
  box-shadow: 0 4rpx 12rpx rgba(99, 102, 241, 0.3);
}

/* 切换已完成按钮样式 */
.chip.toggle-completed {
  border: 2rpx solid #10b981;
  background: white;
  color: #10b981;
}

.chip.toggle-completed.active {
  background: linear-gradient(135deg, #10b981 0%, #059669 100%);
  color: white;
  box-shadow: 0 4rpx 12rpx rgba(16, 185, 129, 0.3);
}

/* 列表 */
.goals-list,
.todos-list {
  max-height: calc(100vh - 550rpx);
  padding: 24rpx 20rpx 32rpx;
}

.empty-state {
  text-align: center;
  padding: 120rpx 48rpx;
  color: #94a3b8;
}

.empty-icon {
  display: block;
  font-size: 120rpx;
  margin-bottom: 24rpx;
}

.empty-text {
  display: block;
  font-size: 32rpx;
  font-weight: 500;
  margin-bottom: 12rpx;
}

.empty-hint {
  display: block;
  font-size: 24rpx;
}

/* 目标卡片（紧凑版） */
.goal-card-compact {
  background: white;
  margin: 0 24rpx 16rpx;
  padding: 24rpx;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
}

.goal-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 16rpx;
}

.goal-title-area {
  flex: 1;
  margin-right: 16rpx;
}

.goal-card-compact .goal-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1e293b;
  line-height: 1.4;
  margin-bottom: 8rpx;
  display: block;
}

.goal-category {
  display: inline-block;
  padding: 4rpx 12rpx;
  background: linear-gradient(135deg, #6366f1 0%, #8b5cf6 100%);
  color: white;
  border-radius: 8rpx;
  font-size: 20rpx;
  font-weight: 500;
}

.goal-actions-compact {
  display: flex;
  gap: 16rpx;
}

.action-icon {
  font-size: 36rpx;
  padding: 8rpx;
}

.action-icon.danger {
  opacity: 0.6;
}

/* 紧凑进度条 */
.progress-compact {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 16rpx;
}

.progress-bar-compact {
  flex: 1;
  height: 12rpx;
  background: #e2e8f0;
  border-radius: 6rpx;
  overflow: hidden;
}

.progress-fill-compact {
  height: 100%;
  border-radius: 6rpx;
  transition: width 0.3s ease;
}

.progress-fill-compact.status-in-progress {
  background: linear-gradient(90deg, #6366f1 0%, #8b5cf6 100%);
}

.progress-fill-compact.status-completed {
  background: linear-gradient(90deg, #10b981 0%, #059669 100%);
}

.progress-fill-compact.status-not-started {
  background: linear-gradient(90deg, #94a3b8 0%, #64748b 100%);
}

.progress-percent {
  font-size: 28rpx;
  font-weight: 600;
  color: #6366f1;
  min-width: 80rpx;
  text-align: right;
}

/* 目标元信息 */
.goal-meta {
  display: flex;
  gap: 16rpx;
  flex-wrap: wrap;
}

.meta-item {
  font-size: 24rpx;
  color: #64748b;
  padding: 6rpx 12rpx;
  background: #f1f5f9;
  border-radius: 8rpx;
}

.meta-item.status-completed {
  color: #059669;
  background: #d1fae5;
}

.meta-item.status-in-progress {
  color: #6366f1;
  background: #e0e7ff;
}

/* 目标卡片（旧版，保留兼容） */
.goal-card {
  background: white;
  margin-bottom: 16rpx;
  border-radius: 16rpx;
  padding: 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.goal-header {
  margin-bottom: 16rpx;
}

.goal-title-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.goal-title {
  flex: 1;
  font-size: 32rpx;
  font-weight: 600;
  color: #1e293b;
  margin-right: 12rpx;
}

.goal-importance {
  flex-shrink: 0;
  padding: 8rpx 20rpx;
  border-radius: 24rpx;
  font-size: 24rpx;
  font-weight: 500;
}

.goal-importance.importance-core {
  background: linear-gradient(135deg, #fef3c7 0%, #fcd34d 100%);
  color: #92400e;
}

.goal-importance.importance-important {
  background: linear-gradient(135deg, #dbeafe 0%, #93c5fd 100%);
  color: #1e40af;
}

.goal-importance.importance-auxiliary {
  background: #f1f5f9;
  color: #64748b;
}

.goal-category {
  flex-shrink: 0;
  padding: 6rpx 16rpx;
  background: #dbeafe;
  color: #2563eb;
  border-radius: 12rpx;
  font-size: 20rpx;
}

.goal-meta {
  display: flex;
  gap: 12rpx;
}

.goal-status {
  padding: 6rpx 16rpx;
  border-radius: 12rpx;
  font-size: 22rpx;
}

.goal-status.status-not-started {
  background: #f3f4f6;
  color: #6b7280;
}

.goal-status.status-in-progress {
  background: #dbeafe;
  color: #2563eb;
}

.goal-status.status-completed {
  background: #d1fae5;
  color: #059669;
}

.goal-status.status-paused {
  background: #fef3c7;
  color: #d97706;
}

.goal-priority {
  padding: 6rpx 16rpx;
  border-radius: 12rpx;
  font-size: 22rpx;
}

.goal-priority.priority-high {
  background: #fee2e2;
  color: #dc2626;
}

.goal-priority.priority-medium {
  background: #fef3c7;
  color: #d97706;
}

.goal-priority.priority-low {
  background: #f3f4f6;
  color: #9ca3af;
}

.goal-description {
  display: block;
  font-size: 24rpx;
  color: #64748b;
  line-height: 1.6;
  margin-bottom: 16rpx;
}

/* 目标信息表格 */
.goal-info-table {
  margin-bottom: 20rpx;
  background: #f8fafc;
  border-radius: 12rpx;
  padding: 20rpx;
}

.info-row {
  display: flex;
  gap: 16rpx;
  margin-bottom: 16rpx;
}

.info-row:last-child {
  margin-bottom: 0;
}

.info-cell {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.info-label {
  font-size: 22rpx;
  color: #64748b;
  font-weight: 500;
}

.info-value {
  font-size: 28rpx;
  color: #1e293b;
  font-weight: 600;
}

.info-value.highlight {
  color: #6366f1;
}

.info-value.warning {
  color: #dc2626;
}

.progress-section {
  margin-bottom: 16rpx;
}

.progress-info {
  display: flex;
  justify-content: space-between;
  margin-bottom: 8rpx;
}

.progress-label {
  font-size: 24rpx;
  color: #64748b;
}

.progress-value {
  font-size: 24rpx;
  color: #6366f1;
  font-weight: 600;
}

.progress-bar {
  height: 12rpx;
  background: #e2e8f0;
  border-radius: 6rpx;
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #6366f1 0%, #8b5cf6 100%);
  border-radius: 6rpx;
  transition: width 0.3s ease;
}

.goal-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  flex-wrap: wrap;
  gap: 12rpx;
  margin-bottom: 16rpx;
}

.goal-info {
  display: flex;
  gap: 16rpx;
  flex-wrap: wrap;
}

.info-item {
  font-size: 22rpx;
  color: #64748b;
}

.goal-tags {
  display: flex;
  gap: 8rpx;
  flex-wrap: wrap;
}

.tag {
  padding: 6rpx 16rpx;
  background: #f8fafc;
  color: #64748b;
  border-radius: 12rpx;
  font-size: 20rpx;
  border: 1rpx solid #e2e8f0;
}

.goal-actions {
  display: flex;
  gap: 16rpx;
  padding-top: 16rpx;
  border-top: 1rpx solid #f1f5f9;
}

.action-btn-small {
  flex: 1;
  text-align: center;
  padding: 16rpx 12rpx;
  background: linear-gradient(135deg, #f8fafc 0%, #f1f5f9 100%);
  color: #6366f1;
  border-radius: 12rpx;
  font-size: 26rpx;
  font-weight: 600;
  border: 1rpx solid #e2e8f0;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.04);
}

.action-btn-small:active {
  transform: scale(0.96);
  background: linear-gradient(135deg, #eef2ff 0%, #e0e7ff 100%);
  box-shadow: 0 1rpx 4rpx rgba(99, 102, 241, 0.2);
}

.action-btn-small.danger {
  color: #dc2626;
}

.action-btn-small.danger:active {
  background: linear-gradient(135deg, #fee2e2 0%, #fecaca 100%);
  box-shadow: 0 1rpx 4rpx rgba(220, 38, 38, 0.2);
}

.action-btn-small.delete {
  color: #ef4444;
  border-color: #fecaca;
}

.action-btn-small.delete:active {
  background: linear-gradient(135deg, #fee2e2 0%, #fecaca 100%);
  box-shadow: 0 1rpx 4rpx rgba(239, 68, 68, 0.2);
}

/* 待办卡片 - 紧凑版 ⭐⭐⭐ */
.todo-card {
  background: white;
  margin-bottom: 12rpx;
  border-radius: 16rpx;
  padding: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
  border-left: 4rpx solid #e2e8f0;
  transition: all 0.2s ease;
}

.todo-card:active {
  background: #fafafa;
  border-left-color: #6366f1;
}

.todo-header {
  display: flex;
  align-items: flex-start;
  gap: 16rpx;
}

.todo-check {
  flex-shrink: 0;
  width: 44rpx;
  height: 44rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  background: white;
  border: 2rpx solid #d1d5db;
  transition: all 0.2s ease;
}

.todo-check:active {
  transform: scale(0.92);
  border-color: #6366f1;
}

.check-icon {
  font-size: 28rpx;
  color: #d1d5db;
  transition: all 0.2s ease;
}

.check-icon.checked {
  color: #10b981;
  font-size: 30rpx;
  font-weight: bold;
}

.todo-main {
  flex: 1;
  min-width: 0;
}

.todo-title-row {
  margin-bottom: 10rpx;
}

.todo-title {
  font-size: 30rpx;
  font-weight: 500;
  color: #1f2937;
  line-height: 1.4;
  word-break: break-word;
}

.todo-title.completed {
  text-decoration: line-through;
  color: #9ca3af;
  opacity: 0.6;
}

.todo-type {
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
  font-size: 20rpx;
  font-weight: 500;
  display: inline-block;
}

/* 待办类型样式 */
.todo-type.type-goal-oriented {
  background: #dbeafe;
  color: #1e40af;
}

.todo-type.type-ad-hoc {
  background: #f3f4f6;
  color: #6b7280;
}

.todo-type.type-habit {
  background: #d1fae5;
  color: #059669;
}

.todo-type.type-urgent {
  background: #fee2e2;
  color: #dc2626;
}

.todo-meta {
  display: flex;
  gap: 8rpx;
  flex-wrap: wrap;
  margin-bottom: 8rpx;
  align-items: center;
}

.priority {
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
  font-size: 20rpx;
  font-weight: 500;
  display: inline-block;
}

/* 优先级样式 */
.priority.priority-urgent-important {
  background: #fee2e2;
  color: #dc2626;
}

.priority.priority-important-not-urgent {
  background: #fef3c7;
  color: #d97706;
}

.priority.priority-urgent-not-important {
  background: #dbeafe;
  color: #2563eb;
}

.priority.priority-not-urgent-not-important {
  background: #f3f4f6;
  color: #6b7280;
}

.due-date {
  font-size: 20rpx;
  color: #6b7280;
  font-weight: 500;
  padding: 4rpx 12rpx;
  background: #f9fafb;
  border-radius: 8rpx;
}

.due-date.overdue {
  color: #dc2626;
  background: #fef2f2;
}

.related-goal {
  font-size: 22rpx;
  color: #0369a1;
  background: #f0f9ff;
  padding: 6rpx 12rpx;
  border-radius: 8rpx;
  margin-bottom: 8rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.todo-tags {
  display: flex;
  gap: 6rpx;
  flex-wrap: wrap;
}

.todo-tags .tag {
  padding: 4rpx 10rpx;
  background: #f8fafc;
  color: #64748b;
  border-radius: 6rpx;
  font-size: 20rpx;
  border: 1rpx solid #e2e8f0;
}

.todo-actions-compact {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
  margin-left: 8rpx;
}

.action-icon {
  font-size: 32rpx;
  padding: 8rpx;
  transition: transform 0.2s ease;
}

.action-icon:active {
  transform: scale(0.85);
}

.action-icon.danger {
  opacity: 0.6;
}

/* 弹窗 - 优化版 */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
  backdrop-filter: blur(4rpx);
  z-index: 9999;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 48rpx;
  animation: fadeIn 0.3s ease;
}

@keyframes fadeIn {
  from { opacity: 0; }
  to { opacity: 1; }
}

.modal-content {
  background: white;
  border-radius: 32rpx;
  width: 100%;
  max-width: 640rpx;
  max-height: 85vh;
  display: flex;
  flex-direction: column;
  overflow: hidden;
  box-shadow: 0 24rpx 48rpx rgba(0, 0, 0, 0.15);
  animation: slideUp 0.3s ease;
}

@keyframes slideUp {
  from {
    transform: translateY(40rpx);
    opacity: 0;
  }
  to {
    transform: translateY(0);
    opacity: 1;
  }
}

.modal-content.small {
  max-width: 520rpx;
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 40rpx 32rpx 32rpx;
  background: linear-gradient(135deg, #6366f1 0%, #8b5cf6 100%);
}

.modal-title {
  font-size: 36rpx;
  font-weight: bold;
  color: white;
}

.close-btn {
  font-size: 44rpx;
  color: rgba(255, 255, 255, 0.8);
  line-height: 1;
  padding: 0 8rpx;
  transition: color 0.2s;
}

.close-btn:active {
  color: white;
}

.modal-body {
  flex: 1;
  overflow-y: auto;
  padding: 48rpx 40rpx;
  background: #fafbfc;
}

.form-group {
  margin-bottom: 48rpx;
}

.form-group:last-child {
  margin-bottom: 0;
}

.form-label {
  display: block;
  font-size: 28rpx;
  color: #475569;
  margin-bottom: 16rpx;
  font-weight: 500;
}

.form-label::before {
  content: '';
  display: inline-block;
  width: 6rpx;
  height: 6rpx;
  background: #6366f1;
  border-radius: 50%;
  margin-right: 12rpx;
  vertical-align: middle;
}

.form-input {
  width: 100%;
  min-height: 80rpx;
  padding: 24rpx 20rpx;
  background: white;
  border: 2rpx solid #e2e8f0;
  border-radius: 16rpx;
  font-size: 30rpx;
  color: #1e293b;
  box-sizing: border-box;
  transition: all 0.2s;
  line-height: 1.5;
}

.form-textarea {
  width: 100%;
  min-height: 180rpx;
  padding: 24rpx 20rpx;
  background: white;
  border: 2rpx solid #e2e8f0;
  border-radius: 16rpx;
  font-size: 30rpx;
  color: #1e293b;
  box-sizing: border-box;
  transition: all 0.2s;
  line-height: 1.6;
}

.form-input::placeholder,
.form-textarea::placeholder {
  color: #94a3b8;
  font-size: 28rpx;
}

.form-input:focus,
.form-textarea:focus {
  background: white;
  border-color: #6366f1;
  box-shadow: 0 0 0 4rpx rgba(99, 102, 241, 0.15);
  outline: none;
}

.form-picker {
  width: 100%;
  padding: 24rpx 20rpx;
  background: white;
  border: 2rpx solid #e2e8f0;
  border-radius: 16rpx;
  position: relative;
}

.picker-value {
  font-size: 30rpx;
  color: #1e293b;
  line-height: 1.5;
}

.picker-value::after {
  content: '▼';
  position: absolute;
  right: 20rpx;
  top: 50%;
  transform: translateY(-50%);
  font-size: 24rpx;
  color: #94a3b8;
}

.progress-slider {
  width: 100%;
  margin-top: 16rpx;
}

.modal-footer {
  display: flex;
  gap: 16rpx;
  padding: 24rpx 32rpx;
  border-top: 1rpx solid #f1f5f9;
}

.modal-btn {
  flex: 1;
  padding: 24rpx;
  border-radius: 12rpx;
  font-size: 28rpx;
  font-weight: 500;
  border: none;
  line-height: 1;
}

.modal-btn.cancel {
  background: #f1f5f9;
  color: #64748b;
}

.modal-btn.confirm {
  background: linear-gradient(135deg, #6366f1 0%, #8b5cf6 100%);
  color: white;
}

.modal-btn:active {
  opacity: 0.8;
}
