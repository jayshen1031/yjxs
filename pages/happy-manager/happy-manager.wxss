/* 容器 */
.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #fef3c7 0%, #fde68a 100%);
  padding: 20rpx;
  padding-bottom: 200rpx;
}

/* 统计卡片 */
.stats-card {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
}

.stats-row {
  display: flex;
  justify-content: space-around;
}

.stat-item {
  text-align: center;
}

.stat-value {
  font-size: 48rpx;
  font-weight: bold;
  background: linear-gradient(135deg, #f59e0b 0%, #d97706 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

.stat-label {
  font-size: 24rpx;
  color: #6b7280;
  margin-top: 8rpx;
}

/* 分类筛选 */
.category-filter {
  margin-bottom: 20rpx;
}

.category-scroll {
  white-space: nowrap;
}

.category-list {
  display: inline-block;
  padding: 10rpx 0;
}

.category-chip {
  display: inline-block;
  background: white;
  padding: 16rpx 28rpx;
  margin-right: 16rpx;
  border-radius: 40rpx;
  font-size: 28rpx;
  color: #6b7280;
  transition: all 0.3s ease;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
}

.category-chip.active {
  background: linear-gradient(135deg, #f59e0b 0%, #d97706 100%);
  color: white;
  box-shadow: 0 4rpx 12rpx rgba(245, 158, 11, 0.3);
}

.category-chip .count {
  font-size: 24rpx;
  margin-left: 8rpx;
  opacity: 0.8;
}

/* 筛选栏 */
.filter-bar {
  display: flex;
  gap: 16rpx;
  margin-bottom: 20rpx;
}

.search-box {
  flex: 1;
  background: white;
  border-radius: 16rpx;
  padding: 0 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
}

.search-input {
  height: 80rpx;
  font-size: 28rpx;
}

.sort-picker {
  flex-shrink: 0;
}

.sort-btn {
  display: flex;
  align-items: center;
  gap: 12rpx;
  background: white;
  padding: 0 24rpx;
  height: 80rpx;
  border-radius: 16rpx;
  font-size: 28rpx;
  color: #374151;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
}

.sort-btn .arrow {
  font-size: 20rpx;
  color: #9ca3af;
}

/* 开心事项列表 */
.happy-things-list {
  margin-bottom: 20rpx;
}

.happy-thing-item {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
  transition: all 0.3s ease;
}

.happy-thing-item:active {
  transform: translateY(-2rpx);
  box-shadow: 0 6rpx 16rpx rgba(0, 0, 0, 0.12);
}

.item-header {
  display: flex;
  align-items: flex-start;
  gap: 20rpx;
  margin-bottom: 20rpx;
}

.emoji {
  font-size: 64rpx;
  flex-shrink: 0;
}

.item-info {
  flex: 1;
}

.content {
  font-size: 32rpx;
  color: #1f2937;
  font-weight: 500;
  margin-bottom: 12rpx;
  line-height: 1.5;
}

.meta {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

.category-tag,
.energy-tag,
.duration-tag,
.source-tag,
.system-tag {
  padding: 6rpx 16rpx;
  border-radius: 8rpx;
  font-size: 22rpx;
  line-height: 1.2;
}

/* 分类标签颜色 - 使用data-category属性选择器 */
.category-tag[data-category="运动"] { background: #fee2e2; color: #991b1b; }
.category-tag[data-category="美食"] { background: #fed7aa; color: #9a3412; }
.category-tag[data-category="社交"] { background: #fef08a; color: #854d0e; }
.category-tag[data-category="娱乐"] { background: #d1fae5; color: #065f46; }
.category-tag[data-category="学习"] { background: #dbeafe; color: #1e40af; }
.category-tag[data-category="创造"] { background: #e9d5ff; color: #6b21a8; }
.category-tag[data-category="自然"] { background: #fce7f3; color: #9f1239; }
.category-tag[data-category="放松"] { background: #e7e5e4; color: #57534e; }
.category-tag[data-category="生活"] { background: #f3f4f6; color: #374151; }

/* 能量等级标签 */
.energy-tag.energy-low { background: #dcfce7; color: #166534; }
.energy-tag.energy-medium { background: #fef08a; color: #854d0e; }
.energy-tag.energy-high { background: #fee2e2; color: #991b1b; }

/* 时长标签 */
.duration-tag {
  background: #e0e7ff;
  color: #3730a3;
}

/* 来源标签 */
.source-tag.source-local {
  background: #f3f4f6;
  color: #6b7280;
}

.source-tag.source-notion {
  background: #fef3c7;
  color: #92400e;
}

/* 系统默认标签 */
.system-tag {
  background: linear-gradient(135deg, #fbbf24 0%, #f59e0b 100%);
  color: white;
  font-weight: 600;
}

/* 操作按钮 */
.item-actions {
  display: flex;
  gap: 12rpx;
  margin-top: 20rpx;
  padding-top: 20rpx;
  border-top: 1rpx solid #f3f4f6;
}

.action-btn {
  flex: 1;
  text-align: center;
  padding: 16rpx;
  border-radius: 12rpx;
  font-size: 26rpx;
  transition: all 0.3s ease;
}

.action-btn.edit {
  background: #dbeafe;
  color: #1e40af;
}

.action-btn.edit:active {
  background: #bfdbfe;
}

.action-btn.delete {
  background: #fee2e2;
  color: #991b1b;
}

.action-btn.delete:active {
  background: #fecaca;
}

.action-btn.delete.disabled {
  background: #f3f4f6;
  color: #9ca3af;
  opacity: 0.6;
}

/* 备注 */
.item-notes {
  margin-top: 16rpx;
  padding: 16rpx;
  background: #f9fafb;
  border-radius: 12rpx;
  font-size: 26rpx;
  color: #6b7280;
  line-height: 1.6;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 100rpx 40rpx;
  background: white;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
}

.empty-icon {
  font-size: 120rpx;
  display: block;
  margin-bottom: 30rpx;
}

.empty-text {
  display: block;
  font-size: 32rpx;
  color: #6b7280;
  margin-bottom: 16rpx;
}

.empty-hint {
  display: block;
  font-size: 26rpx;
  color: #9ca3af;
}

/* 底部操作栏 */
.bottom-actions {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: white;
  padding: 20rpx;
  box-shadow: 0 -4rpx 12rpx rgba(0, 0, 0, 0.08);
  display: flex;
  gap: 16rpx;
}

.btn {
  flex: 1;
  height: 88rpx;
  line-height: 88rpx;
  border-radius: 16rpx;
  font-size: 30rpx;
  font-weight: 500;
  border: none;
  transition: all 0.3s ease;
}

.btn-primary {
  background: linear-gradient(135deg, #f59e0b 0%, #d97706 100%);
  color: white;
  box-shadow: 0 4rpx 12rpx rgba(245, 158, 11, 0.3);
}

.btn-primary:active {
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 8rpx rgba(245, 158, 11, 0.3);
}

.btn-secondary {
  background: linear-gradient(135deg, #6366f1 0%, #4f46e5 100%);
  color: white;
  box-shadow: 0 4rpx 12rpx rgba(99, 102, 241, 0.3);
}

.btn-secondary:active {
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 8rpx rgba(99, 102, 241, 0.3);
}

.btn-secondary[disabled] {
  opacity: 0.6;
  background: #9ca3af;
}

/* 弹窗 */
.modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
  opacity: 0;
  visibility: hidden;
  transition: all 0.3s ease;
}

.modal.show {
  opacity: 1;
  visibility: visible;
}

.modal-content {
  background: white;
  width: 90%;
  max-height: 80vh;
  border-radius: 24rpx;
  padding: 40rpx;
  overflow-y: auto;
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 40rpx;
}

.modal-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #1f2937;
}

.close-btn {
  font-size: 44rpx;
  color: #9ca3af;
  padding: 0 12rpx;
}

/* 表单 */
.form-group {
  margin-bottom: 32rpx;
}

.form-group.half {
  flex: 1;
}

.form-row {
  display: flex;
  gap: 20rpx;
}

.form-label {
  display: block;
  font-size: 28rpx;
  color: #374151;
  margin-bottom: 16rpx;
  font-weight: 500;
}

.form-input,
.picker-input {
  width: 100%;
  height: 80rpx;
  padding: 0 24rpx;
  border: 2rpx solid #e5e7eb;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #1f2937;
  background: #f9fafb;
}

.form-textarea {
  width: 100%;
  min-height: 160rpx;
  padding: 20rpx 24rpx;
  border: 2rpx solid #e5e7eb;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #1f2937;
  background: #f9fafb;
}

.picker-input {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.picker-input .arrow {
  font-size: 20rpx;
  color: #9ca3af;
}

.form-actions {
  display: flex;
  gap: 20rpx;
  margin-top: 40rpx;
}

.btn-cancel,
.btn-confirm {
  flex: 1;
  height: 88rpx;
  line-height: 88rpx;
  border-radius: 16rpx;
  font-size: 30rpx;
  font-weight: 500;
  border: none;
  text-align: center;
}

.btn-cancel {
  background: #f3f4f6;
  color: #6b7280;
}

.btn-confirm {
  background: linear-gradient(135deg, #f59e0b 0%, #d97706 100%);
  color: white;
}

.btn-confirm[disabled] {
  opacity: 0.5;
  background: #9ca3af;
}
