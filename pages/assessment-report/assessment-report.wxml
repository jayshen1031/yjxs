<!--pages/assessment-report/assessment-report.wxml-->
<view class="container">
  <!-- 标题区域 -->
  <view class="header">
    <view class="header-icon">🧭</view>
    <view class="header-title">HUMAN 3.0 评估报告</view>
    <view class="header-date">{{reportDate}}</view>
  </view>

  <!-- 报告内容 -->
  <view class="report-content" wx:if="{{report}}">
    <!-- 使用富文本展示报告 -->
    <view class="report-text">{{report}}</view>
  </view>

  <!-- 加载状态 -->
  <view class="loading" wx:if="{{isLoading}}">
    <view class="loading-icon">⏳</view>
    <view class="loading-text">加载报告中...</view>
  </view>

  <!-- 错误提示 -->
  <view class="error" wx:if="{{errorMsg}}">
    <view class="error-icon">⚠️</view>
    <view class="error-text">{{errorMsg}}</view>
  </view>

  <!-- 操作按钮 -->
  <view class="actions" wx:if="{{report}}">
    <button class="btn btn-primary" bindtap="saveReport">
      📚 保存到知识库
    </button>
    <button class="btn btn-knowledge" bindtap="viewInKnowledge">
      🔍 在知识库中查看
    </button>
    <button class="btn btn-secondary" bindtap="shareReport">
      📤 分享报告
    </button>
    <button class="btn btn-back" bindtap="backToHome">
      🏠 返回首页
    </button>
  </view>
</view>
