/* pages/assessment-report/assessment-report.wxss */

.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 40rpx 32rpx;
}

/* 标题区域 */
.header {
  text-align: center;
  margin-bottom: 40rpx;
}

.header-icon {
  font-size: 80rpx;
  margin-bottom: 16rpx;
}

.header-title {
  font-size: 48rpx;
  font-weight: bold;
  color: white;
  margin-bottom: 12rpx;
}

.header-date {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
}

/* 报告内容 */
.report-content {
  background: white;
  border-radius: 24rpx;
  padding: 40rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
}

.report-text {
  font-size: 28rpx;
  line-height: 2;
  color: #1f2937;
  white-space: pre-wrap;
  word-break: break-word;
}

/* 加载状态 */
.loading {
  text-align: center;
  padding: 120rpx 0;
}

.loading-icon {
  font-size: 80rpx;
  margin-bottom: 24rpx;
  animation: rotate 2s linear infinite;
}

@keyframes rotate {
  from {
    transform: rotate(0deg);
  }
  to {
    transform: rotate(360deg);
  }
}

.loading-text {
  font-size: 28rpx;
  color: white;
}

/* 错误提示 */
.error {
  background: rgba(239, 68, 68, 0.2);
  border: 2rpx solid rgba(239, 68, 68, 0.5);
  border-radius: 16rpx;
  padding: 40rpx;
  text-align: center;
}

.error-icon {
  font-size: 64rpx;
  margin-bottom: 16rpx;
}

.error-text {
  font-size: 28rpx;
  color: white;
}

/* 操作按钮 */
.actions {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.btn {
  height: 88rpx;
  border-radius: 16rpx;
  font-size: 28rpx;
  font-weight: bold;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
}

.btn::after {
  border: none;
}

.btn-primary {
  background: linear-gradient(135deg, #6366f1 0%, #8b5cf6 100%);
  color: white;
  box-shadow: 0 4rpx 12rpx rgba(99, 102, 241, 0.3);
}

.btn-secondary {
  background: linear-gradient(135deg, #f59e0b 0%, #d97706 100%);
  color: white;
  box-shadow: 0 4rpx 12rpx rgba(245, 158, 11, 0.3);
}

.btn-knowledge {
  background: linear-gradient(135deg, #10b981 0%, #059669 100%);
  color: white;
  box-shadow: 0 4rpx 12rpx rgba(16, 185, 129, 0.3);
}

.btn-back {
  background: white;
  color: #6366f1;
  border: 2rpx solid rgba(255, 255, 255, 0.3);
}
