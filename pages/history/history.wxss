/* 历史记录页面样式 */
.container {
  padding-bottom: 40rpx;
}

/* 页面标题 */
.page-header {
  padding: 30rpx 30rpx 20rpx;
  text-align: center;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  margin-bottom: 20rpx;
}

.page-title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
}

.page-desc {
  font-size: 24rpx;
  opacity: 0.8;
}

/* 头部区域 */
.header-section {
  background: #ffffff;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  overflow: hidden;
}

/* 日期选择器 */
.date-selector {
  padding: 24rpx;
  border-bottom: 2rpx solid #f3f4f6;
}

.date-picker {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 16rpx 20rpx;
  background: #f8fafc;
  border-radius: 12rpx;
  border: 2rpx solid #e5e7eb;
}

.date-text {
  font-size: 28rpx;
  color: #1f2937;
  font-weight: 500;
}

.date-icon {
  font-size: 24rpx;
  color: #6b7280;
}

/* 统计网格 */
.stats-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 20rpx;
  padding: 24rpx;
}

.stat-card {
  text-align: center;
  padding: 20rpx;
  background: linear-gradient(135deg, #f8fafc 0%, #e2e8f0 100%);
  border-radius: 12rpx;
  border-left: 4rpx solid #6366f1;
}

.stat-number {
  font-size: 32rpx;
  font-weight: 600;
  color: #6366f1;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 22rpx;
  color: #6b7280;
}

/* 高级筛选 */
.advanced-filter {
  background: #ffffff;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  overflow: hidden;
}

.filter-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx;
  border-bottom: 2rpx solid #f3f4f6;
}

.filter-title {
  font-size: 28rpx;
  font-weight: 500;
  color: #1f2937;
}

.filter-arrow {
  font-size: 20rpx;
  color: #6b7280;
  transition: transform 0.2s ease;
}

.filter-arrow.active {
  transform: rotate(180deg);
}

.filter-panel {
  max-height: 0;
  overflow: hidden;
  transition: max-height 0.3s ease;
}

.filter-panel.show {
  max-height: 800rpx;
}

/* 筛选组 */
.filter-group {
  padding: 24rpx;
  border-bottom: 2rpx solid #f3f4f6;
}

.filter-group:last-child {
  border-bottom: none;
}

.filter-label {
  font-size: 26rpx;
  font-weight: 500;
  color: #374151;
  margin-bottom: 16rpx;
}

/* 标签筛选 */
.tag-filter {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

.filter-tag {
  padding: 12rpx 20rpx;
  background: #f3f4f6;
  color: #6b7280;
  border-radius: 20rpx;
  font-size: 24rpx;
  transition: all 0.2s ease;
  border: 2rpx solid transparent;
}

.filter-tag.selected {
  background: #e0e7ff;
  color: #3730a3;
  border-color: #6366f1;
}

/* 时间范围筛选 */
.time-range-filter {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

.time-range-item {
  flex: 1;
  min-width: 120rpx;
  padding: 12rpx 16rpx;
  background: #f3f4f6;
  color: #6b7280;
  border-radius: 12rpx;
  font-size: 24rpx;
  text-align: center;
  transition: all 0.2s ease;
}

.time-range-item.active {
  background: #6366f1;
  color: #ffffff;
}

/* 排序选项 */
.sort-options {
  display: flex;
  gap: 12rpx;
}

.sort-option {
  flex: 1;
  padding: 12rpx 16rpx;
  background: #f3f4f6;
  color: #6b7280;
  border-radius: 12rpx;
  font-size: 24rpx;
  text-align: center;
  transition: all 0.2s ease;
}

.sort-option.active {
  background: #6366f1;
  color: #ffffff;
}

/* 记录列表 */
.memo-list {
  background: #ffffff;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  overflow: hidden;
}

/* 日期分组 */
.date-group {
  border-bottom: 2rpx solid #f3f4f6;
}

.date-group:last-child {
  border-bottom: none;
}

.date-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 24rpx;
  background: #f8fafc;
  border-bottom: 2rpx solid #e5e7eb;
}

.date-title {
  font-size: 26rpx;
  font-weight: 500;
  color: #374151;
}

.date-count {
  font-size: 22rpx;
  color: #6b7280;
}

/* 记录项 */
.memo-item {
  border-bottom: 2rpx solid #f3f4f6;
}

.memo-item:last-child {
  border-bottom: none;
}

.memo-content {
  padding: 24rpx;
  transition: background-color 0.2s ease;
}

.memo-content:active {
  background-color: #f9fafb;
}

.memo-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 12rpx;
}

.memo-type {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 20rpx;
}

.memo-type.text {
  background: #d1fae5;
}

.memo-type.voice {
  background: #fecaca;
}

.memo-type.planning {
  background: #fef3c7;
}

.memo-time {
  font-size: 24rpx;
  color: #6b7280;
  margin-left: 12rpx;
  flex: 1;
}

.memo-actions {
  display: flex;
  gap: 8rpx;
}

.action-btn {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  background: #f3f4f6;
  color: #6b7280;
  font-size: 20rpx;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.2s ease;
}

.action-btn:active {
  transform: scale(0.9);
}

.action-btn.delete {
  background: #fecaca;
  color: #991b1b;
}

.memo-text {
  font-size: 28rpx;
  line-height: 1.6;
  color: #374151;
  margin-bottom: 12rpx;
  word-wrap: break-word;
}

.memo-labels {
  display: flex;
  gap: 8rpx;
  flex-wrap: wrap;
  margin-top: 12rpx;
  margin-bottom: 8rpx;
}

.memo-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 8rpx;
}

.tag {
  padding: 4rpx 8rpx;
  background: #e0e7ff;
  color: #3730a3;
  font-size: 20rpx;
  border-radius: 8rpx;
  white-space: nowrap;
}

.tag.user-tag {
  background: #e0e7ff;
  color: #3730a3;
}

/* 时间段标签颜色 */
.tag.period-morning {
  background: #f97316;
  color: #ffffff;
}

.tag.period-forenoon {
  background: #eab308;
  color: #ffffff;
}

.tag.period-noon {
  background: #f59e0b;
  color: #ffffff;
}

.tag.period-afternoon {
  background: #3b82f6;
  color: #ffffff;
}

.tag.period-evening {
  background: #8b5cf6;
  color: #ffffff;
}

.tag.period-planning {
  background: #10b981;
  color: #ffffff;
}

.tag.period-rest {
  background: #6b7280;
  color: #ffffff;
}

/* 内容分类标签颜色 */
.tag.category-life {
  background: #10b981;
  color: #ffffff;
}

.tag.category-work {
  background: #3b82f6;
  color: #ffffff;
}

.tag.category-study {
  background: #8b5cf6;
  color: #ffffff;
}

.tag.category-growth {
  background: #f97316;
  color: #ffffff;
}

.tag.category-finance {
  background: #eab308;
  color: #ffffff;
}

.tag.category-health {
  background: #ef4444;
  color: #ffffff;
}

.tag.category-social {
  background: #ec4899;
  color: #ffffff;
}

.tag.category-goal {
  background: #a855f7;
  color: #ffffff;
}

.tag.category-idea {
  background: #6b7280;
  color: #ffffff;
}

.tag.category-mood {
  background: #06b6d4;
  color: #ffffff;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 120rpx 40rpx;
  text-align: center;
  background: #ffffff;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 32rpx;
  opacity: 0.6;
}

.empty-text {
  font-size: 28rpx;
  color: #9ca3af;
  margin-bottom: 40rpx;
  line-height: 1.5;
}

/* 加载更多 */
.load-more {
  text-align: center;
  padding: 40rpx 20rpx;
}

/* 响应式调整 */
@media (max-width: 320px) {
  .stats-grid {
    grid-template-columns: 1fr;
  }
  
  .filter-tag,
  .time-range-item,
  .sort-option {
    font-size: 22rpx;
    padding: 10rpx 16rpx;
  }
  
  .memo-header {
    flex-wrap: wrap;
    gap: 12rpx;
  }
  
  .memo-actions {
    order: 3;
    width: 100%;
    justify-content: flex-end;
  }
}