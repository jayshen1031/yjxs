/* 历史记录页面样式 */
.container {
  padding-bottom: 40rpx;
}

/* 页面标题 */
.page-header {
  padding: 30rpx 30rpx 20rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  margin-bottom: 20rpx;
}

.header-top {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.header-left {
  flex: 1;
  text-align: center;
}

.page-title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
}

.page-desc {
  font-size: 24rpx;
  opacity: 0.8;
}

.refresh-btn {
  width: 60rpx;
  height: 60rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s;
}

.refresh-btn:active {
  background: rgba(255, 255, 255, 0.4);
  transform: rotate(180deg);
}

.refresh-icon {
  font-size: 36rpx;
}

/* 头部区域 */
.header-section {
  background: #ffffff;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  overflow: hidden;
}

/* 日期选择器 */
.date-selector {
  padding: 24rpx;
  border-bottom: 2rpx solid #f3f4f6;
}

.date-picker {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 16rpx 20rpx;
  background: #f8fafc;
  border-radius: 12rpx;
  border: 2rpx solid #e5e7eb;
}

.date-text {
  font-size: 28rpx;
  color: #1f2937;
  font-weight: 500;
}

.date-icon {
  font-size: 24rpx;
  color: #6b7280;
}

/* 核心统计网格 - 只显示有价值和低效 */
.stats-grid-simple {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 24rpx;
  padding: 24rpx;
}

.stat-card {
  text-align: center;
  padding: 40rpx 20rpx;
  border-radius: 20rpx;
  box-shadow: 0 6rpx 20rpx rgba(0, 0, 0, 0.12);
  position: relative;
  overflow: hidden;
}

.stat-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, rgba(255,255,255,0.1) 0%, rgba(255,255,255,0) 100%);
  pointer-events: none;
}

.stat-card.valuable {
  background: linear-gradient(135deg, #10b981 0%, #059669 100%);
}

.stat-card.wasteful {
  background: linear-gradient(135deg, #ef4444 0%, #dc2626 100%);
}

.stat-icon {
  font-size: 48rpx;
  margin-bottom: 12rpx;
}

.stat-number {
  font-size: 56rpx;
  font-weight: bold;
  color: white;
  margin-bottom: 8rpx;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.2);
}

.stat-label {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.95);
}

/* 总计时长横幅 */
.total-time-banner {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  margin: 0 30rpx 30rpx;
  padding: 30rpx;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 16rpx rgba(102, 126, 234, 0.3);
}

.total-label {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
  margin-right: 16rpx;
}

.total-time {
  font-size: 56rpx;
  font-weight: bold;
  color: white;
  margin: 0 8rpx;
}

.total-unit {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
  margin-right: 16rpx;
}

.activity-count {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
}

/* 高级筛选 */
.advanced-filter {
  background: #ffffff;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  overflow: hidden;
}

.filter-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx;
  border-bottom: 2rpx solid #f3f4f6;
}

.filter-title {
  font-size: 28rpx;
  font-weight: 500;
  color: #1f2937;
}

.filter-arrow {
  font-size: 20rpx;
  color: #6b7280;
  transition: transform 0.2s ease;
}

.filter-arrow.active {
  transform: rotate(180deg);
}

.filter-panel {
  max-height: 0;
  overflow: hidden;
  transition: max-height 0.3s ease;
}

.filter-panel.show {
  max-height: 800rpx;
}

/* 筛选组 */
.filter-group {
  padding: 24rpx;
  border-bottom: 2rpx solid #f3f4f6;
}

.filter-group:last-child {
  border-bottom: none;
}

.filter-label {
  font-size: 26rpx;
  font-weight: 500;
  color: #374151;
  margin-bottom: 16rpx;
}

/* 标签筛选 */
.tag-filter {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

.filter-tag {
  padding: 12rpx 20rpx;
  background: #f3f4f6;
  color: #6b7280;
  border-radius: 20rpx;
  font-size: 24rpx;
  transition: all 0.2s ease;
  border: 2rpx solid transparent;
}

.filter-tag.selected {
  background: #e0e7ff;
  color: #3730a3;
  border-color: #6366f1;
}

/* 时间范围筛选 */
.time-range-filter {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

.time-range-item {
  flex: 1;
  min-width: 120rpx;
  padding: 12rpx 16rpx;
  background: #f3f4f6;
  color: #6b7280;
  border-radius: 12rpx;
  font-size: 24rpx;
  text-align: center;
  transition: all 0.2s ease;
}

.time-range-item.active {
  background: #6366f1;
  color: #ffffff;
}

/* 排序选项 */
.sort-options {
  display: flex;
  gap: 12rpx;
}

.sort-option {
  flex: 1;
  padding: 12rpx 16rpx;
  background: #f3f4f6;
  color: #6b7280;
  border-radius: 12rpx;
  font-size: 24rpx;
  text-align: center;
  transition: all 0.2s ease;
}

.sort-option.active {
  background: #6366f1;
  color: #ffffff;
}

/* 记录列表 */
.memo-list {
  background: #ffffff;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  overflow: hidden;
}

/* 日期分组 */
.date-group {
  border-bottom: 2rpx solid #f3f4f6;
}

.date-group:last-child {
  border-bottom: none;
}

.date-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 24rpx;
  background: #f8fafc;
  border-bottom: 2rpx solid #e5e7eb;
}

.date-title {
  font-size: 26rpx;
  font-weight: 500;
  color: #374151;
}

.date-count {
  font-size: 22rpx;
  color: #6b7280;
}

/* 记录项 */
.memo-item {
  border-bottom: 2rpx solid #f3f4f6;
}

.memo-item:last-child {
  border-bottom: none;
}

.memo-content {
  padding: 24rpx;
  transition: background-color 0.2s ease;
}

.memo-content:active {
  background-color: #f9fafb;
}

.memo-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 12rpx;
}

.memo-type {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 20rpx;
}

.memo-type.text,
.memo-type.voice,
.memo-type.planning {
  background: #e0e7ff;
}

.memo-time-info {
  display: flex;
  flex-direction: column;
  gap: 4rpx;
  margin-left: 12rpx;
  flex: 1;
}

.memo-time {
  font-size: 24rpx;
  color: #6b7280;
}

.time-period-main {
  font-size: 22rpx;
  color: #6366f1;
  background: #e0e7ff;
  padding: 4rpx 10rpx;
  border-radius: 10rpx;
  width: fit-content;
  font-weight: 600;
  border: 1rpx solid #c7d2fe;
}

.memo-actions {
  display: flex;
  gap: 8rpx;
}

.action-btn {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  background: #f3f4f6;
  color: #6b7280;
  font-size: 20rpx;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.2s ease;
}

.action-btn:active {
  transform: scale(0.9);
}

.action-btn.delete {
  background: #fecaca;
  color: #991b1b;
}

.memo-text {
  font-size: 28rpx;
  line-height: 1.6;
  color: #374151;
  margin-bottom: 12rpx;
  word-wrap: break-word;
}

/* 活动列表 - 统一样式 */
.activity-list {
  background: #f8fafc;
  border-radius: 12rpx;
  padding: 16rpx;
  margin: 16rpx 0;
  border-left: 4rpx solid #6366f1;
}

.activity-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 12rpx;
  padding-bottom: 8rpx;
  border-bottom: 2rpx solid #e5e7eb;
}

.activity-title {
  font-size: 24rpx;
  font-weight: 600;
  color: #1f2937;
}

.activity-count {
  font-size: 20rpx;
  color: #6366f1;
  background: #e0e7ff;
  padding: 4rpx 10rpx;
  border-radius: 10rpx;
}

.activity-item {
  display: flex;
  align-items: center;
  gap: 12rpx;
  padding: 10rpx 0;
  border-bottom: 1rpx solid rgba(14, 165, 233, 0.1);
}

.activity-item:last-child {
  border-bottom: none;
  padding-bottom: 0;
}

.activity-time {
  font-size: 20rpx;
  color: #6b7280;
  background: white;
  padding: 4rpx 8rpx;
  border-radius: 8rpx;
  white-space: nowrap;
  min-width: 140rpx;
  text-align: center;
  font-weight: 500;
}

.activity-name {
  flex: 1;
  font-size: 24rpx;
  color: #1f2937;
  font-weight: 500;
}

.activity-duration {
  font-size: 20rpx;
  color: #6366f1;
  background: white;
  padding: 4rpx 10rpx;
  border-radius: 10rpx;
  font-weight: 600;
  white-space: nowrap;
}

.memo-labels {
  display: flex;
  gap: 8rpx;
  flex-wrap: wrap;
  margin-top: 12rpx;
  margin-bottom: 8rpx;
}

.memo-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 8rpx;
}

.tag {
  padding: 4rpx 8rpx;
  background: #e0e7ff;
  color: #3730a3;
  font-size: 20rpx;
  border-radius: 8rpx;
  white-space: nowrap;
}

.tag.user-tag {
  background: #e0e7ff;
  color: #3730a3;
}

/* 统一标签颜色 - 使用靛蓝色系 */
.tag.period-morning,
.tag.period-forenoon,
.tag.period-noon,
.tag.period-afternoon,
.tag.period-evening,
.tag.period-planning,
.tag.period-rest,
.tag.category-life,
.tag.category-work,
.tag.category-study,
.tag.category-growth,
.tag.category-finance,
.tag.category-health,
.tag.category-social,
.tag.category-goal,
.tag.category-idea,
.tag.category-mood {
  background: #e0e7ff;
  color: #4338ca;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 120rpx 40rpx;
  text-align: center;
  background: #ffffff;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 32rpx;
  opacity: 0.6;
}

.empty-text {
  font-size: 28rpx;
  color: #9ca3af;
  margin-bottom: 40rpx;
  line-height: 1.5;
}

/* 加载更多 */
.load-more {
  text-align: center;
  padding: 40rpx 20rpx;
}

/* 活动列表主要展示 */
.activity-list-primary {
  background: white;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
}

.activity-list-primary .activity-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  padding-bottom: 16rpx;
  border-bottom: 2rpx solid #e5e7eb;
}

.activity-header-left {
  display: flex;
  align-items: center;
  gap: 16rpx;
  flex: 1;
  color: #1f2937;
}

.activity-period {
  font-size: 30rpx;
  font-weight: 600;
  color: #1f2937;
}

.activity-summary {
  font-size: 24rpx;
  color: #6b7280;
  background: #f3f4f6;
  padding: 8rpx 16rpx;
  border-radius: 12rpx;
}

/* 操作按钮 */
.activity-actions {
  display: flex;
  gap: 16rpx;
  align-items: center;
}

.action-btn {
  font-size: 32rpx;
  padding: 8rpx 12rpx;
  border-radius: 8rpx;
  transition: all 0.3s;
}

.edit-btn {
  background: linear-gradient(135deg, #3b82f6 0%, #2563eb 100%);
  box-shadow: 0 2rpx 8rpx rgba(59, 130, 246, 0.3);
}

.delete-btn {
  background: linear-gradient(135deg, #ef4444 0%, #dc2626 100%);
  box-shadow: 0 2rpx 8rpx rgba(239, 68, 68, 0.3);
}

.activity-list-primary .activity-item {
  display: flex;
  align-items: flex-start;
  padding: 16rpx 0;
  border-bottom: 1rpx solid #f3f4f6;
}

.activity-list-primary .activity-item:last-child {
  border-bottom: none;
}

.activity-icon {
  font-size: 32rpx;
  margin-right: 16rpx;
  flex-shrink: 0;
  color: #6366f1;
}

.activity-info {
  flex: 1;
}

.activity-name {
  font-size: 28rpx;
  color: #1f2937;
  margin-bottom: 8rpx;
  font-weight: 500;
}

.activity-meta {
  display: flex;
  gap: 16rpx;
  font-size: 24rpx;
  color: #6b7280;
}

.activity-meta .activity-time {
  color: #6b7280;
}

.activity-meta .activity-duration {
  color: #6366f1;
  font-weight: 600;
}

/* 折叠的记录详情 */
.memo-summary {
  margin-top: 20rpx;
  padding-top: 20rpx;
  border-top: 2rpx dashed #e5e7eb;
  font-size: 24rpx;
  color: #6b7280;
  line-height: 1.6;
}

.summary-label {
  font-weight: 600;
  color: #9ca3af;
  margin-right: 8rpx;
}

.summary-text {
  color: #6b7280;
}

/* 无活动明细时的降级显示 */
.memo-content-fallback {
  background: white;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
}

.memo-content-fallback .memo-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.no-activity-hint {
  margin-top: 16rpx;
  padding: 16rpx;
  background: #fef3c7;
  border-left: 4rpx solid #f59e0b;
  border-radius: 8rpx;
  font-size: 24rpx;
  color: #92400e;
}

/* 响应式调整 */
@media (max-width: 320px) {
  .stats-grid {
    grid-template-columns: 1fr;
  }

  .filter-tag,
  .time-range-item,
  .sort-option {
    font-size: 22rpx;
    padding: 10rpx 16rpx;
  }

  .memo-header {
    flex-wrap: wrap;
    gap: 12rpx;
  }

  .memo-actions {
    order: 3;
    width: 100%;
    justify-content: flex-end;
  }
}