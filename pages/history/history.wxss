/* 页面容器 */
.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #f8fafc 0%, #e0e7ff 100%);
  padding: 20rpx;
  padding-bottom: 100rpx;
}

/* 日期选择器 */
.date-selector {
  display: flex;
  align-items: center;
  justify-content: space-between;
  background: white;
  padding: 24rpx;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}

.date-btn {
  background: linear-gradient(135deg, #6366f1 0%, #8b5cf6 100%);
  color: white;
  border: none;
  padding: 16rpx 24rpx;
  border-radius: 12rpx;
  font-size: 24rpx;
  font-weight: 500;
}

.date-display {
  font-size: 32rpx;
  font-weight: 600;
  color: #1f2937;
  padding: 0 20rpx;
}

.today-btn {
  background: linear-gradient(135deg, #f59e0b 0%, #d97706 100%);
  color: white;
  border: none;
  padding: 16rpx 24rpx;
  border-radius: 12rpx;
  font-size: 24rpx;
  font-weight: 500;
}

/* 统计卡片 */
.stats-card {
  background: linear-gradient(135deg, #6366f1 0%, #8b5cf6 100%);
  padding: 24rpx;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 16rpx rgba(99, 102, 241, 0.3);
}

.stats-title {
  font-size: 28rpx;
  font-weight: 600;
  color: white;
  margin-bottom: 20rpx;
}

.stats-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 16rpx;
}

.stat-item {
  text-align: center;
  background: rgba(255, 255, 255, 0.2);
  padding: 16rpx;
  border-radius: 12rpx;
  backdrop-filter: blur(10rpx);
}

.stat-label {
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.9);
  margin-bottom: 8rpx;
}

.stat-value {
  font-size: 32rpx;
  font-weight: 700;
  color: white;
}

/* 统计数值颜色 */
.system-goal-color {
  color: #60a5fa;
}

.daily-task-color {
  color: #fbbf24;
}

.journal-color {
  color: #d1d5db;
}

/* 活动明细区域 */
.activities-section {
  background: white;
  padding: 24rpx;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #1f2937;
}

.refresh-btn {
  background: linear-gradient(135deg, #10b981 0%, #059669 100%);
  color: white;
  border: none;
  padding: 12rpx 24rpx;
  border-radius: 12rpx;
  font-size: 22rpx;
}

.refresh-btn[disabled] {
  opacity: 0.6;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 80rpx 40rpx;
}

.empty-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #6b7280;
  margin-bottom: 12rpx;
}

.empty-hint {
  font-size: 24rpx;
  color: #9ca3af;
}

/* 活动表格 */
.table-scroll {
  max-height: 800rpx;
  overflow-y: auto;
}

.activity-table {
  width: 100%;
  border-collapse: collapse;
}

.table-header {
  display: grid;
  grid-template-columns: 90rpx 90rpx 1fr 160rpx 120rpx 100rpx 120rpx;
  background: linear-gradient(135deg, #f3f4f6 0%, #e5e7eb 100%);
  padding: 16rpx 12rpx;
  border-radius: 12rpx;
  margin-bottom: 8rpx;
  position: sticky;
  top: 0;
  z-index: 10;
}

.th {
  font-size: 22rpx;
  font-weight: 600;
  color: #4b5563;
  text-align: center;
}

.table-row {
  display: grid;
  grid-template-columns: 90rpx 90rpx 1fr 160rpx 120rpx 100rpx 120rpx;
  padding: 16rpx 12rpx;
  border-bottom: 1rpx solid #f3f4f6;
  align-items: center;
}

.activity-row {
  margin-bottom: 4rpx;
  border-radius: 8rpx;
  transition: all 0.3s ease;
}

.activity-row:hover {
  background: #f9fafb;
}

/* 活动类型样式 */
.system-goal-activity {
  border-left: 4rpx solid #3b82f6;
  background: rgba(59, 130, 246, 0.05);
}

.daily-task-activity {
  border-left: 4rpx solid #f59e0b;
  background: rgba(245, 158, 11, 0.05);
}

.journal-activity {
  border-left: 4rpx solid #9ca3af;
  background: rgba(156, 163, 175, 0.05);
}

/* 表格单元格 */
.td {
  font-size: 24rpx;
  color: #374151;
  text-align: center;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.time-col {
  width: 90rpx;
}

.name-col {
  text-align: left;
  padding-left: 12rpx;
  font-weight: 500;
}

.relation-col {
  width: 160rpx;
  font-size: 22rpx;
}

.status-col {
  width: 120rpx;
  font-weight: 500;
}

.duration-col {
  width: 100rpx;
  font-weight: 600;
  color: #6366f1;
}

.action-col {
  width: 120rpx;
  display: flex;
  justify-content: center;
  gap: 8rpx;
}

/* 时间单元格 */
.time-cell {
  color: #6b7280;
  font-size: 22rpx;
}

/* 活动名称单元格 */
.activity-name-cell {
  color: #1f2937;
}

/* 关联单元格 */
.relation-cell {
  display: flex;
  flex-direction: column;
  gap: 4rpx;
  align-items: flex-start;
}

.relation-item {
  font-size: 20rpx;
  color: #6b7280;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  max-width: 100%;
}

/* 状态单元格 */
.status-cell {
  color: #10b981;
}

/* 时长单元格 */
.duration-cell {
  color: #6366f1;
  font-weight: 600;
}

/* 操作按钮 */
.action-cell {
  display: flex;
  gap: 8rpx;
  justify-content: center;
}

.action-btn {
  background: transparent;
  border: none;
  padding: 8rpx 12rpx;
  border-radius: 8rpx;
  font-size: 24rpx;
  line-height: 1;
  min-width: auto;
  min-height: auto;
}

.edit-btn {
  background: rgba(99, 102, 241, 0.1);
}

.delete-btn {
  background: rgba(239, 68, 68, 0.1);
}

/* 添加按钮容器 */
.add-button-container {
  position: fixed;
  bottom: 100rpx;
  right: 40rpx;
  z-index: 100;
}

.add-activity-btn {
  background: linear-gradient(135deg, #6366f1 0%, #8b5cf6 100%);
  color: white;
  border: none;
  padding: 24rpx 48rpx;
  border-radius: 50rpx;
  font-size: 28rpx;
  font-weight: 600;
  box-shadow: 0 8rpx 24rpx rgba(99, 102, 241, 0.4);
}

/* 提示卡片 */
.tips-card {
  background: linear-gradient(135deg, #fef3c7 0%, #fde68a 100%);
  padding: 24rpx;
  border-radius: 16rpx;
  border-left: 4rpx solid #f59e0b;
  margin-top: 20rpx;
}

.tips-title {
  font-size: 26rpx;
  font-weight: 600;
  color: #92400e;
  margin-bottom: 12rpx;
}

.tips-list {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.tip-item {
  font-size: 22rpx;
  color: #78350f;
  line-height: 1.6;
}

/* Modal 对话框 */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.add-activity-modal {
  background: white;
  width: 90%;
  max-width: 600rpx;
  border-radius: 24rpx;
  overflow: hidden;
  box-shadow: 0 24rpx 48rpx rgba(0, 0, 0, 0.2);
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx;
  background: linear-gradient(135deg, #6366f1 0%, #8b5cf6 100%);
}

.modal-title {
  font-size: 32rpx;
  font-weight: 600;
  color: white;
}

.close-btn {
  background: transparent;
  color: white;
  border: none;
  font-size: 48rpx;
  line-height: 1;
  padding: 0;
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.modal-body {
  padding: 40rpx;
}

.coming-soon {
  text-align: center;
  font-size: 28rpx;
  color: #6b7280;
  padding: 60rpx 0;
}
