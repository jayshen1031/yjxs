.container {
  padding: 40rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  min-height: 100vh;
}

.header {
  text-align: center;
  margin-bottom: 40rpx;
}

.title {
  font-size: 48rpx;
  font-weight: bold;
  color: white;
  margin-bottom: 16rpx;
}

.subtitle {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
}

.info-card {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.1);
}

.info-row {
  display: flex;
  margin-bottom: 20rpx;
}

.info-row:last-child {
  margin-bottom: 0;
}

.label {
  font-size: 28rpx;
  color: #666;
  min-width: 160rpx;
}

.value {
  font-size: 28rpx;
  color: #333;
  flex: 1;
  word-break: break-all;
}

.value.small {
  font-size: 24rpx;
  color: #999;
}

.description {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.1);
}

.desc-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.desc-content {
  font-size: 28rpx;
  color: #666;
  line-height: 1.8;
  white-space: pre-line;
}

.action-section {
  margin-top: 40rpx;
}

.fix-btn {
  width: 100%;
  height: 96rpx;
  background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
  color: white;
  font-size: 32rpx;
  font-weight: bold;
  border-radius: 48rpx;
  border: none;
  box-shadow: 0 8rpx 24rpx rgba(245, 87, 108, 0.3);
}

.fix-btn[disabled] {
  background: #ccc;
  box-shadow: none;
}

.result-box {
  background: white;
  border-radius: 20rpx;
  padding: 40rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.1);
  font-size: 28rpx;
  line-height: 1.8;
  white-space: pre-line;
}

.result-box.success {
  border-left: 8rpx solid #52c41a;
  color: #52c41a;
}

.result-box.error {
  border-left: 8rpx solid #f5222d;
  color: #f5222d;
}

.reset-btn {
  width: 100%;
  height: 80rpx;
  background: white;
  color: #667eea;
  font-size: 28rpx;
  border-radius: 40rpx;
  border: 2rpx solid #667eea;
}
