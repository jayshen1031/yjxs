/* 容器 */
.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #f8fafc 0%, #e0e7ff 100%);
  padding: 40rpx 0 180rpx;
}

/* ========== 步骤指示器 ========== */
.steps-indicator {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 40rpx 40rpx 60rpx;
  background: white;
  margin: 0 30rpx 40rpx;
  border-radius: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
}

.step-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 0 0 auto;
}

.step-number {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background: #e2e8f0;
  color: #94a3b8;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  font-weight: bold;
  margin-bottom: 12rpx;
  transition: all 0.3s ease;
}

.step-item.active .step-number {
  background: linear-gradient(135deg, #6366f1 0%, #8b5cf6 100%);
  color: white;
  transform: scale(1.1);
}

.step-item.completed .step-number {
  background: #10b981;
  color: white;
}

.step-label {
  font-size: 22rpx;
  color: #64748b;
  text-align: center;
}

.step-item.active .step-label {
  color: #6366f1;
  font-weight: 600;
}

.step-line {
  flex: 1;
  height: 4rpx;
  background: #e2e8f0;
  margin: 0 12rpx;
  margin-bottom: 32rpx;
  transition: all 0.3s ease;
}

.step-line.completed {
  background: #10b981;
}

/* ========== 步骤内容 ========== */
.step-content {
  padding: 0 30rpx;
  animation: slideIn 0.3s ease;
}

@keyframes slideIn {
  from {
    opacity: 0;
    transform: translateX(20rpx);
  }
  to {
    opacity: 1;
    transform: translateX(0);
  }
}

.step-header {
  text-align: center;
  margin-bottom: 48rpx;
}

.step-title {
  font-size: 40rpx;
  font-weight: bold;
  color: #1e293b;
  display: block;
  margin-bottom: 16rpx;
}

.step-desc {
  font-size: 28rpx;
  color: #64748b;
  display: block;
}

/* ========== 表单区域 ========== */
.form-section {
  background: white;
  border-radius: 24rpx;
  padding: 40rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
}

.form-item {
  margin-bottom: 40rpx;
}

.form-item:last-child {
  margin-bottom: 0;
}

.form-label {
  display: block;
  font-size: 28rpx;
  color: #1e293b;
  font-weight: 600;
  margin-bottom: 16rpx;
}

.form-input {
  width: 100%;
  padding: 24rpx;
  background: #f8fafc;
  border: 2rpx solid #e2e8f0;
  border-radius: 16rpx;
  font-size: 30rpx;
  color: #1e293b;
  transition: all 0.3s ease;
}

.form-input:focus {
  background: white;
  border-color: #6366f1;
  box-shadow: 0 0 0 4rpx rgba(99, 102, 241, 0.1);
}

.form-textarea {
  width: 100%;
  min-height: 180rpx;
  padding: 24rpx;
  background: #f8fafc;
  border: 2rpx solid #e2e8f0;
  border-radius: 16rpx;
  font-size: 28rpx;
  color: #1e293b;
  line-height: 1.6;
}

.password-wrapper {
  position: relative;
}

.password-input {
  padding-right: 100rpx;
}

.password-toggle {
  position: absolute;
  right: 24rpx;
  top: 50%;
  transform: translateY(-50%);
  font-size: 36rpx;
  cursor: pointer;
}

.form-hint {
  font-size: 24rpx;
  color: #64748b;
  margin-top: 12rpx;
  display: block;
}

.form-hint.error {
  color: #ef4444;
}

/* ========== Notion引导区域 ========== */
.guide-section {
  background: white;
  border-radius: 24rpx;
  padding: 40rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
}

.guide-card {
  background: linear-gradient(135deg, #f0f9ff 0%, #e0f2fe 100%);
  border-radius: 20rpx;
  padding: 32rpx;
  margin-bottom: 40rpx;
}

.guide-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #0369a1;
  margin-bottom: 24rpx;
  display: block;
}

.guide-steps {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.guide-step {
  display: flex;
  gap: 20rpx;
}

.step-num {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #6366f1 0%, #8b5cf6 100%);
  color: white;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  font-weight: bold;
  flex-shrink: 0;
}

.step-content-text {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.step-title-text {
  font-size: 28rpx;
  font-weight: 600;
  color: #1e293b;
}

.step-desc-text {
  font-size: 26rpx;
  color: #64748b;
  line-height: 1.6;
}

.step-link {
  font-size: 26rpx;
  color: #6366f1;
  text-decoration: underline;
  word-break: break-all;
}

.test-btn {
  width: 100%;
  padding: 28rpx;
  background: linear-gradient(135deg, #10b981 0%, #059669 100%);
  color: white;
  border-radius: 16rpx;
  font-size: 30rpx;
  font-weight: 600;
  border: none;
  margin-top: 24rpx;
}

.test-btn:disabled {
  background: #e2e8f0;
  color: #94a3b8;
}

.test-result {
  display: block;
  text-align: center;
  margin-top: 24rpx;
  padding: 20rpx;
  border-radius: 12rpx;
  font-size: 28rpx;
}

.test-result.success {
  background: #d1fae5;
  color: #065f46;
}

.test-result.error {
  background: #fee2e2;
  color: #991b1b;
}

/* ========== 数据库区域 ========== */
.database-section {
  background: white;
  border-radius: 24rpx;
  padding: 40rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
}

.database-info {
  margin-bottom: 40rpx;
}

.info-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #1e293b;
  margin-bottom: 24rpx;
  display: block;
}

.database-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.database-item {
  display: flex;
  align-items: center;
  gap: 20rpx;
  padding: 24rpx;
  background: #f8fafc;
  border-radius: 16rpx;
  border: 2rpx solid #e2e8f0;
  transition: all 0.3s ease;
}

.database-item.created {
  background: linear-gradient(135deg, #d1fae5 0%, #a7f3d0 100%);
  border-color: #10b981;
}

.db-icon {
  font-size: 36rpx;
}

.db-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.db-name {
  font-size: 28rpx;
  font-weight: 600;
  color: #1e293b;
}

.db-desc {
  font-size: 24rpx;
  color: #64748b;
}

.db-status {
  font-size: 24rpx;
  color: #6366f1;
}

.db-status.success {
  color: #10b981;
  font-weight: 600;
}

.creation-progress {
  margin-bottom: 32rpx;
}

.progress-bar {
  width: 100%;
  height: 16rpx;
  background: #e2e8f0;
  border-radius: 8rpx;
  overflow: hidden;
  margin-bottom: 16rpx;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #6366f1 0%, #8b5cf6 100%);
  transition: width 0.3s ease;
}

.progress-text {
  font-size: 26rpx;
  color: #64748b;
  text-align: center;
  display: block;
}

.create-btn {
  width: 100%;
  padding: 28rpx;
  background: linear-gradient(135deg, #6366f1 0%, #8b5cf6 100%);
  color: white;
  border-radius: 16rpx;
  font-size: 30rpx;
  font-weight: 600;
  border: none;
}

.create-btn:disabled {
  background: #e2e8f0;
  color: #94a3b8;
}

.success-message {
  text-align: center;
  padding: 40rpx;
}

.success-icon {
  font-size: 80rpx;
  color: #10b981;
  display: block;
  margin-bottom: 16rpx;
}

.success-text {
  font-size: 32rpx;
  font-weight: bold;
  color: #065f46;
}

/* ========== 完成区域 ========== */
.completion-section {
  display: flex;
  flex-direction: column;
  gap: 40rpx;
}

.success-card {
  background: linear-gradient(135deg, #d1fae5 0%, #a7f3d0 100%);
  border-radius: 24rpx;
  padding: 60rpx 40rpx;
  text-align: center;
}

.success-icon-large {
  font-size: 120rpx;
  color: #10b981;
  display: block;
  margin-bottom: 24rpx;
}

.success-title {
  font-size: 44rpx;
  font-weight: bold;
  color: #065f46;
  display: block;
  margin-bottom: 16rpx;
}

.success-desc {
  font-size: 28rpx;
  color: #047857;
  line-height: 1.6;
}

.next-steps {
  background: white;
  border-radius: 24rpx;
  padding: 40rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
}

.next-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #1e293b;
  margin-bottom: 24rpx;
  display: block;
}

.next-item {
  display: flex;
  align-items: center;
  gap: 24rpx;
  padding: 28rpx;
  background: #f8fafc;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  transition: all 0.2s ease;
}

.next-item:active {
  transform: scale(0.98);
  background: #e0e7ff;
}

.next-icon {
  font-size: 48rpx;
}

.next-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.next-name {
  font-size: 30rpx;
  font-weight: 600;
  color: #1e293b;
}

.next-desc {
  font-size: 24rpx;
  color: #64748b;
}

/* ========== 底部按钮 ========== */
.bottom-actions {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: white;
  padding: 24rpx 30rpx;
  padding-bottom: calc(24rpx + env(safe-area-inset-bottom));
  box-shadow: 0 -4rpx 12rpx rgba(0, 0, 0, 0.08);
  display: flex;
  gap: 20rpx;
}

.btn-secondary {
  flex: 1;
  padding: 28rpx;
  background: #f1f5f9;
  color: #64748b;
  border-radius: 16rpx;
  font-size: 30rpx;
  font-weight: 600;
  border: none;
}

.btn-primary {
  flex: 2;
  padding: 28rpx;
  background: linear-gradient(135deg, #6366f1 0%, #8b5cf6 100%);
  color: white;
  border-radius: 16rpx;
  font-size: 30rpx;
  font-weight: 600;
  border: none;
}

.btn-primary:disabled {
  background: #e2e8f0;
  color: #94a3b8;
}

.btn-primary.full-width {
  flex: 1;
  width: 100%;
}

/* ========== 返回登录 ========== */
.back-to-login {
  text-align: center;
  margin-top: 32rpx;
  padding: 0 30rpx;
}

.back-to-login text {
  font-size: 28rpx;
  color: #6366f1;
  text-decoration: underline;
}

/* ========== 步骤2：Notion账户准备 ========== */
.account-check-section {
  margin-top: 32rpx;
}

.check-card {
  background: white;
  border-radius: 20rpx;
  padding: 48rpx 40rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
  margin-bottom: 32rpx;
}

.check-question {
  display: block;
  font-size: 32rpx;
  font-weight: 600;
  color: #1f2937;
  text-align: center;
  margin-bottom: 40rpx;
}

.option-buttons {
  display: flex;
  gap: 24rpx;
}

.option-btn {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 40rpx 20rpx;
  border-radius: 16rpx;
  border: 3rpx solid #e5e7eb;
  background: #f9fafb;
  transition: all 0.3s ease;
}

.option-btn.selected {
  border-color: #6366f1;
  background: linear-gradient(135deg, #eef2ff 0%, #e0e7ff 100%);
  box-shadow: 0 4rpx 16rpx rgba(99, 102, 241, 0.2);
}

.option-icon {
  font-size: 56rpx;
  margin-bottom: 16rpx;
}

.option-text {
  font-size: 28rpx;
  font-weight: 500;
  color: #374151;
}

.option-btn.selected .option-text {
  color: #6366f1;
  font-weight: 600;
}

/* 注册引导 */
.signup-guide {
  margin-top: 32rpx;
  animation: fadeIn 0.4s ease;
}

@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.guide-card.highlight {
  border-left: 6rpx solid #f59e0b;
  background: linear-gradient(135deg, #fffbeb 0%, #fef3c7 100%);
}

.step-hint {
  font-size: 22rpx;
  color: #9ca3af;
  margin-top: 8rpx;
  font-style: italic;
}

.highlight-email {
  color: #6366f1;
  font-weight: 600;
  padding: 4rpx 12rpx;
  background: rgba(99, 102, 241, 0.1);
  border-radius: 8rpx;
}

.tip-box {
  display: flex;
  align-items: center;
  gap: 16rpx;
  background: white;
  border-radius: 12rpx;
  padding: 24rpx;
  margin-top: 32rpx;
  border: 2rpx solid #fbbf24;
}

.tip-icon {
  font-size: 36rpx;
}

.tip-text {
  flex: 1;
  font-size: 26rpx;
  color: #92400e;
  line-height: 1.6;
}

/* 账户已准备 */
.account-ready {
  margin-top: 32rpx;
  animation: fadeIn 0.4s ease;
}

.ready-card {
  background: linear-gradient(135deg, #d1fae5 0%, #a7f3d0 100%);
  border-radius: 20rpx;
  padding: 60rpx 40rpx;
  text-align: center;
  box-shadow: 0 4rpx 16rpx rgba(16, 185, 129, 0.2);
}

.ready-icon {
  font-size: 80rpx;
  display: block;
  margin-bottom: 24rpx;
}

.ready-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #065f46;
  display: block;
  margin-bottom: 16rpx;
}

.ready-desc {
  font-size: 26rpx;
  color: #047857;
  line-height: 1.6;
  display: block;
}

/* ========== 父页面配置 ========== */
.parent-page-section {
  margin-top: 40rpx;
  padding-top: 40rpx;
  border-top: 2rpx dashed #e5e7eb;
}

.highlight-text {
  color: #6366f1;
  font-weight: bold;
  padding: 4rpx 8rpx;
  background: #eef2ff;
  border-radius: 4rpx;
}
