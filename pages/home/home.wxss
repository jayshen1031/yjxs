  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.today-todos-section .action-link {
  display: flex;
  align-items: center;
  gap: 8rpx;
  font-size: 26rpx;
  color: #6366f1;
}

.todo-item {
  display: flex;
  gap: 16rpx;
  padding: 20rpx;
  background: #f8fafc;
  border-radius: 12rpx;
  margin-bottom: 12rpx;
  transition: all 0.3s ease;
}

.todo-item:active {
  background: #f1f5f9;
}

.todo-checkbox {
  flex-shrink: 0;
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.todo-checkbox .icon {
  font-size: 32rpx;
  color: #94a3b8;
}

.todo-checkbox .icon.checked {
  color: #10b981;
  font-size: 36rpx;
}

.todo-content {
  flex: 1;
}

.todo-title {
  font-size: 28rpx;
  color: #1e293b;
  font-weight: 500;
  margin-bottom: 8rpx;
  word-break: break-all;
}

.todo-title.completed {
  text-decoration: line-through;
  color: #94a3b8;
}

.todo-meta {
  display: flex;
  gap: 8rpx;
  flex-wrap: wrap;
}

.todo-type-tag,
.todo-priority-tag,
.todo-time-tag {
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
  font-size: 20rpx;
}

.todo-type-tag {
  background: #dbeafe;
  color: #2563eb;
}

.todo-priority-tag.priority-urgent {
  background: #fee2e2;
  color: #dc2626;
}

.todo-priority-tag.priority-important {
  background: #fef3c7;
  color: #d97706;
}

.todo-priority-tag.priority-medium {
  background: #fed7aa;
  color: #ea580c;
}

.todo-priority-tag.priority-low {
  background: #f3f4f6;
  color: #9ca3af;
}

.todo-time-tag {
  background: #e0e7ff;
  color: #6366f1;
}

.todos-summary {
  display: flex;
  gap: 24rpx;
  padding: 20rpx;
  margin-top: 16rpx;
  background: #f1f5f9;
  border-radius: 12rpx;
  justify-content: space-around;
}

.summary-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
}

.summary-item .label {
  font-size: 22rpx;
  color: #64748b;
}

.summary-item .value {
  font-size: 32rpx;
  font-weight: bold;
  color: #1e293b;
}

.today-todos-section .empty-state {
  padding: 60rpx 24rpx;
}

.today-todos-section .hint {
  font-size: 22rpx;
  color: #94a3b8;
  margin-top: 12rpx;
}