  color: #ffffff;
}

.tag.category-idea {
  background: #6b7280;  /* 灰色 - 想法 */
  color: #ffffff;
}

.tag.category-mood {
  background: #06b6d4;  /* 青色 - 心情 */
  color: #ffffff;
}

/* 响应式调整 */
@media (max-width: 320px) {
  .grid-2 .grid-item {
    flex-basis: 100%;
  }
  
  .quote-text {
    font-size: 28rpx;
  }
  
  .stat-number {
    font-size: 40rpx;
  }
  
  .planning-header {
    flex-direction: column;
    align-items: flex-start;
    gap: 8rpx;
  }
}

/* 准点提醒样式 */
.reminder-info {
  margin-top: 20rpx;
  padding: 16rpx;
  background: #f8fafc;
  border-radius: 12rpx;
  border-left: 4rpx solid #6366f1;
}

.reminder-time-range {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 12rpx;
}

.time-badge {
  background: #6366f1;
  color: white;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
  font-size: 24rpx;
  font-weight: 500;
}

.time-separator {
  margin: 0 16rpx;
  color: #6b7280;
  font-size: 28rpx;
  font-weight: bold;
}

.reminder-desc {
  display: block;
  font-size: 26rpx;
  color: #374151;
  text-align: center;
  margin-bottom: 8rpx;
}

.reminder-note {
  display: block;
  font-size: 22rpx;
  color: #6b7280;
  text-align: center;
}

/* 今日待办 */
.today-todos-section .section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.today-todos-section .action-link {
  display: flex;
  align-items: center;
  gap: 8rpx;
  font-size: 26rpx;
  color: #6366f1;
}

.todo-item {
  display: flex;
  gap: 16rpx;
  padding: 20rpx;
  background: #f8fafc;
  border-radius: 12rpx;
  margin-bottom: 12rpx;
  transition: all 0.3s ease;
}

.todo-item:active {
  background: #f1f5f9;
}

.todo-checkbox {
  flex-shrink: 0;
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.todo-checkbox .icon {
  font-size: 32rpx;
  color: #94a3b8;
}

.todo-checkbox .icon.checked {
  color: #10b981;
  font-size: 36rpx;
}

.todo-content {
  flex: 1;
}

.todo-title {
  font-size: 28rpx;
  color: #1e293b;
  font-weight: 500;
  margin-bottom: 8rpx;
  word-break: break-all;
}

.todo-title.completed {
  text-decoration: line-through;
  color: #94a3b8;
}

.todo-meta {
  display: flex;
  gap: 8rpx;
  flex-wrap: wrap;
}

.todo-type-tag,
.todo-priority-tag,
.todo-time-tag {
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
  font-size: 20rpx;
}

.todo-type-tag {
  background: #dbeafe;
  color: #2563eb;
}

.todo-priority-tag.priority-urgent {
  background: #fee2e2;
  color: #dc2626;
}

.todo-priority-tag.priority-important {
  background: #fef3c7;
  color: #d97706;
}

.todo-priority-tag.priority-medium {
  background: #fed7aa;
  color: #ea580c;
}

.todo-priority-tag.priority-low {
  background: #f3f4f6;
  color: #9ca3af;
}

.todo-time-tag {
  background: #e0e7ff;
  color: #6366f1;
}

.todos-summary {
  display: flex;
  gap: 24rpx;
  padding: 20rpx;
  margin-top: 16rpx;
  background: #f1f5f9;
  border-radius: 12rpx;
  justify-content: space-around;
}

.summary-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
}

.summary-item .label {
  font-size: 22rpx;
  color: #64748b;
}

.summary-item .value {
  font-size: 32rpx;
  font-weight: bold;
  color: #1e293b;
}

.today-todos-section .empty-state {
  padding: 60rpx 24rpx;
}

.today-todos-section .hint {
  font-size: 22rpx;
  color: #94a3b8;
  margin-top: 12rpx;
}

/* 进行中待办样式 ⭐ */
.in-progress-todos {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.todo-item-home {
  padding: 20rpx;
  background: linear-gradient(135deg, #fef3c7 0%, #fed7aa 100%);
  border-radius: 16rpx;
  border-left: 4rpx solid #f59e0b;
  transition: all 0.3s ease;
}

.todo-item-home:active {
  transform: scale(0.98);
  opacity: 0.9;
}

.todo-header-home {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
}

.todo-title-home {
  font-size: 30rpx;
  font-weight: 600;
  color: #92400e;
  flex: 1;
}

.todo-type-badge {
  font-size: 22rpx;
  color: #d97706;
  background: rgba(255, 255, 255, 0.6);
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
}

.todo-progress-info {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 12rpx;
}

.progress-text {
  font-size: 24rpx;
  color: #92400e;
}

.progress-percentage {
  font-size: 26rpx;
  font-weight: 600;
  color: #f59e0b;
  margin-left: auto;
}

.progress-bar-home {
  height: 8rpx;
  background: rgba(255, 255, 255, 0.5);
  border-radius: 4rpx;
  overflow: hidden;
}

.progress-fill-home {
  height: 100%;
  transition: width 0.3s ease;
  border-radius: 4rpx;
}

.empty-tip {
  text-align: center;
  padding: 40rpx;
  font-size: 26rpx;
  color: #94a3b8;
}

/* ==================== HUMAN 3.0 评估卡片 ==================== */

.human30-card {
  background: linear-gradient(135deg, #ede9fe 0%, #ddd6fe 100%);
  border-radius: 24rpx;
  padding: 32rpx;
  margin: 30rpx 30rpx;
  box-shadow: 0 4rpx 16rpx rgba(139, 92, 246, 0.15);
  border-left: 6rpx solid #8b5cf6;
  transition: all 0.3s ease;
}

.human30-card:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 8rpx rgba(139, 92, 246, 0.1);
}

.human30-header {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.human30-icon {
  font-size: 56rpx;
  margin-right: 16rpx;
}

.human30-title {
  font-size: 36rpx;
  font-weight: bold;
  background: linear-gradient(135deg, #8b5cf6 0%, #6366f1 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

.human30-desc {
  font-size: 26rpx;
  color: #6b21a8;
  line-height: 1.6;
  margin-bottom: 24rpx;
}

.human30-actions {
  display: flex;
  gap: 16rpx;
  margin-bottom: 20rpx;
}

.human30-btn {
  flex: 1;
  height: 72rpx;
  border-radius: 16rpx;
  font-size: 28rpx;
  font-weight: bold;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.2s ease;
}

.human30-btn-primary {
  background: linear-gradient(135deg, #8b5cf6 0%, #6366f1 100%);
  color: white;
  box-shadow: 0 4rpx 12rpx rgba(99, 102, 241, 0.3);
}

.human30-btn-primary:active {
  box-shadow: 0 2rpx 6rpx rgba(99, 102, 241, 0.2);
}

.human30-btn-secondary {
  background: white;
  color: #8b5cf6;
  border: 2rpx solid #8b5cf6;
}

.human30-status {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx 20rpx;
  background: rgba(255, 255, 255, 0.6);
  border-radius: 12rpx;
  margin-top: 16rpx;
}

.status-text {
  font-size: 24rpx;
  color: #7c3aed;
}

.status-type {
  font-size: 24rpx;
  font-weight: bold;
  color: #6366f1;
}

/* ⭐ 今日有价值投入样式 */
.value-activities-card {
  margin-bottom: 30rpx;
}

.value-total {
  display: flex;
  align-items: baseline;
  gap: 4rpx;
}

.total-minutes {
  font-size: 40rpx;
  font-weight: bold;
  color: #6366f1;
  background: linear-gradient(135deg, #6366f1 0%, #8b5cf6 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
}

.total-unit {
  font-size: 24rpx;
  color: #64748b;
}

.value-activities-list {
  margin-top: 20rpx;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.value-activity-item {
  display: flex;
  align-items: flex-start;
  gap: 16rpx;
  padding: 16rpx;
  background: linear-gradient(135deg, #f8fafc 0%, #f1f5f9 100%);
  border-radius: 12rpx;
  border-left: 4rpx solid #6366f1;
  transition: all 0.3s ease;
}

.value-activity-item:active {
  background: #e2e8f0;
  transform: scale(0.98);
}

.activity-time {
  font-size: 24rpx;
  color: #6366f1;
  font-weight: 600;
  min-width: 80rpx;
  padding-top: 2rpx;
}

.activity-content {
  flex: 1;
  min-width: 0;
}

.activity-name {
  font-size: 28rpx;
  color: #1f2937;
  font-weight: 500;
  margin-bottom: 8rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.activity-meta {
  display: flex;
  align-items: center;
  gap: 12rpx;
  flex-wrap: wrap;
}

.activity-duration {
  font-size: 24rpx;
  color: #6366f1;
  background: rgba(99, 102, 241, 0.1);
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
  font-weight: 500;
}

.activity-type {
  font-size: 22rpx;
  color: #64748b;
  background: #e5e7eb;
  padding: 4rpx 10rpx;
  border-radius: 8rpx;
}

/* 空状态样式 */
.value-activities-card .empty-state {
  padding: 60rpx 20rpx;
  text-align: center;
}

.empty-icon {
  font-size: 80rpx;
  opacity: 0.5;
  margin-bottom: 16rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #64748b;
  margin-bottom: 8rpx;
}

.empty-hint {
  font-size: 24rpx;
  color: #9ca3af;
}