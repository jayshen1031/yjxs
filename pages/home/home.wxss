  .grid-2 .grid-item {
    flex-basis: 100%;
  }
  
  .quote-text {
    font-size: 28rpx;
  }
  
  .stat-number {
    font-size: 40rpx;
  }
  
  .planning-header {
    flex-direction: column;
    align-items: flex-start;
    gap: 8rpx;
  }
}

/* 准点提醒样式 */
.reminder-info {
  margin-top: 20rpx;
  padding: 16rpx;
  background: #f8fafc;
  border-radius: 12rpx;
  border-left: 4rpx solid #6366f1;
}

.reminder-time-range {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 12rpx;
}

.time-badge {
  background: #6366f1;
  color: white;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
  font-size: 24rpx;
  font-weight: 500;
}

.time-separator {
  margin: 0 16rpx;
  color: #6b7280;
  font-size: 28rpx;
  font-weight: bold;
}

.reminder-desc {
  display: block;
  font-size: 26rpx;
  color: #374151;
  text-align: center;
