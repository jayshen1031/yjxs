.interval-setting {
  margin-top: 16rpx;
}

.interval-label {
  font-size: 26rpx;
  color: #6b7280;
  margin-bottom: 12rpx;
  display: block;
}

.slider {
  margin: 16rpx 0;
}

/* 空状态优化 */
.empty-state {
  padding: 60rpx 20rpx;
}

.empty-state .icon {
  font-size: 100rpx;
  opacity: 0.6;
  margin-bottom: 20rpx;
}

.empty-state .text {
  font-size: 26rpx;
  color: #9ca3af;
  line-height: 1.5;
}

/* 规划相关样式 */
.planning-highlight {
  border: 2rpx solid #f59e0b;
  background: linear-gradient(135deg, #fef3c7 0%, #fed7aa 100%);
}

.planning-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 16rpx;
}

.planning-date {
  font-size: 22rpx;
  color: #92400e;
  background: rgba(245, 158, 11, 0.2);
  padding: 6rpx 12rpx;
  border-radius: 12rpx;
}

.planning-content {
  margin-bottom: 16rpx;
}

.planning-text {
  font-size: 28rpx;
  line-height: 1.6;
  color: #92400e;
  font-weight: 500;
}

.planning-meta {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.tag.planning {
  background: #f59e0b;
  color: #ffffff;
}

.btn-planning {
  width: 100%;
  background: linear-gradient(135deg, #f59e0b 0%, #d97706 100%);
  color: #ffffff;
  border-radius: 12rpx;
  padding: 16rpx 32rpx;
  font-size: 28rpx;
  border: none;
  box-shadow: 0 4rpx 12rpx rgba(245, 158, 11, 0.3);
}

.btn-planning:active {
  opacity: 0.8;
  transform: scale(0.98);
}

