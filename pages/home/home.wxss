/* 响应式调整 */
@media (max-width: 320px) {
  .grid-2 .grid-item {
    flex-basis: 100%;
  }
  
  .quote-text {
    font-size: 28rpx;
  }
  
  .stat-number {
    font-size: 40rpx;
  }
  
  .planning-header {
    flex-direction: column;
    align-items: flex-start;
    gap: 8rpx;
  }
}